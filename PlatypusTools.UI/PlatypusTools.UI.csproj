<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <!-- Target .NET 10 for long-term support; requires .NET 10 SDK to build locally -->
    <TargetFramework>net10.0-windows10.0.19041.0</TargetFramework>
    <AllowMissingPrunePackageData>true</AllowMissingPrunePackageData>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>true</SelfContained>
  </PropertyGroup>
  <ItemGroup>
    <FrameworkReference Include="Microsoft.WindowsDesktop.App.WindowsForms" />
    <Reference Include="WindowsFormsIntegration">
      <HintPath>C:\Program Files\dotnet\shared\Microsoft.WindowsDesktop.App\10.0.3\WindowsFormsIntegration.dll</HintPath>
    </Reference>
  </ItemGroup>
    <!-- Removed explicit <Page> entries for Views/*.xaml; SDK includes them by default -->
  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>PlatypusTools.UI</RootNamespace>
    <Version>3.4.0.9</Version>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.3719.77" />
    <!-- LibVLCSharp for universal video playback (plays any format without external dependencies) -->
    <PackageReference Include="LibVLCSharp" Version="3.9.5" />
    <PackageReference Include="LibVLCSharp.WPF" Version="3.9.5" />
    <PackageReference Include="NAudio" Version="2.2.1" />
    <PackageReference Include="TagLibSharp" Version="2.3.0" />
    <PackageReference Include="VideoLAN.LibVLC.Windows" Version="3.0.23" />
    <!-- SkiaSharp for high-performance HD audio visualizer rendering -->
    <PackageReference Include="SkiaSharp" Version="3.119.0" />
    <PackageReference Include="SkiaSharp.Views.WPF" Version="3.119.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\PlatypusTools.Core\PlatypusTools.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Resource Include="Assets\platypus.png" />
    <Resource Include="Assets\PlatypusToolsLogo.png" />
    <Resource Include="Assets\file.png" />
    <Resource Include="Assets\folder.png" />
    <Resource Include="Assets\Klingon.png" />
    <Resource Include="Assets\Klingon_Transparent.png" />
    <Resource Include="Assets\Klingonrevised.png" />
    <Resource Include="Assets\KlingonwithGold.png" />
    <Resource Include="Assets\KlingonGlowLogo.png" />
    <Resource Include="Assets\FederationGlowLogo.png" />
    <Resource Include="Assets\FederationLogoTransparent.png" />
    <Resource Include="Assets\lightsaber.png" />
    <!-- Time Lord images -->
    <Resource Include="Assets\TimeVortex.png" />
    <Resource Include="Assets\Tardis.png" />
    <!-- Stargate images -->
    <Resource Include="Assets\STARGATE.png" />
    <Resource Include="Assets\SGU1NB.png" />
    <Resource Include="Assets\SGU2NB.png" />
    <Resource Include="Assets\SGU3NB.png" />
    <Resource Include="Assets\SGU4NB.png" />
    <Resource Include="Assets\SGU5NB.png" />
    <Resource Include="Assets\SGU6NB.png" />
    <Resource Include="Assets\SGU7NB.png" />
    <Resource Include="Assets\SGU8NB.png" />
    <Resource Include="Assets\SGU9NB.png" />
    <Resource Include="Assets\SGU10NB.png" />
    <Resource Include="Assets\SGU11NB.png" />
    <Resource Include="Assets\SGU12NB.png" />
    <Resource Include="Assets\SGUDialing1.png" />
    <!-- New logo for header -->
    <Content Include="Assets\PlatypusToolsLogo.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <!-- Theme Fonts - included for distribution -->
    <Content Include="Assets\KlingonFont.ttf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\monofonto.otf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Okuda.otf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Okuda Bold.otf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Okuda Italic.otf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Okuda Bold Italic.otf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Overseer.otf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Overseer Bold.otf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Overseer Italic.otf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\Overseer Bold Italic.otf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Resource Include="Assets\KlingonFont.ttf" />
    <Content Include="Assets\PlatypusTools_Help.html">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\platypus_swimming.mp4">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\PlatypusToolsIntro.mp4">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <Content Include="Themes\Dark.xaml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Themes\Light.xaml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Themes\Glass.xaml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Themes\LCARS.xaml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Themes\PipBoy.xaml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Themes\PipBoy.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Themes\Klingon.xaml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  
  <!-- Include Shotcut video editor -->
  <ItemGroup>
    <Content Include="Shotcut\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>Shotcut\%(RecursiveDir)%(Filename)%(Extension)</Link>
    </Content>
  </ItemGroup>

  <!-- Ensure LibVLC native DLLs are copied to publish output -->
  <Target Name="CopyLibVLCToPublish" AfterTargets="Publish">
    <ItemGroup>
      <LibVLCFiles Include="$(OutDir)libvlc\win-x64\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(LibVLCFiles)" DestinationFiles="@(LibVLCFiles->'$(PublishDir)libvlc\win-x64\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
    <Message Text="Copied LibVLC native files to publish directory" Importance="high" />
  </Target>
</Project>
