<Window x:Class="PlatypusTools.UI.Views.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Advanced Search" 
        Width="700" Height="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Search Criteria -->
        <GroupBox Grid.Row="0" Header="Search Criteria" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Search Pattern -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Pattern:" 
                           VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox x:Name="SearchPattern" Grid.Row="0" Grid.Column="1" 
                         Margin="0,0,0,5" Text="*.*"/>
                <CheckBox x:Name="UseRegex" Grid.Row="0" Grid.Column="2" 
                          Content="Regex" VerticalAlignment="Center" Margin="10,0,0,5"/>
                
                <!-- Search In -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Search in:" 
                           VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox x:Name="SearchPath" Grid.Row="1" Grid.Column="1" 
                         Margin="0,0,0,5"/>
                <Button x:Name="BrowseButton" Grid.Row="1" Grid.Column="2" 
                        Content="Browse..." MinWidth="180" Margin="10,0,0,5"
                        Click="Browse_Click"/>
                
                <!-- Content Search -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Content:" 
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="ContentPattern" Grid.Row="2" Grid.Column="1"/>
                <CheckBox x:Name="ContentRegex" Grid.Row="2" Grid.Column="2" 
                          Content="Regex" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </Grid>
        </GroupBox>
        
        <!-- Filters -->
        <GroupBox Grid.Row="1" Header="Filters" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Size Filters -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Size:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Min:" VerticalAlignment="Center" Width="30"/>
                        <TextBox x:Name="MinSize" Width="60" Margin="5,0"/>
                        <ComboBox x:Name="MinSizeUnit" Width="50" SelectedIndex="1">
                            <ComboBoxItem>B</ComboBoxItem>
                            <ComboBoxItem>KB</ComboBoxItem>
                            <ComboBoxItem>MB</ComboBoxItem>
                            <ComboBoxItem>GB</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Max:" VerticalAlignment="Center" Width="30"/>
                        <TextBox x:Name="MaxSize" Width="60" Margin="5,0"/>
                        <ComboBox x:Name="MaxSizeUnit" Width="50" SelectedIndex="2">
                            <ComboBoxItem>B</ComboBoxItem>
                            <ComboBoxItem>KB</ComboBoxItem>
                            <ComboBoxItem>MB</ComboBoxItem>
                            <ComboBoxItem>GB</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
                
                <!-- Date Filters -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Modified Date:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="From:" VerticalAlignment="Center" Width="35"/>
                        <DatePicker x:Name="DateFrom" Width="120"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="To:" VerticalAlignment="Center" Width="35"/>
                        <DatePicker x:Name="DateTo" Width="120"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Options -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Options:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <CheckBox x:Name="IncludeSubfolders" Content="Include subfolders" 
                              IsChecked="True" Margin="0,0,0,5"/>
                    <CheckBox x:Name="CaseSensitive" Content="Case sensitive" 
                              Margin="0,0,0,5"/>
                    <CheckBox x:Name="IncludeHidden" Content="Include hidden files"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Results -->
        <GroupBox Grid.Row="2" Header="Results">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock x:Name="ResultCount" Grid.Row="0" Text="0 files found" 
                           Margin="5,0,0,5"/>
                
                <ListView x:Name="ResultsList" Grid.Row="1">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="200" 
                                            DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Path" Width="250" 
                                            DisplayMemberBinding="{Binding DirectoryName}"/>
                            <GridViewColumn Header="Size" Width="80" 
                                            DisplayMemberBinding="{Binding Length, Converter={StaticResource FileSizeConverter}}"/>
                            <GridViewColumn Header="Modified" Width="130" 
                                            DisplayMemberBinding="{Binding LastWriteTime, StringFormat={}{0:yyyy-MM-dd HH:mm}}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="SearchButton" Content="Search" MinWidth="180" 
                    Margin="0,0,10,0" Click="Search_Click"/>
            <Button x:Name="StopButton" Content="Stop" MinWidth="180" 
                    Margin="0,0,10,0" IsEnabled="False" Click="Stop_Click"/>
            <Button x:Name="OpenSelectedButton" Content="Open Selected" MinWidth="180" 
                    Margin="0,0,10,0" Click="OpenSelected_Click"/>
            <Button Content="Close" MinWidth="180" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
