<UserControl x:Class="PlatypusTools.UI.Views.TerminalClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Saved Sessions -->
        <Grid Grid.Column="0" Margin="0,0,8,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <GroupBox Grid.Row="0" Header="Connection" Margin="0,0,0,8">
                <StackPanel Margin="8">
                    <TextBlock Text="Host:" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Username:" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Port:" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding Port}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Password:" Margin="0,8,0,4"/>
                    <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged"/>

                    <Button Content="ðŸ”‘ Load from Credentials" Margin="0,8,0,0"
                            Command="{Binding LoadCredentialCommand}" ToolTip="Load saved credentials"/>

                    <TextBlock Text="Private Key (optional):" Margin="0,8,0,4"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding PrivateKeyPath, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="11" IsReadOnly="True" ToolTip="{Binding PrivateKeyPath}"/>
                        <Button Grid.Column="1" Content="..." Width="28" Margin="4,0,0,0"
                                Command="{Binding BrowseKeyCommand}" ToolTip="Browse for key file"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <RadioButton Content="SSH" IsChecked="{Binding UseSsh}" GroupName="Protocol" Margin="0,0,16,0"/>
                        <RadioButton Content="Telnet" IsChecked="{Binding UseSsh, Converter={StaticResource InverseBoolConverter}}" GroupName="Protocol"/>
                    </StackPanel>

                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="ðŸ”Œ Connect" Command="{Binding ConnectCommand}"
                                Background="#FF4CAF50" Foreground="White"/>
                        <Button Grid.Column="2" Content="âŒ Disconnect" Command="{Binding DisconnectCommand}"
                                Background="#FFF44336" Foreground="White"/>
                    </Grid>

                    <Button Content="ðŸ–¥ï¸ Open in Terminal" Command="{Binding OpenInTerminalCommand}" 
                            Margin="0,8,0,0" Background="#FF2196F3" Foreground="White"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Grid.Row="1" Header="Saved Sessions">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ListBox Grid.Row="0" ItemsSource="{Binding SavedSessions}" 
                             BorderThickness="0" Margin="4">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding DisplayText}" FontSize="11" Opacity="0.7"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="â–¶" MinWidth="28" Height="24" Padding="4,2" Margin="4,0,0,0"
                                                Command="{Binding DataContext.LoadSessionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" ToolTip="Load Session"/>
                                        <Button Content="ðŸ—‘" MinWidth="28" Height="24" Padding="4,2" Margin="4,0,0,0"
                                                Command="{Binding DataContext.DeleteSessionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" ToolTip="Delete Session"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="1" Margin="4">
                        <TextBox Text="{Binding SessionName, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,0,0,4" ToolTip="Session name (optional)"/>
                        <Button Content="ðŸ’¾ Save Session" Command="{Binding SaveSessionCommand}"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Right Panel - Terminal -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Terminal Output -->
            <Border Grid.Row="0" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1"
                    Background="#FF1E1E1E" CornerRadius="4">
                <ScrollViewer x:Name="OutputScroller" VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto" Margin="8">
                    <TextBlock Text="{Binding OutputText}" FontFamily="Consolas" FontSize="13"
                               Foreground="#FF00FF00" TextWrapping="NoWrap"/>
                </ScrollViewer>
            </Border>

            <!-- Command Input -->
            <Grid Grid.Row="1" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" Text="{Binding CommandText, UpdateSourceTrigger=PropertyChanged}"
                         FontFamily="Consolas" FontSize="13" Padding="8,4"
                         Background="#FF2D2D2D" Foreground="#FF00FF00" BorderThickness="1"
                         BorderBrush="{DynamicResource ControlBorderBrush}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SendCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                <Button Grid.Column="1" Content="Send" Command="{Binding SendCommand}" Width="70" Margin="8,0,0,0"/>
                <Button Grid.Column="2" Content="Clear" Command="{Binding ClearCommand}" Width="70" Margin="8,0,0,0"/>
            </Grid>

            <!-- Status -->
            <Grid Grid.Row="2" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" CornerRadius="4" Padding="8,4" Margin="0,0,8,0"
                        Background="{Binding IsConnected, Converter={StaticResource BoolToConnectionBrushConverter}}">
                    <TextBlock Text="{Binding IsConnected, Converter={StaticResource BoolToConnectionTextConverter}}"
                               Foreground="White" FontWeight="SemiBold"/>
                </Border>
                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
