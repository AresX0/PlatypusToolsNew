<UserControl x:Class="PlatypusTools.UI.Views.MediaHubView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="1200">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="ðŸŽ¬ Media Hub" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}" FontStyle="Italic"
                           Text="Plex-style media browsing: Continue Watching, TV Series, Movies, Playlists &amp; History"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="âš™ Content Settings" Command="{Binding ToggleContentSettingsCommand}" MinWidth="130" Padding="8,4" Margin="0,0,8,0"
                        Background="#FF9C27B0" Foreground="White"/>
                <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" MinWidth="100" Padding="8,4"
                        Background="#FF2196F3" Foreground="White"/>
            </StackPanel>
        </Grid>

        <!-- Main Scrollable Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>

                <!-- No Library Folders Warning -->
                <Border Background="#33FF9800" CornerRadius="6" Padding="12" Margin="0,0,0,12"
                        Visibility="{Binding HasLibraryFolders, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš ï¸" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="No media library folders configured. Go to the ðŸ“š Media Library tab to add folders, then come back here to browse your content."
                                   VerticalAlignment="Center" TextWrapping="Wrap" Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </StackPanel>
                </Border>

                <!-- â•â•â• CONTENT SETTINGS (Collapsible) â•â•â• -->
                <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="12" Margin="0,0,0,12"
                        Visibility="{Binding ShowContentSettings, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="âš™ Content Settings â€” Folder Type Designations" FontSize="15" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="Designate folders as TV Shows or Movies to override automatic filename detection. All subfolders inherit the designation."
                                   Foreground="{DynamicResource SecondaryTextBrush}" TextWrapping="Wrap" Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- TV Show Folders -->
                            <GroupBox Grid.Column="0" Header="ðŸ“º TV Show Folders">
                                <StackPanel Margin="8">
                                    <TextBlock Text="Videos in these folders will be classified as TV episodes." FontSize="11"
                                               Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                                    <ListBox ItemsSource="{Binding TvShowFolders}" MinHeight="60" MaxHeight="120" Background="Transparent"
                                             BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding FolderPath}" VerticalAlignment="Center" Margin="0,0,8,0"
                                                               TextTrimming="CharacterEllipsis" MaxWidth="280" ToolTip="{Binding FolderPath}"/>
                                                    <Button Content="âœ•" FontSize="10" Padding="4,1" VerticalAlignment="Center"
                                                            Command="{Binding DataContext.RemoveTvShowFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#FFF44336" Foreground="White"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <Button Content="+ Add TV Folder" Command="{Binding AddTvShowFolderCommand}" HorizontalAlignment="Left"
                                            Padding="8,4" Margin="0,8,0,0" Background="#FF4CAF50" Foreground="White"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- Movie Folders -->
                            <GroupBox Grid.Column="2" Header="ðŸŽ¥ Movie Folders">
                                <StackPanel Margin="8">
                                    <TextBlock Text="Videos in these folders will be classified as standalone movies." FontSize="11"
                                               Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                                    <ListBox ItemsSource="{Binding MovieFolders}" MinHeight="60" MaxHeight="120" Background="Transparent"
                                             BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding FolderPath}" VerticalAlignment="Center" Margin="0,0,8,0"
                                                               TextTrimming="CharacterEllipsis" MaxWidth="280" ToolTip="{Binding FolderPath}"/>
                                                    <Button Content="âœ•" FontSize="10" Padding="4,1" VerticalAlignment="Center"
                                                            Command="{Binding DataContext.RemoveMovieFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#FFF44336" Foreground="White"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    <Button Content="+ Add Movie Folder" Command="{Binding AddMovieFolderCommand}" HorizontalAlignment="Left"
                                            Padding="8,4" Margin="0,8,0,0" Background="#FF4CAF50" Foreground="White"/>
                                </StackPanel>
                            </GroupBox>
                        </Grid>

                        <!-- Create New TV Show -->
                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <Button Content="âž• Create Custom TV Show" Command="{Binding CreateNewTvShowCommand}" Padding="8,4"
                                    Background="#FF2196F3" Foreground="White" Margin="0,0,8,0"/>
                            <TextBlock Text="Manually group files into a new TV show series." VerticalAlignment="Center"
                                       Foreground="{DynamicResource SecondaryTextBrush}" FontStyle="Italic"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- â•â•â• CONTINUE WATCHING â•â•â• -->
                <GroupBox Header="â–¶ Continue Watching" Margin="0,0,0,12"
                          Visibility="{Binding HasContinueWatching, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ItemsControl ItemsSource="{Binding ContinueWatchingItems}" Margin="8">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" 
                                        Padding="10" Margin="0,0,8,8" Width="220" Cursor="Hand"
                                        MouseLeftButtonDown="ContinueWatching_Click">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="{Binding Icon}" FontSize="16" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="13"
                                                       TextTrimming="CharacterEllipsis" MaxWidth="170"
                                                       ToolTip="{Binding Title}"/>
                                        </StackPanel>
                                        <!-- Progress bar -->
                                        <ProgressBar Grid.Row="1" Height="4" Minimum="0" Maximum="100"
                                                     Value="{Binding ProgressPercent, Mode=OneWay}"
                                                     Foreground="#FF4CAF50" Background="#33FFFFFF" Margin="0,2,0,4"/>
                                        <TextBlock Grid.Row="2" Text="{Binding Subtitle}" FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </GroupBox>

                <!-- â•â•â• TV SERIES â•â•â• -->
                <GroupBox Header="ðŸ“º TV Series" Margin="0,0,0,12">
                    <Grid Margin="8">
                        <!-- Series List -->
                        <DataGrid ItemsSource="{Binding TvSeriesList}" 
                                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                  IsReadOnly="True" SelectionMode="Single" GridLinesVisibility="None"
                                  HeadersVisibility="Column" MaxHeight="300"
                                  Background="{DynamicResource SurfaceBrush}"
                                  Visibility="{Binding SeriesListVisibility}"
                                  MouseDoubleClick="Series_DoubleClick">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Series Name" Binding="{Binding Name}" Width="*" MinWidth="200"/>
                                <DataGridTextColumn Header="Seasons" Binding="{Binding SeasonCount}" Width="80"/>
                                <DataGridTextColumn Header="Episodes" Binding="{Binding EpisodeCount}" Width="80"/>
                                <DataGridTextColumn Header="Summary" Binding="{Binding Summary}" Width="200"/>
                                <DataGridTemplateColumn Header="Actions" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="ðŸ“‚ Browse" Padding="6,2" FontSize="11"
                                                        Command="{Binding DataContext.DrillIntoSeriesCommand, 
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#FF2196F3" Foreground="White" Margin="0,0,4,0"/>
                                                <Button Content="ðŸ” TMDb" Padding="6,2" FontSize="11" ToolTip="Look up on TMDb"
                                                        Command="{Binding DataContext.EnrichSeriesCommand, 
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#FFFF9800" Foreground="White"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Drill-Down: Episodes in a Series -->
                        <StackPanel Visibility="{Binding DrillDownVisibility}">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Button Content="â† Back" Command="{Binding DrillBackCommand}" MinWidth="80" Padding="8,4"
                                        Background="#FF9C27B0" Foreground="White" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding DrillDownTitle}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                            <DataGrid ItemsSource="{Binding DrillDownEpisodes}"
                                      AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                      IsReadOnly="True" SelectionMode="Single" GridLinesVisibility="None"
                                      HeadersVisibility="Column" MaxHeight="300"
                                      Background="{DynamicResource SurfaceBrush}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="#" Binding="{Binding EpisodeNumber}" Width="50"/>
                                    <DataGridTextColumn Header="Title" Binding="{Binding EpisodeTitle}" Width="*" MinWidth="200"/>
                                    <DataGridTextColumn Header="Size" Binding="{Binding FileSize}" Width="80"/>
                                    <DataGridTemplateColumn Header="Actions" Width="280">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="â–¶ Play" Padding="6,2" FontSize="11" Margin="0,0,4,0"
                                                            Command="{Binding DataContext.PlayFileCommand,
                                                            RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding FilePath}"
                                                            Background="#FF4CAF50" Foreground="White"/>
                                                    <Button Content="ðŸ“‚ Folder" Padding="6,2" FontSize="11" Margin="0,0,4,0"
                                                            Command="{Binding DataContext.OpenFolderCommand,
                                                            RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding FilePath}"
                                                            Background="#FF2196F3" Foreground="White"/>
                                                    <Button Content="â†’ Movie" Padding="6,2" FontSize="11" ToolTip="Move to Movies"
                                                            Command="{Binding DataContext.MoveToMoviesCommand,
                                                            RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding FilePath}"
                                                            Background="#FFFF9800" Foreground="White"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <!-- Empty state -->
                        <TextBlock Text="No TV series detected. Videos named with S01E01 patterns (e.g., 'Breaking Bad S01E01.mp4') will appear here."
                                   Foreground="{DynamicResource SecondaryTextBrush}" FontStyle="Italic" Margin="4"
                                   TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TvSeriesList.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </GroupBox>

                <!-- â•â•â• MOVIES â•â•â• -->
                <GroupBox Header="ðŸŽ¥ Movies" Margin="0,0,0,12">
                    <Grid Margin="8">
                        <DataGrid ItemsSource="{Binding MoviesList}"
                                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                  IsReadOnly="True" SelectionMode="Single" GridLinesVisibility="None"
                                  HeadersVisibility="Column" MaxHeight="300"
                                  Background="{DynamicResource SurfaceBrush}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" MinWidth="200"/>
                                <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="60"/>
                                <DataGridTextColumn Header="Size" Binding="{Binding FileSize}" Width="80"/>
                                <DataGridTemplateColumn Header="File" Width="*" MinWidth="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding FilePath}" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Actions" Width="320">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="â–¶ Play" Padding="6,2" FontSize="11" Margin="0,0,4,0"
                                                        Command="{Binding DataContext.PlayFileCommand,
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding FilePath}"
                                                        Background="#FF4CAF50" Foreground="White"/>
                                                <Button Content="ðŸ“‚ Folder" Padding="6,2" FontSize="11" Margin="0,0,4,0"
                                                        Command="{Binding DataContext.OpenFolderCommand,
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding FilePath}"
                                                        Background="#FF2196F3" Foreground="White"/>
                                                <Button Content="â†’ TV" Padding="6,2" FontSize="11" Margin="0,0,4,0" ToolTip="Move to TV Shows"
                                                        Command="{Binding DataContext.MoveToTvShowCommand,
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#FF9C27B0" Foreground="White"/>
                                                <Button Content="ðŸ” TMDb" Padding="6,2" FontSize="11" ToolTip="Look up on TMDb"
                                                        Command="{Binding DataContext.EnrichMovieCommand,
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#FFFF9800" Foreground="White"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <!-- Empty state -->
                        <TextBlock Text="No standalone movies found. Video files that don't follow TV naming patterns will appear here."
                                   Foreground="{DynamicResource SecondaryTextBrush}" FontStyle="Italic" Margin="4"
                                   TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding MoviesList.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </GroupBox>

                <!-- â•â•â• PLAYLISTS â•â•â• -->
                <GroupBox Header="ðŸŽµ Playlists" Margin="0,0,0,12">
                    <Grid Margin="8">
                        <DataGrid ItemsSource="{Binding Playlists}"
                                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                  IsReadOnly="True" SelectionMode="Single" GridLinesVisibility="None"
                                  HeadersVisibility="Column" MaxHeight="200"
                                  Background="{DynamicResource SurfaceBrush}">
                            <DataGrid.Style>
                                <Style TargetType="DataGrid">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Playlists.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Style>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" MinWidth="200"/>
                                <DataGridTextColumn Header="Items" Binding="{Binding ItemCount}" Width="70"/>
                                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="100"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <TextBlock Text="No playlists created yet. Create playlists in the Audio Player tab."
                                   Foreground="{DynamicResource SecondaryTextBrush}" FontStyle="Italic" Margin="4"
                                   TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Playlists.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </GroupBox>

                <!-- â•â•â• PLAYBACK HISTORY â•â•â• -->
                <GroupBox Margin="0,0,0,12">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“œ Playback History" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <Button Content="ðŸ—‘ Clear All" Command="{Binding ClearHistoryCommand}" 
                                    FontSize="11" Padding="6,2" VerticalAlignment="Center"
                                    Background="#FFF44336" Foreground="White"/>
                        </StackPanel>
                    </GroupBox.Header>
                    <Grid Margin="8">
                        <DataGrid ItemsSource="{Binding RecentHistory}"
                                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                  IsReadOnly="True" SelectionMode="Single" GridLinesVisibility="None"
                                  HeadersVisibility="Column" MaxHeight="300"
                                  Background="{DynamicResource SurfaceBrush}">
                            <DataGrid.Style>
                                <Style TargetType="DataGrid">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RecentHistory.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Style>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="" Binding="{Binding Icon}" Width="30"/>
                                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" MinWidth="200"/>
                                <DataGridTextColumn Header="Artist" Binding="{Binding Artist}" Width="150"/>
                                <DataGridTextColumn Header="Plays" Binding="{Binding PlayCount}" Width="60"/>
                                <DataGridTextColumn Header="Last Played" Binding="{Binding LastPlayed}" Width="120"/>
                                <DataGridTemplateColumn Header="Actions" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="â–¶ Play" Padding="6,2" FontSize="11" Margin="0,0,4,0"
                                                        Command="{Binding DataContext.PlayFileCommand,
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding FilePath}"
                                                        Background="#FF4CAF50" Foreground="White"/>
                                                <Button Content="ðŸ—‘" Padding="6,2" FontSize="11" ToolTip="Remove from history"
                                                        Command="{Binding DataContext.RemoveHistoryItemCommand,
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#FFF44336" Foreground="White"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <TextBlock Text="No playback history yet. Play media files to build your history."
                                   Foreground="{DynamicResource SecondaryTextBrush}" FontStyle="Italic" Margin="4"
                                   TextWrapping="Wrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RecentHistory.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" CornerRadius="4" Padding="8,4" Margin="0,4,0,0">
            <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="12"/>
        </Border>
    </Grid>
</UserControl>
