<UserControl x:Class="PlatypusTools.UI.Views.DiskHealthView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
            <TextBlock Text="ðŸ’½ Disk Health / SMART Monitor" FontSize="16" FontWeight="Bold"
                       VerticalAlignment="Center" Margin="0,0,16,0" />
            <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" Padding="12,4"
                    Background="#FF2196F3" Foreground="White" />
            <Button Content="ðŸ“‹ Copy Info" Command="{Binding CopyInfoCommand}" Padding="12,4" Margin="8,0,0,0"
                    Background="#FF4CAF50" Foreground="White" />
        </StackPanel>

        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="350" MinWidth="300" />
            </Grid.ColumnDefinitions>

            <!-- Disk List -->
            <DataGrid Grid.Column="0" ItemsSource="{Binding Disks}" SelectedItem="{Binding SelectedDisk}"
                      AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single"
                      GridLinesVisibility="Horizontal" AlternatingRowBackground="#FF2A2A3A"
                      Background="#FF1E1E2E" Foreground="White" BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Health" Binding="{Binding HealthIcon}" Width="55" />
                    <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="*" MinWidth="200" />
                    <DataGridTextColumn Header="Type" Binding="{Binding MediaTypeEnum}" Width="60" />
                    <DataGridTextColumn Header="Bus" Binding="{Binding BusType}" Width="60" />
                    <DataGridTextColumn Header="Size" Binding="{Binding SizeDisplay}" Width="80" />
                    <DataGridTextColumn Header="Temp" Binding="{Binding TemperatureDisplay}" Width="60" />
                    <DataGridTextColumn Header="Status" Binding="{Binding HealthStatus}" Width="80" />
                    <DataGridTextColumn Header="Partitions" Binding="{Binding Partitions}" Width="70" />
                </DataGrid.Columns>
            </DataGrid>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center"
                          Background="#CCCCCC" Cursor="SizeWE" />

            <!-- Details Panel -->
            <GroupBox Grid.Column="2" Header="Disk Details" Margin="4,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding DiskDetails, Mode=OneWay}" IsReadOnly="True"
                             FontFamily="Consolas" FontSize="12"
                             Background="Transparent" Foreground="#FFE0E0E0"
                             BorderThickness="0" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" />
                </ScrollViewer>
            </GroupBox>
        </Grid>

        <!-- Status Bar -->
        <TextBlock Grid.Row="3" Text="{Binding StatusMessage}" Margin="0,4,0,0"
                   Foreground="#FFB0B0B0" FontSize="11" />
    </Grid>
</UserControl>
