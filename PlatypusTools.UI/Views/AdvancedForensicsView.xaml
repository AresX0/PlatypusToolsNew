                                    <CheckBox Content="Scan Network" IsChecked="{Binding ScanIOCNetwork}" Margin="10,5"/>
                                </WrapPanel>
                                <Button Content="ðŸ” Scan for IOCs" Command="{Binding ScanForIOCsCommand}"
                                        Height="35" FontSize="12" FontWeight="Bold" 
                                        Background="#f44336" Foreground="White" Margin="0,10,0,0"
                                        IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="IOC Matches">
                            <DataGrid ItemsSource="{Binding IOCMatches}" AutoGenerateColumns="False"
                                      IsReadOnly="True" CanUserAddRows="False" MaxHeight="400">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Type" Binding="{Binding IOCType}" Width="80"/>
                                    <DataGridTextColumn Header="IOC Value" Binding="{Binding IOCValue}" Width="200"/>
                                    <DataGridTextColumn Header="Matched In" Binding="{Binding MatchedIn}" Width="100"/>
                                    <DataGridTextColumn Header="Location" Binding="{Binding MatchLocation}" Width="250"/>
                                    <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                        <Button Content="ðŸ“¤ Export IOC Results" Command="{Binding ExportIOCResultsCommand}"
                                Height="30" MinWidth="190" HorizontalAlignment="Right" Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Registry Diff Tab -->
            <TabItem Header="ðŸ“Š Registry"
                     Visibility="{Binding AdvancedForensicsRegistry, Source={x:Static services:TabVisibilityService.Instance}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="ðŸ“Š Registry Snapshot &amp; Comparison" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                    Take snapshots of registry keys and compare them to detect changes made by malware or suspicious activity.
                                </TextBlock>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Snapshots Folder:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBox Grid.Column="1" Text="{Binding RegistrySnapshotFolder, Mode=OneWay}" IsReadOnly="True" 
                                             Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
                                    <Button Grid.Column="2" Content="ðŸ“‚ Open" Command="{Binding OpenRegistrySnapshotFolderCommand}" 
                                            MinWidth="70" Margin="5,0,0,0" ToolTip="Open snapshots folder in Explorer"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Hive Filter:" VerticalAlignment="Center"/>
                                    <ComboBox Grid.Column="1" ItemsSource="{Binding RegistryHives}" 
                                              SelectedItem="{Binding RegistryHiveFilter}" Margin="5" Width="150" HorizontalAlignment="Left"/>
                                </Grid>
                                <Button Content="ðŸ“¸ Take Registry Snapshot" Command="{Binding TakeRegistrySnapshotCommand}"
                                        Height="35" FontSize="12" FontWeight="Bold" 
                                        Background="#4CAF50" Foreground="White" Margin="0,10,0,0"
                                        IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Compare Snapshots" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Snapshot 1:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Text="{Binding RegistrySnapshot1Path, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                    <Button Grid.Column="2" Content="Browse" Command="{Binding BrowseSnapshot1Command}" MinWidth="180" Margin="5"/>

                                    <TextBlock Grid.Row="1" Text="Snapshot 2:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RegistrySnapshot2Path, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                    <Button Grid.Row="1" Grid.Column="2" Content="Browse" Command="{Binding BrowseSnapshot2Command}" MinWidth="180" Margin="5"/>
                                </Grid>
                                <Button Content="ðŸ” Compare Snapshots" Command="{Binding CompareRegistrySnapshotsCommand}"
                                        Height="35" FontSize="12" FontWeight="Bold" 
                                        Background="#2196F3" Foreground="White" Margin="0,10,0,0"
                                        IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Registry Differences">
                            <DataGrid ItemsSource="{Binding RegistryDiffs}" AutoGenerateColumns="False"
                                      IsReadOnly="True" CanUserAddRows="False" MaxHeight="300">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Change" Binding="{Binding ChangeType}" Width="80"/>
                                    <DataGridTextColumn Header="Key Path" Binding="{Binding KeyPath}" Width="300"/>
                                    <DataGridTextColumn Header="Value Name" Binding="{Binding ValueName}" Width="150"/>
                                    <DataGridTextColumn Header="Old Value" Binding="{Binding OldValue}" Width="150"/>
                                    <DataGridTextColumn Header="New Value" Binding="{Binding NewValue}" Width="150"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                        <Button Content="ðŸ“¤ Export Diff" Command="{Binding ExportRegistryDiffCommand}"
                                Height="30" MinWidth="190" HorizontalAlignment="Right" Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- PCAP Parser Tab -->
            <TabItem Header="ðŸ“¡ PCAP"
                     Visibility="{Binding AdvancedForensicsPCAP, Source={x:Static services:TabVisibilityService.Instance}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="ðŸ“¡ Network Packet Capture Parser" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                    Parse PCAP/PCAPNG files to extract network connections, HTTP traffic, DNS queries, and optionally extract transferred files.
                                </TextBlock>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="PCAP File:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Text="{Binding PcapFilePath, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                    <Button Grid.Column="2" Content="Browse" Command="{Binding BrowsePcapFileCommand}" MinWidth="180" Margin="5"/>
                                </Grid>
                                <WrapPanel Margin="0,10,0,0">
                                    <CheckBox Content="Filter HTTP Traffic" IsChecked="{Binding FilterHttpTraffic}" Margin="10,5"/>
                                    <CheckBox Content="Filter DNS Traffic" IsChecked="{Binding FilterDnsTraffic}" Margin="10,5"/>
                                    <CheckBox Content="Extract Files" IsChecked="{Binding ExtractPcapFiles}" Margin="10,5"
                                              ToolTip="Extract files transferred over HTTP/FTP"/>
                                </WrapPanel>
                                <Button Content="ðŸ” Parse PCAP" Command="{Binding ParsePcapCommand}"
                                        Height="35" FontSize="12" FontWeight="Bold" 
                                        Background="#9C27B0" Foreground="White" Margin="0,10,0,0"
                                        IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Network Connections">
                            <DataGrid ItemsSource="{Binding NetworkConnections}" AutoGenerateColumns="False"
                                      IsReadOnly="True" CanUserAddRows="False" MaxHeight="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Source IP" Binding="{Binding SourceIP}" Width="120"/>
                                    <DataGridTextColumn Header="Destination IP" Binding="{Binding DestinationIP}" Width="120"/>
                                    <DataGridTextColumn Header="Port" Binding="{Binding DestinationPort}" Width="60"/>
                                    <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" Width="70"/>
                                    <DataGridTextColumn Header="Packets" Binding="{Binding PacketCount}" Width="70"/>
                                    <DataGridTextColumn Header="Bytes" Binding="{Binding BytesTransferred}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                        <GroupBox Header="Parsed Packets" Margin="0,10,0,0">
                            <DataGrid ItemsSource="{Binding ParsedPackets}" AutoGenerateColumns="False"
                                      IsReadOnly="True" CanUserAddRows="False" MaxHeight="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="#" Binding="{Binding PacketNumber}" Width="50"/>
                                    <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp, StringFormat=HH:mm:ss.fff}" Width="100"/>
                                    <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" Width="70"/>
                                    <DataGridTextColumn Header="Source" Binding="{Binding SourceIP}" Width="120"/>
                                    <DataGridTextColumn Header="Destination" Binding="{Binding DestinationIP}" Width="120"/>
                                    <DataGridTextColumn Header="Info" Binding="{Binding Info}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                        <Button Content="ðŸ“¤ Export PCAP Results" Command="{Binding ExportPcapResultsCommand}"
                                Height="30" MinWidth="190" HorizontalAlignment="Right" Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Results Tab -->
            <TabItem Header="ðŸ“Š Results">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Artifacts List -->
                    <GroupBox Header="Collected Artifacts">
                        <DataGrid ItemsSource="{Binding Artifacts}" AutoGenerateColumns="False"
                                  IsReadOnly="True" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                                <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="200"/>
                                <DataGridTextColumn Header="Records" Binding="{Binding RecordCount}" Width="80"/>
                                <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat=HH:mm:ss}" Width="80"/>
                                <DataGridTextColumn Header="Output Path" Binding="{Binding OutputPath}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"/>

                    <!-- Log Output -->
                    <GroupBox Grid.Row="2" Header="Activity Log">
                        <TextBox Text="{Binding OutputLog, Mode=OneWay}" 
                                 IsReadOnly="True" TextWrapping="Wrap" 
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas" FontSize="11"/>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <ProgressBar Width="200" Height="20" Value="{Binding Progress}" Maximum="100"
                             Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>

            <Button Grid.Column="1" Content="ðŸ“¤ Export" Command="{Binding ExportResultsCommand}" MinWidth="180" Margin="5"/>
            <Button Grid.Column="2" Content="ðŸ—‘ï¸ Clear" Command="{Binding ClearLogCommand}" MinWidth="180" Margin="5"/>
            <Button Grid.Column="3" Content="âŒ Cancel" Command="{Binding CancelCommand}" MinWidth="180" Margin="5"
                    Background="#f44336" Foreground="White"
                    Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>
    </Grid>
</UserControl>