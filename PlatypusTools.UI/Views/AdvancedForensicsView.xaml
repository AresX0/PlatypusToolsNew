<UserControl x:Class="PlatypusTools.UI.Views.AdvancedForensicsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:PlatypusTools.UI.ViewModels"
             xmlns:services="clr-namespace:PlatypusTools.UI.Services">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="ðŸ”¬ Advanced Forensics (DFIR)" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Digital Forensics &amp; Incident Response - Memory acquisition &amp; analysis, artifact collection, timeline creation, malware analysis, and OSINT" 
                       Foreground="{DynamicResource SecondaryTextBrush}" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Main Content -->
        <TabControl Grid.Row="1">
            
            <!-- Memory Acquisition &amp; Analysis Tab -->
            <TabItem Header="ðŸ§  Memory"
                     Visibility="{Binding AdvancedForensicsMemory, Source={x:Static services:TabVisibilityService.Instance}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        
                        <!-- Memory Acquisition Section - WinPmem -->
                        <GroupBox Header="ðŸ’¾ WinPmem - Full Memory Acquisition" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="WinPmem Path:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox Grid.Column="1" Text="{Binding WinPmemPath, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                    <Button Grid.Column="2" Content="Browse" Command="{Binding BrowseWinPmemCommand}" MinWidth="180" Margin="5"/>
                                    <Button Grid.Column="3" Content="â¬‡ï¸ Download" Command="{Binding DownloadWinPmemCommand}" 
                                            MinWidth="180" Margin="5" ToolTip="Download WinPmem from GitHub"
                                            Background="#4CAF50" Foreground="White"/>

                                    <TextBlock Grid.Row="1" Text="Output Folder:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding DumpOutputPath, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                    <Button Grid.Row="1" Grid.Column="2" Content="Browse" Command="{Binding BrowseDumpOutputCommand}" MinWidth="180" Margin="5"/>

                                    <TextBlock Grid.Row="2" Text="Format:" VerticalAlignment="Center" Margin="5"/>
                                    <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding DumpFormats}" 
                                              SelectedItem="{Binding DumpFormat}" Margin="5" Width="150" HorizontalAlignment="Left"/>
                                </Grid>
                                
                                <TextBlock Text="âš ï¸ WinPmem may be blocked by Driver Signature Enforcement (DSE) on modern Windows" 
                                           Foreground="Orange" Margin="5" TextWrapping="Wrap"/>
                                
                                <Button Content="ðŸ“¥ Acquire Live Memory Dump (WinPmem)" Command="{Binding AcquireMemoryDumpCommand}"
                                        Height="35" FontSize="12" FontWeight="Bold" 
                                        Background="#E91E63" Foreground="White" Margin="0,5,0,0"
                                        IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Magnet RAM Capture Section -->
                        <GroupBox Header="ðŸ§² Magnet RAM Capture - Signed Driver (Recommended)" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <TextBlock TextWrapping="Wrap" Margin="5,0,5,10" Foreground="#4CAF50">
                                    âœ“ Magnet RAM Capture has a WHQL-signed driver that works with Secure Boot and modern Windows security. 
                                    It's FREE but requires registration.
                                </TextBlock>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="MRC Path:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox Grid.Column="1" Text="{Binding MagnetRamCapturePath, UpdateSourceTrigger=PropertyChanged}" Margin="5"
                                             ToolTip="Path to MagnetRAMCapture.exe or MRC.exe"/>
                                    <Button Grid.Column="2" Content="Browse" Command="{Binding BrowseMagnetRamCaptureCommand}" MinWidth="180" Margin="5"/>
                                    <Button Grid.Column="3" Content="ðŸ”— Get Free" Command="{Binding DownloadMagnetRamCaptureCommand}" 
                                            MinWidth="180" Margin="5" ToolTip="Opens Magnet Forensics website to download (free registration required)"
                                            Background="#2196F3" Foreground="White"/>
                                </Grid>
                                
                                <Button Content="ðŸ§² Launch Magnet RAM Capture" Command="{Binding AcquireMagnetRamCaptureCommand}"
                                        Height="35" FontSize="12" FontWeight="Bold" 
                                        Background="#9C27B0" Foreground="White" Margin="0,5,0,0"
                                        ToolTip="Launches Magnet RAM Capture GUI - complete acquisition in the app window"
                                        IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- ProcDump Section -->
                        <GroupBox Header="ðŸ“‹ ProcDump - Process Memory Dump (Sysinternals)" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <TextBlock TextWrapping="Wrap" Margin="5,0,5,10" Foreground="#FF9800">
                                    ProcDump creates memory dumps of specific processes. Useful for analyzing suspicious processes, 
                                    debugging, or capturing process state. Works with Secure Boot.
                                </TextBlock>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Text="ProcDump Path:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox Grid.Column="1" Text="{Binding ProcDumpPath, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                    <Button Grid.Column="2" Content="Browse" Command="{Binding BrowseProcDumpCommand}" MinWidth="180" Margin="5"/>
                                    <Button Grid.Column="3" Content="â¬‡ï¸ Download" Command="{Binding DownloadProcDumpCommand}" 
                                            MinWidth="180" Margin="5" ToolTip="Download ProcDump from Sysinternals"
                                            Background="#4CAF50" Foreground="White"/>
                                    
                                    <TextBlock Grid.Row="1" Text="Target Process:" VerticalAlignment="Center" Margin="5"/>
                                    <ComboBox Grid.Row="1" Grid.Column="1" 
                                              ItemsSource="{Binding RunningProcesses}" 
                                              Text="{Binding SelectedProcessForDump, UpdateSourceTrigger=PropertyChanged}"
                                              IsEditable="True" Margin="5"
                                              ToolTip="Select a process or type a process name/PID"/>
                                    <Button Grid.Row="1" Grid.Column="2" Content="ðŸ”„ Refresh" Command="{Binding RefreshProcessListCommand}" 
                                            MinWidth="180" Margin="5" ToolTip="Refresh running process list"/>
                                    
                                    <TextBlock Grid.Row="2" Text="Dump Type:" VerticalAlignment="Center" Margin="5"/>
                                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="5">
                                        <RadioButton Content="Full Dump (-ma)" IsChecked="{Binding ProcDumpFullDump}" 
                                                     ToolTip="Complete memory dump including all process memory. Larger but more complete." Margin="0,0,20,0"/>
                                        <RadioButton Content="Mini Dump (-mm)" IsChecked="{Binding ProcDumpFullDump, Converter={StaticResource InverseBoolConverter}}"
                                                     ToolTip="Smaller dump with essential information. Faster but less data."/>
                                    </StackPanel>
                                </Grid>
                                
                                <Button Content="ðŸ“‹ Create Process Dump (ProcDump)" Command="{Binding AcquireProcDumpCommand}"
                                        Height="35" FontSize="12" FontWeight="Bold" 
                                        Background="#FF5722" Foreground="White" Margin="0,5,0,0"
                                        IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Memory Analysis Section -->
                        <GroupBox Header="ðŸ” Memory Analysis (Volatility 3)" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Memory Dump:" VerticalAlignment="Center" Margin="5"/>
                                <TextBox Grid.Column="1" Text="{Binding MemoryDumpPath, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                <Button Grid.Column="2" Content="Browse" Command="{Binding BrowseMemoryDumpCommand}" MinWidth="180" Margin="5"/>

                                <TextBlock Grid.Row="1" Text="Volatility Path:" VerticalAlignment="Center" Margin="5"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding VolatilityPath, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                <Button Grid.Row="1" Grid.Column="2" Content="Browse" Command="{Binding BrowseVolatilityCommand}" MinWidth="180" Margin="5"/>
                                <Button Grid.Row="1" Grid.Column="3" Content="ðŸ”— Get" Command="{Binding DownloadVolatilityCommand}" 
                                        MinWidth="180" Margin="5" ToolTip="Open Volatility 3 GitHub releases page"
                                        Background="#2196F3" Foreground="White"/>

                                <TextBlock Grid.Row="2" Text="Output Path:" VerticalAlignment="Center" Margin="5"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding MemoryOutputPath, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Volatility 3 Plugins" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Core Analysis" FontWeight="SemiBold" Margin="5,5,5,2"/>
                                <WrapPanel Margin="5,0,5,5">
                                    <CheckBox Content="windows.pslist (Processes)" IsChecked="{Binding RunPsList}" Margin="10,5"/>
                                    <CheckBox Content="windows.netscan (Network)" IsChecked="{Binding RunNetScan}" Margin="10,5"/>
                                    <CheckBox Content="windows.malfind (Malware)" IsChecked="{Binding RunMalfind}" Margin="10,5"/>
                                    <CheckBox Content="windows.dlllist (DLLs)" IsChecked="{Binding RunDllList}" Margin="10,5"/>
                                    <CheckBox Content="windows.handles" IsChecked="{Binding RunHandles}" Margin="10,5"/>
                                    <CheckBox Content="windows.cmdline" IsChecked="{Binding RunCmdline}" Margin="10,5"/>
                                    <CheckBox Content="windows.filescan" IsChecked="{Binding RunFileScan}" Margin="10,5"/>
                                    <CheckBox Content="windows.registry.hivelist" IsChecked="{Binding RunRegHive}" Margin="10,5"/>
                                </WrapPanel>
                                <TextBlock Text="Advanced Analysis" FontWeight="SemiBold" Margin="5,5,5,2"/>
                                <WrapPanel Margin="5,0,5,5">
                                    <CheckBox Content="windows.pstree (Process Tree)" IsChecked="{Binding RunPsTree}" Margin="10,5"/>
                                    <CheckBox Content="windows.envars (Environment)" IsChecked="{Binding RunEnvars}" Margin="10,5"/>
                                    <CheckBox Content="windows.svcscan (Services)" IsChecked="{Binding RunSvcScan}" Margin="10,5"/>
                                    <CheckBox Content="windows.callbacks" IsChecked="{Binding RunCallbacks}" Margin="10,5"/>
                                    <CheckBox Content="windows.driverscan" IsChecked="{Binding RunDriverScan}" Margin="10,5"/>
                                    <CheckBox Content="windows.ssdt (SSDT Hooks)" IsChecked="{Binding RunSsdt}" Margin="10,5"/>
                                    <CheckBox Content="windows.mutantscan (Mutexes)" IsChecked="{Binding RunMutantScan}" Margin="10,5"/>
                                </WrapPanel>
                            </StackPanel>
                        </GroupBox>

                        <Button Content="ðŸ” Run Volatility Analysis" Command="{Binding RunVolatilityAnalysisCommand}"
                                Height="40" FontSize="14" FontWeight="Bold" 
                                Background="#2196F3" Foreground="White"
                                IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Artifact Collection Tab -->
            <TabItem Header="ðŸ“¦ Artifacts"
                     Visibility="{Binding AdvancedForensicsArtifacts, Source={x:Static services:TabVisibilityService.Instance}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="KAPE / EZ Tools Configuration" Margin="0,0,0,10">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="KAPE Path:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox Grid.Column="1" Text="{Binding KapePath, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                    <Button Grid.Column="2" Content="Browse" Command="{Binding BrowseKapeCommand}" MinWidth="180" Margin="5"/>
                                    <Button Grid.Column="3" Content="ðŸ”— Get KAPE" Command="{Binding GetKapeCommand}" 
                                            MinWidth="180" Margin="5" ToolTip="Register and download KAPE from Kroll (free for authorized use)"
                                            Background="#FF9800" Foreground="White"/>

                                    <TextBlock Grid.Row="1" Text="Target Path:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding KapeTargetPath, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                    <Button Grid.Row="1" Grid.Column="2" Content="Browse" Command="{Binding BrowseKapeTargetCommand}" MinWidth="180" Margin="5"/>

                                    <TextBlock Grid.Row="2" Text="Output Path:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding KapeOutputPath, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                </Grid>
                                <TextBlock Text="ðŸ’¡ KAPE requires registration at kroll.com (free for authorized incident response)" 
                                           Foreground="{DynamicResource SecondaryTextBrush}" Margin="5,5,5,0" FontStyle="Italic"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Core Artifacts" Margin="0,0,0,10">
                            <WrapPanel Margin="5">
                                <CheckBox Content="Prefetch" IsChecked="{Binding CollectPrefetch}" Margin="10,5" ToolTip="Execution evidence"/>
                                <CheckBox Content="Amcache" IsChecked="{Binding CollectAmcache}" Margin="10,5" ToolTip="Program presence"/>
                                <CheckBox Content="Event Logs" IsChecked="{Binding CollectEventLogs}" Margin="10,5" ToolTip="Security, Sysmon, PowerShell"/>
                                <CheckBox Content="$MFT" IsChecked="{Binding CollectMft}" Margin="10,5" ToolTip="Master File Table"/>
                                <CheckBox Content="Registry" IsChecked="{Binding CollectRegistry}" Margin="10,5" ToolTip="SAM, SYSTEM, SOFTWARE"/>
                                <CheckBox Content="SRUM" IsChecked="{Binding CollectSrum}" Margin="10,5" ToolTip="System Resource Usage"/>
                            </WrapPanel>
                        </GroupBox>

                        <GroupBox Header="Additional Artifacts" Margin="0,0,0,10">
                            <WrapPanel Margin="5">
                                <CheckBox Content="ShellBags" IsChecked="{Binding CollectShellBags}" Margin="10,5" ToolTip="Folder access history"/>
                                <CheckBox Content="Jump Lists" IsChecked="{Binding CollectJumpLists}" Margin="10,5" ToolTip="Recent files per app"/>
                                <CheckBox Content="LNK Files" IsChecked="{Binding CollectLnkFiles}" Margin="10,5" ToolTip="Shortcut files"/>
                                <CheckBox Content="Shimcache" IsChecked="{Binding CollectShimcache}" Margin="10,5" ToolTip="App compatibility cache"/>
                                <CheckBox Content="Recycle Bin" IsChecked="{Binding CollectRecycleBin}" Margin="10,5" ToolTip="Deleted files"/>
                                <CheckBox Content="$UsnJrnl" IsChecked="{Binding CollectUsnJrnl}" Margin="10,5" ToolTip="File change journal"/>
                            </WrapPanel>
                        </GroupBox>

                        <TextBlock Text="âš ï¸ Note: Some artifacts require Administrator privileges" Foreground="Orange" Margin="5"/>

                        <Button Content="ðŸ“¦ Collect Artifacts" Command="{Binding RunKapeCollectionCommand}"
                                Height="40" FontSize="14" FontWeight="Bold" 
                                Background="#4CAF50" Foreground="White" Margin="0,10,0,0"
                                IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Timeline Tab (Plaso/Velociraptor) -->
            <TabItem Header="ðŸ“… Timeline"
                     Visibility="{Binding AdvancedForensicsTimeline, Source={x:Static services:TabVisibilityService.Instance}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        
                        <!-- Plaso Section -->
                        <GroupBox Header="ðŸ• Plaso (log2timeline) - Super-Timeline" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Plaso Path:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox Grid.Column="1" Text="{Binding PlasoPath, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                    <Button Grid.Column="2" Content="Browse" Command="{Binding BrowsePlasoCommand}" MinWidth="180" Margin="5"/>

                                    <TextBlock Grid.Row="1" Text="Evidence Path:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding PlasoEvidencePath, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                    <Button Grid.Row="1" Grid.Column="2" Content="Browse" Command="{Binding BrowseEvidenceCommand}" MinWidth="180" Margin="5"/>

                                    <TextBlock Grid.Row="2" Text="Storage File:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding PlasoStorageFile, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                </Grid>

                                <WrapPanel Margin="0,10,0,0">
                                    <Button Content="ðŸ• Create Timeline" Command="{Binding RunPlasoTimelineCommand}"
                                            Height="35" MinWidth="130" Margin="0,2,10,2"
                                            Background="#673AB7" Foreground="White"
                                            IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                                    <Button Content="ðŸ“¤ Export to OpenSearch" Command="{Binding ExportPlasoToOpenSearchCommand}"
                                            Height="35" MinWidth="150" Margin="0,2,10,2"
                                            IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                                    <Button Content="ðŸ“¥ Download Plaso" Command="{Binding DownloadPlasoCommand}"
                                            Height="35" MinWidth="130" Margin="0,2,0,2"
                                            Background="#FF5722" Foreground="White"
                                            ToolTip="Opens Plaso releases page on GitHub"/>
                                </WrapPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Velociraptor Section -->
                        <GroupBox Header="ðŸ¦– Velociraptor - Fleet Triage" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Velociraptor:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox Grid.Column="1" Text="{Binding VelociraptorPath, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                                    <Button Grid.Column="2" Content="Browse" Command="{Binding BrowseVelociraptorCommand}" MinWidth="180" Margin="5"/>

                                    <TextBlock Grid.Row="1" Text="Artifact:" VerticalAlignment="Center" Margin="5"/>
                                    <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding VelociraptorArtifacts}" 
                                              SelectedItem="{Binding VelociraptorArtifact}" Margin="5"/>
                                </Grid>

                                <WrapPanel Margin="0,10,0,0">
                                    <Button Content="ðŸ¦– Collect Artifact" Command="{Binding RunVelociraptorCollectCommand}"
                                            Height="35" MinWidth="130"
                                            Background="#795548" Foreground="White" Margin="0,2,10,2"
                                            IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                                    <Button Content="ðŸ“¥ Download Velociraptor" Command="{Binding DownloadVelociraptorCommand}"
                                            Height="35" MinWidth="160" Margin="0,2,0,2"
                                            Background="#FF5722" Foreground="White"
                                            ToolTip="Downloads Velociraptor from GitHub"
                                            IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                                </WrapPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Kusto Queries Tab -->
            <TabItem Header="ðŸ“Š Kusto"
                     Visibility="{Binding AdvancedForensicsKusto, Source={x:Static services:TabVisibilityService.Instance}}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <GroupBox Header="Azure Data Explorer / Log Analytics Connection">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Endpoint:" VerticalAlignment="Center" Margin="5"/>
                            <TextBox Grid.Column="1" Text="{Binding KustoEndpoint, UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="5" ToolTip="e.g., https://yourcluster.kusto.windows.net"/>

                            <TextBlock Grid.Row="1" Text="Database:" VerticalAlignment="Center" Margin="5"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding KustoDatabase, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Header="Query Templates" Margin="0,10,0,0">
                        <StackPanel Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox ItemsSource="{Binding KustoTemplates}" SelectedItem="{Binding SelectedKustoTemplate}"
                                          DisplayMemberPath="Name" Margin="0,0,5,5"/>
                                <Button Grid.Column="1" Content="ðŸ“¥ Load" Command="{Binding LoadKustoTemplateCommand}"
                                        MinWidth="180" ToolTip="Load template to query box"/>
                            </Grid>
                            <TextBlock Text="{Binding SelectedKustoTemplate.Description}" Foreground="{DynamicResource SecondaryTextBrush}" 
                                       TextWrapping="Wrap" Margin="0,0,0,5"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Grid.Row="2" Header="Kusto Query" Margin="0,10,0,0">
                        <TextBox Text="{Binding KustoQuery, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas" FontSize="12"/>
                    </GroupBox>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="â–¶ï¸ Execute Query" Command="{Binding RunKustoQueryCommand}"
                                Height="35" MinWidth="190" Background="#00BCD4" Foreground="White"
                                IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"/>
                        <TextBlock Text="ðŸ’¡ Copy query to Azure Data Explorer for execution" 
                                   VerticalAlignment="Center" Margin="15,0,0,0" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Local KQL Database Tab -->
            <TabItem Header="ðŸ—„ï¸ Local KQL"
                     Visibility="{Binding AdvancedForensicsLocalKQL, Source={x:Static services:TabVisibilityService.Instance}}">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel - Database &amp; Templates -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Database Status -->
                        <GroupBox Header="ðŸ“Š Local Database">
                            <StackPanel Margin="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <Border Grid.Column="1" CornerRadius="3" Padding="5,2">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#555"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding LocalDbStatus}" Value="Connected">
                                                        <Setter Property="Background" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding LocalDbStatus}" Value="Error">
                                                        <Setter Property="Background" Value="#F44336"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding LocalDbStatus}" Foreground="{DynamicResource WindowForegroundBrush}" FontWeight="Bold"/>
                                    </Border>
                                </Grid>
                                <TextBlock Text="{Binding TotalRecords, StringFormat='Total Records: {0:N0}'}" Margin="0,5,0,0"/>
                                <WrapPanel Margin="0,10,0,0">
                                    <Button Content="ðŸ”Œ Initialize" Command="{Binding InitializeLocalDbCommand}" 
                                            MinWidth="100" Height="28" Margin="0,2,5,2"
