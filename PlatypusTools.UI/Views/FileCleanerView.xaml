<UserControl x:Class="PlatypusTools.UI.Views.FileCleanerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:PlatypusTools.Core.Models;assembly=PlatypusTools.Core"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="1200">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" MinHeight="100" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Folder Selection -->
        <GroupBox Header="Folder &amp; Scope" Grid.Row="0" Margin="0,0,0,8">
            <StackPanel>
                <WrapPanel Margin="0,0,0,8">
                    <TextBlock VerticalAlignment="Center" Width="100">Folder Path:</TextBlock>
                    <TextBox Width="500" Text="{Binding FolderPath, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="ðŸ“ Browse..." Command="{Binding BrowseFolderCommand}" MinWidth="100" Margin="8,2,0,2"/>
                    <Button Content="ðŸ” Scan" Command="{Binding ScanCommand}" MinWidth="80" Margin="8,2,0,2" FontWeight="Bold"
                            Background="#FF4CAF50" Foreground="White"/>
                </WrapPanel>
                <StackPanel Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding IncludeSubfolders}" Margin="100,0,24,0">Include Subfolders</CheckBox>
                    <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">File Type Filter:</TextBlock>
                    <ComboBox Width="120" SelectedItem="{Binding FileTypeFilter}">
                        <ComboBox.ItemsSource>
                            <x:Array Type="models:FileTypeFilter">
                                <models:FileTypeFilter>All</models:FileTypeFilter>
                                <models:FileTypeFilter>Video</models:FileTypeFilter>
                                <models:FileTypeFilter>Picture</models:FileTypeFilter>
                                <models:FileTypeFilter>Document</models:FileTypeFilter>
                                <models:FileTypeFilter>Audio</models:FileTypeFilter>
                                <models:FileTypeFilter>Archive</models:FileTypeFilter>
                            </x:Array>
                        </ComboBox.ItemsSource>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Renaming Options - All in One Panel -->
        <GroupBox Header="Batch Renaming Options (All operations applied in order)" Grid.Row="1" Margin="0,0,0,8">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                <StackPanel>
                    <!-- Prefix Management Section -->
                    <Expander Header="â–¶ Prefix Management" IsExpanded="True" Margin="0,0,0,8">
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">New Prefix:</TextBlock>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewPrefix, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4" />

                            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Old Prefix:</TextBlock>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding OldPrefix, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4" />

                            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">Detected Prefix:</TextBlock>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBox Text="{Binding DetectedPrefix, UpdateSourceTrigger=PropertyChanged}" Width="300" IsReadOnly="True" Background="{DynamicResource ControlBackgroundBrush}" />
                                <Button Content="Detect Prefix" Command="{Binding DetectPrefixCommand}" MinWidth="180" Margin="8,0,0,0" />
                            </StackPanel>

                            <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center">Ignore Prefix:</TextBlock>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding IgnorePrefix, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,4" 
                                     ToolTip="Files starting with this prefix will be excluded from processing" />

                            <CheckBox Grid.Row="4" Grid.Column="1" IsChecked="{Binding AddPrefixToAll}" Margin="0,4,0,2">
                                Add prefix to all files (even without old prefix)
                            </CheckBox>
                            <CheckBox Grid.Row="5" Grid.Column="1" IsChecked="{Binding NormalizeCasing}" Margin="0,2,0,2">
                                Normalize prefix case (force apply case-only changes)
                            </CheckBox>
                            <CheckBox Grid.Row="6" Grid.Column="1" IsChecked="{Binding OnlyFilesWithOldPrefix}" Margin="0,2,0,4">
                                Only process files with old prefix
                            </CheckBox>
                        </Grid>
                    </Expander>

                    <!-- Season/Episode Section -->
                    <Expander Header="â–¶ Season/Episode Numbering" IsExpanded="True" Margin="0,0,0,8">
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="{Binding AddSeason}" VerticalAlignment="Center">Add Season:</CheckBox>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">Season #:</TextBlock>
                                <TextBox Text="{Binding SeasonNumber}" Width="60" />
                                <TextBlock VerticalAlignment="Center" Margin="16,0,8,0">Leading Zeros:</TextBlock>
                                <ComboBox Width="60" SelectedValue="{Binding SeasonLeadingZeros}">
                                    <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">1</sys:Int32>
                                    <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">2</sys:Int32>
                                    <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">3</sys:Int32>
                                    <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">4</sys:Int32>
                                </ComboBox>
                            </StackPanel>

                            <CheckBox Grid.Row="1" Grid.Column="0" IsChecked="{Binding AddEpisode}" VerticalAlignment="Center">Add Episode:</CheckBox>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">Start #:</TextBlock>
                                <TextBox Text="{Binding StartEpisodeNumber}" Width="60" />
                                <TextBlock VerticalAlignment="Center" Margin="16,0,8,0">Leading Zeros:</TextBlock>
                                <ComboBox Width="60" SelectedValue="{Binding EpisodeLeadingZeros}">
                                    <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">1</sys:Int32>
                                    <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">2</sys:Int32>
                                    <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">3</sys:Int32>
                                    <sys:Int32 xmlns:sys="clr-namespace:System;assembly=mscorlib">4</sys:Int32>
                                </ComboBox>
                            </StackPanel>

                            <CheckBox Grid.Row="2" Grid.Column="1" IsChecked="{Binding RenumberAlphabetically}" Margin="0,4,0,2">
                                Renumber alphabetically across directory (auto-increment)
                            </CheckBox>

                            <CheckBox Grid.Row="3" Grid.Column="1" IsChecked="{Binding SeasonBeforeEpisode}" Margin="0,2,0,4">
                                Season before Episode (S01E01 format)
                            </CheckBox>

                            <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8,0,4" FontStyle="Italic" Foreground="{DynamicResource SecondaryTextBrush}">
                                Example: PREFIX-S01E001-Filename.ext
                            </TextBlock>

                            <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}">
                                Season/Episode will be inserted immediately after prefix, before the rest of the filename. 
                                Renumber alphabetically will sort files by name and assign sequential episode numbers.
                            </TextBlock>
                        </Grid>
                    </Expander>

                    <!-- Filename Cleaning Section -->
                    <Expander Header="â–¶ Filename Cleaning (Remove Tokens)" IsExpanded="True" Margin="0,0,0,8">
                        <Grid Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" FontWeight="Bold" Margin="0,0,0,8">Remove Common Tokens:</TextBlock>
                            
                            <WrapPanel Grid.Row="1" Margin="0,0,0,8">
                                <CheckBox IsChecked="{Binding Remove720p}" Margin="0,0,16,4">720p</CheckBox>
                                <CheckBox IsChecked="{Binding Remove1080p}" Margin="0,0,16,4">1080p</CheckBox>
                                <CheckBox IsChecked="{Binding Remove4k}" Margin="0,0,16,4">4K</CheckBox>
                                <CheckBox IsChecked="{Binding RemoveHD}" Margin="0,0,16,4">HD/HDTV</CheckBox>
                            </WrapPanel>

                            <TextBlock Grid.Row="2" Margin="0,0,0,4">Custom Tokens to Remove (comma-separated):</TextBlock>
                            <TextBox Grid.Row="3" Text="{Binding CustomTokens, UpdateSourceTrigger=PropertyChanged}" 
                                     ToolTip="Enter custom text to remove, separated by commas. Example: WEBRip,BluRay,x264" />
                        </Grid>
                    </Expander>

                    <!-- Normalization Section -->
                    <Expander Header="â–¶ Name Normalization (Space/Separator Conversion)" IsExpanded="True" Margin="0,0,0,8">
                        <Grid Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" FontWeight="Bold" Margin="0,0,0,8">Space/Separator Conversion:</TextBlock>
                            
                            <ComboBox Grid.Row="1" SelectedItem="{Binding NormalizationPreset}" Margin="0,0,0,8">
                                <ComboBox.ItemsSource>
                                    <x:Array Type="models:NormalizationPreset">
                                        <models:NormalizationPreset>None</models:NormalizationPreset>
                                        <models:NormalizationPreset>SpacesToDashes</models:NormalizationPreset>
                                        <models:NormalizationPreset>SpacesToUnderscores</models:NormalizationPreset>
                                        <models:NormalizationPreset>RemoveSpaces</models:NormalizationPreset>
                                        <models:NormalizationPreset>DashesToSpaces</models:NormalizationPreset>
                                        <models:NormalizationPreset>UnderscoresToSpaces</models:NormalizationPreset>
                                        <models:NormalizationPreset>DashesToUnderscores</models:NormalizationPreset>
                                        <models:NormalizationPreset>UnderscoresToDashes</models:NormalizationPreset>
                                    </x:Array>
                                </ComboBox.ItemsSource>
                            </ComboBox>

                            <TextBlock Grid.Row="2" TextWrapping="Wrap" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Top">
                                Normalization converts spaces and separators according to the selected preset. 
                                Multiple consecutive separators will be cleaned up automatically.
                            </TextBlock>
                        </Grid>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" 
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>

        <!-- Preview Grid -->
        <GroupBox Header="Preview" Grid.Row="3" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <WrapPanel Grid.Row="0" Margin="0,0,0,4">
                    <Button Content="Apply Preview" Command="{Binding ApplyPreviewCommand}" MinWidth="110" Margin="0,2,8,2" FontWeight="Bold" />
                    <Button Content="Select All" Command="{Binding SelectAllCommand}" MinWidth="90" Margin="0,2,8,2" />
                    <Button Content="Select None" Command="{Binding SelectNoneCommand}" MinWidth="90" Margin="0,2,16,2" />
                    <TextBlock VerticalAlignment="Center" Margin="0,0,4,0">Files:</TextBlock>
                    <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="{Binding TotalCount}" Margin="0,0,16,0" />
                    <TextBlock VerticalAlignment="Center" Margin="0,0,4,0">Selected:</TextBlock>
                    <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="{Binding SelectedCount}" />
                </WrapPanel>

                <DataGrid Grid.Row="1" x:Name="PreviewDataGrid" ItemsSource="{Binding PreviewItems}" AutoGenerateColumns="False" 
                              CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="True" 
                              SelectionMode="Extended" ColumnHeaderHeight="32" 
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.CanContentScroll="True"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              EnableRowVirtualization="True">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Apply" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="60" CanUserResize="True" MinWidth="50" />
                            <DataGridTextColumn Header="Original Name" Binding="{Binding OriginalFileName}" Width="300" MinWidth="100" IsReadOnly="True" CanUserResize="True" />
                            <DataGridTextColumn Header="Proposed Name" Binding="{Binding ProposedFileName}" Width="300" MinWidth="100" IsReadOnly="True" CanUserResize="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Foreground" Value="DarkBlue" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" MinWidth="80" IsReadOnly="True" CanUserResize="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Success">
                                            <Setter Property="Foreground" Value="Green" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Failed">
                                            <Setter Property="Foreground" Value="Red" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Pending">
                                            <Setter Property="Foreground" Value="Orange" />
                                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="DryRun">
                                            <Setter Property="Foreground" Value="Purple" />
                                            <Setter Property="FontStyle" Value="Italic" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Directory" Binding="{Binding Directory}" Width="400" MinWidth="150" IsReadOnly="True" CanUserResize="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="10" />
                                    <Setter Property="Foreground" Value="Gray" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Actions and Status -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <CheckBox IsChecked="{Binding DryRun}" Margin="0,0,16,0" FontWeight="Bold">Dry Run (Simulate)</CheckBox>
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" FontStyle="Italic" />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="âœ… Apply Changes" Command="{Binding ApplyChangesCommand}" MinWidth="180" Margin="0,0,8,0" 
                        FontWeight="Bold" Height="32"
                        Background="#FF4CAF50" Foreground="White"/>
                <Button Content="â†© Undo Last" Command="{Binding UndoLastCommand}" MinWidth="180" Margin="0,0,8,0" Height="32"
                        Background="#FFFF9800" Foreground="White"/>
                <Button Content="ðŸ“Š Export CSV" Command="{Binding ExportCsvCommand}" MinWidth="180" Margin="0,0,8,0" Height="32"
                        Background="#FF2196F3" Foreground="White"/>
                <Button Content="ðŸ”„ Reset All" Command="{Binding ResetAllCommand}" MinWidth="180" Height="32"
                        Background="#FFF44336" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
