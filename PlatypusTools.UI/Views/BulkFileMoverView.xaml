<UserControl x:Class="PlatypusTools.UI.Views.BulkFileMoverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="220" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left: Profile Management -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <GroupBox Header="Profiles" Grid.Row="0" Margin="0,0,0,4">
                <StackPanel Margin="4">
                    <ListBox ItemsSource="{Binding ProfileNames}" SelectedItem="{Binding SelectedProfileName}"
                             Height="120" Margin="0,0,0,8" />
                    <WrapPanel>
                        <Button Content="Load" Command="{Binding LoadProfileCommand}" MinWidth="60" Margin="0,0,4,0"
                                Background="#FF2196F3" Foreground="White" />
                        <Button Content="Delete" Command="{Binding DeleteProfileCommand}" MinWidth="60" Margin="0,0,4,0"
                                Background="#FFF44336" Foreground="White" />
                        <Button Content="New" Command="{Binding NewProfileCommand}" MinWidth="60"
                                Background="#FF4CAF50" Foreground="White" />
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Profile Settings" Grid.Row="1" Margin="0,0,0,4">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="4">
                        <TextBlock Text="Profile Name:" Margin="0,0,0,4" />
                        <TextBox Text="{Binding ProfileName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" />

                        <TextBlock Text="Source Folder:" Margin="0,0,0,4" />
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding SourceFolder, UpdateSourceTrigger=PropertyChanged}" />
                            <Button Content="..." Grid.Column="1" Command="{Binding BrowseSourceCommand}" Width="30" Margin="4,0,0,0" />
                        </Grid>

                        <Button Content="Save Profile" Command="{Binding SaveProfileCommand}" FontWeight="Bold"
                                Background="#FF4CAF50" Foreground="White" Margin="0,0,0,8" />
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>

            <GroupBox Header="Rules" Grid.Row="2">
                <StackPanel Margin="4">
                    <DataGrid ItemsSource="{Binding Rules}" SelectedItem="{Binding SelectedRule}"
                              AutoGenerateColumns="False" Height="120" IsReadOnly="True"
                              CanUserSortColumns="False" HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type" Binding="{Binding Condition}" Width="80" />
                            <DataGridTextColumn Header="Pattern" Binding="{Binding Value}" Width="80" />
                            <DataGridTextColumn Header="Dest" Binding="{Binding DestinationFolder}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0" SelectedItem="{Binding NewRuleType}" Margin="0,0,4,0">
                            <ComboBoxItem Content="Extension" />
                            <ComboBoxItem Content="NameContains" />
                            <ComboBoxItem Content="NameRegex" />
                            <ComboBoxItem Content="SizeGreaterThan" />
                            <ComboBoxItem Content="SizeLessThan" />
                            <ComboBoxItem Content="OlderThan" />
                            <ComboBoxItem Content="NewerThan" />
                        </ComboBox>
                        <TextBox Grid.Column="1" Text="{Binding NewRulePattern, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0" />
                        <TextBox Grid.Column="2" Text="{Binding NewRuleDestination, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                    <WrapPanel Margin="0,4,0,0">
                        <Button Content="Add Rule" Command="{Binding AddRuleCommand}" MinWidth="70" Margin="0,0,4,0"
                                Background="#FF2196F3" Foreground="White" />
                        <Button Content="Remove" Command="{Binding RemoveRuleCommand}" MinWidth="70"
                                Background="#FFF44336" Foreground="White" />
                    </WrapPanel>
                </StackPanel>
            </GroupBox>
        </Grid>

        <GridSplitter Grid.Column="1" Width="5" VerticalAlignment="Stretch"
                      Background="#CCCCCC" Cursor="SizeWE" />

        <!-- Right: Preview & Execute -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <WrapPanel Grid.Row="0" Margin="0,0,0,8">
                <Button Content="Preview" Command="{Binding PreviewCommand}" MinWidth="90" FontWeight="Bold"
                        Background="#FF9C27B0" Foreground="White" Margin="0,0,8,0" />
                <Button Content="Execute Move" Command="{Binding ExecuteCommand}" MinWidth="100" FontWeight="Bold"
                        Background="#FF4CAF50" Foreground="White" Margin="0,0,8,0" />
                <Button Content="Cancel" Command="{Binding CancelCommand}" MinWidth="80"
                        Background="#FFF44336" Foreground="White" Margin="0,0,16,0" />
                <ProgressBar Width="200" Height="20" Value="{Binding Progress}" Maximum="100" Margin="0,0,8,0"
                             Visibility="{Binding IsExecuting, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </WrapPanel>

            <DataGrid Grid.Row="1" ItemsSource="{Binding PreviewResults}" AutoGenerateColumns="False"
                      IsReadOnly="True" CanUserSortColumns="True"
                      HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Source" Binding="{Binding SourcePath}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                <Setter Property="ToolTip" Value="{Binding SourcePath}" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Destination" Binding="{Binding DestinationPath}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                <Setter Property="ToolTip" Value="{Binding DestinationPath}" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Rule" Binding="{Binding RuleName}" Width="100" />
                    <DataGridTextColumn Header="Status" Binding="{Binding Error}" Width="80" />
                </DataGrid.Columns>
            </DataGrid>

            <StatusBar Grid.Row="2">
                <StatusBarItem>
                    <TextBlock Text="{Binding StatusMessage}" />
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</UserControl>
