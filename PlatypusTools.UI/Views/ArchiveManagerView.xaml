<UserControl x:Class="PlatypusTools.UI.Views.ArchiveManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:PlatypusTools.UI.Converters"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToForegroundConverter x:Key="BoolToForegroundConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="ðŸ“‚ Open Archive" Click="OnOpenArchiveClick" Width="120" Margin="0,0,8,0"/>
            <Button Content="ðŸ“¦ Create Archive" Click="OnCreateArchiveClick" Width="120" Margin="0,0,8,0"/>
            <Separator Margin="8,0"/>
            <Button Content="ðŸ“¤ Extract All" Click="OnExtractAllClick" Width="100" Margin="0,0,8,0" 
                    Background="LightGreen" FontWeight="Bold"/>
            <Button Content="ðŸ“¤ Extract Selected" Click="OnExtractSelectedClick" Width="120" Margin="0,0,8,0"/>
            <Separator Margin="8,0"/>
            <Button Content="âž• Add Files" Click="OnAddFilesClick" Width="90" Margin="0,0,8,0"/>
            <Button Content="ðŸ” Test" Click="OnTestClick" Width="70" Margin="0,0,8,0"/>
            <Button Content="Cancel" Click="OnCancelClick" Width="80" Background="LightCoral"
                    Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>
        
        <!-- Archive Info & Create Options -->
        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Current Archive Info -->
            <GroupBox Header="Archive Info" Grid.Column="0" Margin="0,0,8,0">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="File:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="{Binding ArchiveFileName}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                    
                    <TextBlock Grid.Column="2" Text="Size:" VerticalAlignment="Center" Margin="16,0,8,0" Foreground="Gray"/>
                    <TextBlock Grid.Column="3" Text="{Binding ArchiveInfo.FileSizeDisplay}" VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Column="4" Text="Entries:" VerticalAlignment="Center" Margin="16,0,8,0" Foreground="Gray"/>
                    <TextBlock Grid.Column="5" Text="{Binding ArchiveInfo.EntryCount}" VerticalAlignment="Center" FontWeight="Bold"/>
                </Grid>
            </GroupBox>
            
            <!-- Create Options -->
            <GroupBox Header="Create Options" Grid.Column="1" Width="450">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Row 1: Format, Level, Password -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Format:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding AvailableFormats}" SelectedItem="{Binding SelectedFormat}" Width="80" Margin="0,0,16,0"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Level:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Grid.Row="0" Grid.Column="3" ItemsSource="{Binding CompressionLevels}" SelectedItem="{Binding SelectedLevel}" Width="80" Margin="0,0,16,0"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="ðŸ” Password:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <PasswordBox Grid.Row="0" Grid.Column="5" Width="100" x:Name="PasswordBox" 
                                 PasswordChanged="OnPasswordChanged" ToolTip="Leave empty for no encryption"/>
                    
                    <!-- Row 2: Split Options -->
                    <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="Split archive:" 
                              IsChecked="{Binding EnableSplitArchive}" VerticalAlignment="Center" Margin="0,8,8,0"/>
                    <ComboBox Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" 
                              ItemsSource="{Binding SplitSizeOptions}" 
                              SelectedItem="{Binding SplitSizeMB}" 
                              IsEnabled="{Binding EnableSplitArchive}"
                              Width="80" Margin="0,8,8,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="4" Text="MB per part" VerticalAlignment="Center" Margin="0,8,0,0"
                               Foreground="{Binding EnableSplitArchive, Converter={StaticResource BoolToForegroundConverter}}"/>
                </Grid>
            </GroupBox>
        </Grid>
        
        <!-- Archive Contents -->
        <GroupBox Header="Archive Contents" Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Selection toolbar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="Select All" Click="OnSelectAllClick" Width="80" Margin="0,0,8,0"/>
                    <Button Content="Select None" Click="OnSelectNoneClick" Width="80" Margin="0,0,16,0"/>
                    <TextBlock x:Name="SelectionInfoText" VerticalAlignment="Center" Foreground="Gray">
                        <Run Text="Selected: "/><Run Text="{Binding SelectedEntries.Count, Mode=OneWay}" FontWeight="Bold"/>
                        <Run Text=" of "/><Run Text="{Binding Entries.Count, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
                
                <!-- Entries DataGrid -->
                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <DataGrid x:Name="EntriesDataGrid" ItemsSource="{Binding Entries}"
                              SelectedItem="{Binding SelectedEntry}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True"
                              SelectionMode="Extended"
                              IsReadOnly="True"
                              ColumnHeaderHeight="32"
                              GridLinesVisibility="Horizontal"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Disabled">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                    Width="30" MinWidth="30" CanUserResize="False"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="250" MinWidth="150" CanUserResize="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDirectory}" Value="True">
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Size" Binding="{Binding SizeDisplay}" Width="80" MinWidth="60" CanUserResize="True"/>
                            <DataGridTextColumn Header="Compressed" Binding="{Binding CompressedSizeDisplay}" Width="90" MinWidth="70" CanUserResize="True"/>
                            <DataGridTextColumn Header="Ratio" Binding="{Binding CompressionRatio}" Width="60" MinWidth="50" CanUserResize="True"/>
                            <DataGridTextColumn Header="Modified" Binding="{Binding LastModified, StringFormat='yyyy-MM-dd HH:mm'}" Width="130" MinWidth="110" CanUserResize="True"/>
                            <DataGridCheckBoxColumn Header="512" Binding="{Binding IsEncrypted, Mode=OneWay}" Width="35" MinWidth="35" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="*" MinWidth="200" CanUserResize="True"/>
                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Extract Selected" Command="{Binding ExtractSelectedCommand}"/>
                                <Separator/>
                                <MenuItem Header="Select All" Command="{Binding SelectAllCommand}"/>
                                <MenuItem Header="Select None" Command="{Binding SelectNoneCommand}"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </ScrollViewer>
            </Grid>
        </GroupBox>
        
        <!-- Progress -->
        <Grid Grid.Row="3" Margin="0,8,0,0" Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <ProgressBar Grid.Row="0" Height="20" Value="{Binding Progress}" Maximum="100"/>
            <TextBlock Grid.Row="1" Text="{Binding CurrentFile}" TextTrimming="CharacterEllipsis" 
                       Foreground="Gray" FontSize="11" Margin="0,4,0,0"/>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="4" Margin="0,8,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding DataContext.StatusMessage, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal"
                            Visibility="{Binding DataContext.IsProcessing, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed, TargetNullValue=Collapsed}">
                    <ProgressBar Width="100" Height="16" IsIndeterminate="True" Margin="0,0,8,0"/>
                    <TextBlock Text="Processing..." Foreground="Gray"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
