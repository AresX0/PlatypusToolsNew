<UserControl x:Class="PlatypusTools.UI.Views.EnvironmentVariableManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="350" MinWidth="300" />
        </Grid.ColumnDefinitions>

        <!-- Left: Variables List -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Search & Filter -->
            <GroupBox Header="Environment Variables" Grid.Row="0" Margin="0,0,0,4">
                <WrapPanel Margin="8">
                    <TextBlock Text="Search:" VerticalAlignment="Center" Width="55" />
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Delay=300}" Width="200" Margin="0,0,16,0" />
                    <TextBlock Text="Scope:" VerticalAlignment="Center" Width="45" />
                    <ComboBox SelectedItem="{Binding FilterTarget}" Width="100" Margin="0,0,16,0">
                        <ComboBoxItem Content="All" IsSelected="True" />
                        <ComboBoxItem Content="User" />
                        <ComboBoxItem Content="Machine" />
                        <ComboBoxItem Content="Process" />
                    </ComboBox>
                    <Button Content="Refresh" Command="{Binding RefreshCommand}" MinWidth="70" Margin="0,0,8,0"
                            Background="#FF2196F3" Foreground="White" />
                    <Button Content="Export" Command="{Binding ExportCommand}" MinWidth="70" Margin="0,0,4,0"
                            Background="#FF9C27B0" Foreground="White" />
                    <Button Content="Import" Command="{Binding ImportCommand}" MinWidth="70"
                            Background="#FFFF9800" Foreground="White" />
                </WrapPanel>
            </GroupBox>

            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"
                          Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows" />

            <!-- Variables DataGrid -->
            <DataGrid Grid.Row="2" ItemsSource="{Binding Variables}" SelectedItem="{Binding SelectedVariable}"
                      AutoGenerateColumns="False" IsReadOnly="True"
                      HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Scope" Binding="{Binding Target}" Width="70" />
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                <Setter Property="ToolTip" Value="{Binding Value}" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Path?" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding IsPath}" HorizontalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPath}" Value="True">
                                                    <Setter Property="Foreground" Value="Green" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Actions" Width="120" MinWidth="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Copy" Command="{Binding DataContext.CopyValueCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            MinWidth="50" Margin="0,0,4,0" Background="#FF2196F3" Foreground="White" />
                                    <Button Content="Delete" Command="{Binding DataContext.DeleteVariableCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            MinWidth="50" Background="#FFF44336" Foreground="White" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StatusBar Grid.Row="3">
                <StatusBarItem>
                    <TextBlock Text="{Binding StatusMessage}" />
                </StatusBarItem>
            </StatusBar>
        </Grid>

        <GridSplitter Grid.Column="1" Width="5" VerticalAlignment="Stretch"
                      Background="#CCCCCC" Cursor="SizeWE" />

        <!-- Right: Editor & PATH Manager -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Editor -->
            <GroupBox Header="Edit Variable" Grid.Row="0" Margin="0,0,0,4">
                <StackPanel Margin="8">
                    <TextBlock Text="Name:" Margin="0,0,0,4" />
                    <TextBox Text="{Binding EditName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" />
                    <TextBlock Text="Value:" Margin="0,0,0,4" />
                    <TextBox Text="{Binding EditValue, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"
                             MinHeight="50" MaxHeight="100" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" Margin="0,0,0,8" />
                    <WrapPanel Margin="0,0,0,8">
                        <TextBlock Text="Scope:" VerticalAlignment="Center" Width="50" />
                        <ComboBox SelectedItem="{Binding EditTarget}" Width="100">
                            <ComboBoxItem Content="User" IsSelected="True" />
                            <ComboBoxItem Content="Machine" />
                        </ComboBox>
                    </WrapPanel>
                    <WrapPanel>
                        <Button Content="Save" Command="{Binding SaveVariableCommand}" MinWidth="70" Margin="0,0,8,0"
                                Background="#FF4CAF50" Foreground="White" FontWeight="Bold" />
                        <Button Content="New" Command="{Binding NewVariableCommand}" MinWidth="70"
                                Background="#FF2196F3" Foreground="White" />
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- PATH Editor -->
            <GroupBox Header="PATH Editor" Grid.Row="1">
                <Grid Margin="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ListBox ItemsSource="{Binding PathEntries}" SelectedItem="{Binding SelectedPathEntry}" Grid.Row="0" />

                    <Grid Grid.Row="1" Margin="0,4,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding NewPathEntry, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Content="..." Grid.Column="1" Command="{Binding BrowsePathCommand}" Width="30" Margin="4,0,0,0" />
                    </Grid>

                    <WrapPanel Grid.Row="2">
                        <Button Content="Add" Command="{Binding AddPathEntryCommand}" MinWidth="50" Margin="0,0,4,0"
                                Background="#FF4CAF50" Foreground="White" />
                        <Button Content="Remove" Command="{Binding RemovePathEntryCommand}" MinWidth="60" Margin="0,0,4,0"
                                Background="#FFF44336" Foreground="White" />
                        <Button Content="Up" Command="{Binding MoveUpCommand}" MinWidth="40" Margin="0,0,4,0"
                                Background="#FF2196F3" Foreground="White" />
                        <Button Content="Down" Command="{Binding MoveDownCommand}" MinWidth="50"
                                Background="#FF2196F3" Foreground="White" />
                    </WrapPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
