<Window x:Class="PlatypusTools.UI.Views.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PlatypusTools.UI.ViewModels"
        Title="Log Viewer" Height="600" Width="900"
        WindowStartupLocation="CenterOwner">
    
    <Window.DataContext>
        <vm:LogViewerViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <Style x:Key="LevelStyle" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Level}" Value="Debug">
                    <Setter Property="Foreground" Value="Gray"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Level}" Value="Info">
                    <Setter Property="Foreground" Value="DodgerBlue"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Level}" Value="Warning">
                    <Setter Property="Foreground" Value="Orange"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Level}" Value="Error">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Margin="4">
            <Button Command="{Binding RefreshCommand}" ToolTip="Refresh">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ”„" FontSize="14"/>
                    <TextBlock Text=" Refresh" Margin="4,0,0,0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding ClearCommand}" ToolTip="Clear All Logs">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ—‘ï¸" FontSize="14"/>
                    <TextBlock Text=" Clear" Margin="4,0,0,0"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding ExportCommand}" ToolTip="Export Logs">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¾" FontSize="14"/>
                    <TextBlock Text=" Export" Margin="4,0,0,0"/>
                </StackPanel>
            </Button>
            <Separator/>
            
            <!-- Level Filters -->
            <CheckBox Content="Debug" IsChecked="{Binding ShowDebug}" Margin="4,0"/>
            <CheckBox Content="Info" IsChecked="{Binding ShowInfo}" Margin="4,0"/>
            <CheckBox Content="Warning" IsChecked="{Binding ShowWarning}" Margin="4,0"/>
            <CheckBox Content="Error" IsChecked="{Binding ShowError}" Margin="4,0"/>
            <Separator/>
            
            <!-- Search -->
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="4,0"/>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200" Margin="4,0"/>
            <Separator/>
            
            <!-- Options -->
            <CheckBox Content="Auto-refresh" IsChecked="{Binding AutoRefresh}" Margin="4,0"/>
            <CheckBox Content="Auto-scroll" IsChecked="{Binding AutoScroll}" Margin="4,0"/>
        </ToolBar>
        
        <!-- Log List -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding FilteredEntries}"
                  SelectedItem="{Binding SelectedEntry}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Margin="4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding TimestampDisplay}" Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Level" Binding="{Binding LevelDisplay}" Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource LevelStyle}">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="NoWrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Copy" Command="{Binding CopySelectedCommand}"/>
                    <MenuItem Header="Select All" Command="ApplicationCommands.SelectAll"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource ControlBackgroundBrush}" 
                BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}"
                Padding="8,4">
            <TextBlock>
                <Run Text="{Binding EntryCount, Mode=OneWay}"/>
                <Run Text=" entries"/>
            </TextBlock>
        </Border>
    </Grid>
</Window>
