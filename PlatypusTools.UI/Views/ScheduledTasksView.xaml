<UserControl x:Class="PlatypusTools.UI.Views.ScheduledTasksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="60" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" MinHeight="100" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" MinHeight="120" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Actions -->
        <GroupBox Header="Scheduled Tasks Manager" Grid.Row="0" Margin="0,0,0,8">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <WrapPanel Grid.Column="0">
                    <Button Content="Refresh" Click="OnRefreshClick" MinWidth="80" Margin="0,2,8,2" />
                    <Button Content="Enable" Click="OnEnableClick" MinWidth="80" Background="DarkGreen" Foreground="White" Margin="0,2,8,2" />
                    <Button Content="Disable" Click="OnDisableClick" MinWidth="80" Background="DarkOrange" Foreground="White" Margin="0,2,8,2" />
                    <Button Content="Run Now" Click="OnRunClick" MinWidth="80" Margin="0,2,8,2" />
                    <Button Content="Delete" Click="OnDeleteClick" MinWidth="80" Background="DarkRed" Foreground="White" Margin="0,2,8,2" />
                    <Button Content="Create Task" Click="OnCreateClick" MinWidth="100" FontWeight="Bold" Margin="0,2,0,2" />
                </WrapPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,16,0">
                        Total: <Run x:Name="TotalTasksText" Text="{Binding TotalTasks, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock VerticalAlignment="Center" FontWeight="Bold" Foreground="Green">
                        Enabled: <Run x:Name="EnabledTasksText" Text="{Binding EnabledTasks, Mode=OneWay}" />
                    </TextBlock>
                </StackPanel>
            </Grid>
            </ScrollViewer>
        </GroupBox>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" 
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>

        <!-- Tasks List -->
        <GroupBox Header="Scheduled Tasks" Grid.Row="2" Margin="0,0,0,8">
                <DataGrid x:Name="TasksDataGrid" ItemsSource="{Binding Tasks}"
                          SelectedItem="{Binding SelectedTask}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeColumns="True"
                          CanUserReorderColumns="True"
                          CanUserSortColumns="True"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          ColumnHeaderHeight="32"
                          MinHeight="200"
                          ColumnWidth="*"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.CanContentScroll="True"
                          VirtualizingStackPanel.IsVirtualizing="True"
                          VirtualizingStackPanel.VirtualizationMode="Recycling"
                          EnableRowVirtualization="True">
                    <DataGrid.Columns>
                            <DataGridTextColumn Header="Task Name" Binding="{Binding Name}" Width="250" MinWidth="150" CanUserResize="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="State" Binding="{Binding State}" Width="80" MinWidth="60" CanUserResize="True"/>
                            <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding IsEnabled, Mode=OneWay}" Width="70" MinWidth="60" CanUserResize="True"/>
                            <DataGridTextColumn Header="Trigger Type" Binding="{Binding TriggerType}" Width="120" MinWidth="100" CanUserResize="True"/>
                            <DataGridTextColumn Header="Next Run" Binding="{Binding NextRunTime, StringFormat='yyyy-MM-dd HH:mm'}" Width="140" MinWidth="110" CanUserResize="True"/>
                            <DataGridTextColumn Header="Last Run" Binding="{Binding LastRunTime, StringFormat='yyyy-MM-dd HH:mm'}" Width="140" MinWidth="110" CanUserResize="True"/>
                            <DataGridTextColumn Header="Last Result" Binding="{Binding LastTaskResult}" Width="100" MinWidth="80" CanUserResize="True"/>
                            <DataGridTextColumn Header="Task Path" Binding="{Binding Path}" Width="*" MinWidth="200" CanUserResize="True"/>
                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Enable" Command="{Binding EnableCommand}" />
                                <MenuItem Header="Disable" Command="{Binding DisableCommand}" />
                                <MenuItem Header="Run Now" Command="{Binding RunCommand}" />
                                <Separator />
                                <MenuItem Header="Delete" Command="{Binding DeleteCommand}" />
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                </DataGrid>
        </GroupBox>

        <!-- GridSplitter between Windows and App tasks -->
        <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch" 
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>

        <!-- App Internal Tasks -->
        <GroupBox Header="PlatypusTools Internal Tasks" Grid.Row="4" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <WrapPanel Grid.Row="0" Margin="8,4">
                    <Button Content="Add Task" Command="{Binding AddAppTaskCommand}" MinWidth="80" Margin="0,2,8,2"
                            Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>
                    <Button Content="Remove" Command="{Binding RemoveAppTaskCommand}" MinWidth="80" Margin="0,2,8,2"
                            Background="#FFF44336" Foreground="White"/>
                    <Button Content="Run Now" Command="{Binding RunAppTaskNowCommand}" MinWidth="80" Margin="0,2,8,2"
                            Background="#FF2196F3" Foreground="White"/>
                    <Button Content="Toggle Enable" Command="{Binding ToggleAppTaskCommand}" MinWidth="100" Margin="0,2,8,2"
                            Background="#FFFF9800" Foreground="White"/>
                    <Button Content="Refresh" Command="{Binding RefreshAppTasksCommand}" MinWidth="80" Margin="0,2,8,2"/>
                    <TextBlock VerticalAlignment="Center" FontWeight="Bold" Margin="16,0,0,0">
                        App Tasks: <Run Text="{Binding TotalAppTasks, Mode=OneWay}" />
                    </TextBlock>
                </WrapPanel>
                <DataGrid Grid.Row="1" ItemsSource="{Binding AppTasks}" SelectedItem="{Binding SelectedAppTask}"
                          AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                          IsReadOnly="True" SelectionMode="Single" GridLinesVisibility="Horizontal"
                          MinHeight="80" ColumnWidth="*"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          VirtualizingStackPanel.IsVirtualizing="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" MinWidth="120"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120" MinWidth="80"/>
                        <DataGridTextColumn Header="Schedule" Binding="{Binding Schedule}" Width="100" MinWidth="80"/>
                        <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding IsEnabled}" Width="70"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90" MinWidth="70"/>
                        <DataGridTextColumn Header="Next Run" Binding="{Binding NextRun, StringFormat='yyyy-MM-dd HH:mm'}" Width="140"/>
                        <DataGridTextColumn Header="Last Run" Binding="{Binding LastRun, StringFormat='yyyy-MM-dd HH:mm'}" Width="140"/>
                        <DataGridTextColumn Header="Duration" Binding="{Binding LastDuration}" Width="90"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" MinWidth="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="5">
            <StatusBarItem>
                <TextBlock Text="{Binding DataContext.StatusMessage, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Loading..." Margin="0,0,8,0"
                               Visibility="{Binding DataContext.IsRefreshing, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed, TargetNullValue=Collapsed}" />
                    <ProgressBar Width="100" Height="16" IsIndeterminate="True"
                                 Visibility="{Binding DataContext.IsRefreshing, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed, TargetNullValue=Collapsed}" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
