<UserControl x:Class="PlatypusTools.UI.Views.ScreenshotView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:PlatypusTools.UI.ViewModels">
    
    <UserControl.DataContext>
        <vm:ScreenshotViewModel />
    </UserControl.DataContext>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="60"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*" MinHeight="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Screenshot Tool" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
            <TextBlock Text="Capture screens, windows, or regions and annotate them" 
                       Foreground="{DynamicResource TextSecondary}" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Toolbar -->
        <Border Grid.Row="1" Background="{DynamicResource CardBackground}" CornerRadius="8" Padding="10" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Capture Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Capture:" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold"/>
                    <Button Content="ðŸ–¥ï¸ Full Screen" Command="{Binding CaptureFullScreenCommand}"
                            Style="{DynamicResource PrimaryButton}" MinWidth="180" Margin="0,0,5,0"/>
                    <Button Content="ðŸ“º Primary" Command="{Binding CapturePrimaryScreenCommand}"
                            Style="{DynamicResource SecondaryButton}" MinWidth="180" Margin="0,0,5,0"/>
                    <Button Content="ðŸªŸ Window" Command="{Binding CaptureActiveWindowCommand}"
                            Style="{DynamicResource SecondaryButton}" MinWidth="180" Margin="0,0,5,0"/>
                    <Button Content="âœ‚ï¸ Region" Command="{Binding CaptureRegionCommand}"
                            Style="{DynamicResource SecondaryButton}" MinWidth="180" Margin="0,0,5,0"/>
                    <Button Content="ðŸ“œ Scroll" Command="{Binding CaptureScrollingCommand}"
                            ToolTip="Capture scrolling content (webpage, document)"
                            Style="{DynamicResource SecondaryButton}" MinWidth="180"/>
                </StackPanel>
                
                <Separator Grid.Column="1" Width="20" Background="Transparent"/>
                
                <!-- Annotation Tools -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Annotate:" VerticalAlignment="Center" Margin="0,0,10,0"
                               Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold"/>
                    <Button Content="âžœ" ToolTip="Arrow" Command="{Binding DrawArrowCommand}"
                            Style="{DynamicResource SecondaryButton}" Width="35" Margin="0,0,3,0"/>
                    <Button Content="â–¢" ToolTip="Rectangle" Command="{Binding DrawRectangleCommand}"
                            Style="{DynamicResource SecondaryButton}" Width="35" Margin="0,0,3,0"/>
                    <Button Content="â—‹" ToolTip="Ellipse" Command="{Binding DrawEllipseCommand}"
                            Style="{DynamicResource SecondaryButton}" Width="35" Margin="0,0,3,0"/>
                    <Button Content="T" ToolTip="Text" Command="{Binding DrawTextCommand}"
                            Style="{DynamicResource SecondaryButton}" Width="35" Margin="0,0,3,0"/>
                    <Button Content="â–®" ToolTip="Highlight" Command="{Binding DrawHighlightCommand}"
                            Style="{DynamicResource SecondaryButton}" Width="35" Margin="0,0,3,0"/>
                    <Button Content="â–¦" ToolTip="Blur/Pixelate" Command="{Binding BlurRegionCommand}"
                            Style="{DynamicResource SecondaryButton}" Width="35" Margin="0,0,3,0"/>
                    <Button Content="âœŽ" ToolTip="Freehand" Command="{Binding DrawFreehandCommand}"
                            Style="{DynamicResource SecondaryButton}" Width="35"/>
                </StackPanel>
                
                <!-- Output Buttons -->
                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <Button Content="ðŸ’¾ Save" Command="{Binding SaveCommand}"
                            Style="{DynamicResource PrimaryButton}" MinWidth="180" Margin="0,0,5,0"/>
                    <Button Content="ðŸ“‹ Copy" Command="{Binding CopyCommand}"
                            Style="{DynamicResource SecondaryButton}" MinWidth="180"/>
                </StackPanel>
            </Grid>
            </ScrollViewer>
        </Border>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" 
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>
        
        <!-- Main Content -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            
            <!-- Screenshot Preview -->
            <Border Grid.Column="0" Background="{DynamicResource CardBackground}" CornerRadius="8" Margin="0,0,10,0">
                <Grid>
                    <TextBlock Text="Capture a screenshot to begin" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="{DynamicResource TextSecondary}" FontSize="16"
                               Visibility="{Binding ScreenshotImage, Converter={StaticResource InverseNullToVisibilityConverter}}"/>
                    
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding ScreenshotImage, Converter={StaticResource NullToVisibilityConverter}}">
                        <Grid>
                            <Image Source="{Binding ScreenshotImage}" 
                                   Stretch="None"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   x:Name="ScreenshotImage"/>
                            <!-- Real-time annotation overlay -->
                            <Canvas x:Name="AnnotationOverlay" 
                                    Background="Transparent"
                                    HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Width="{Binding ScreenshotWidth}" 
                                    Height="{Binding ScreenshotHeight}"
                                    MouseLeftButtonDown="AnnotationOverlay_MouseLeftButtonDown"
                                    MouseMove="AnnotationOverlay_MouseMove"
                                    MouseLeftButtonUp="AnnotationOverlay_MouseLeftButtonUp"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Settings Panel -->
            <Border Grid.Column="1" Background="{DynamicResource CardBackground}" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Settings" FontWeight="SemiBold" FontSize="14" 
                               Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,15"/>
                    
                    <!-- Color Selection -->
                    <TextBlock Text="Annotation Color:" Foreground="{DynamicResource TextSecondary}" 
                               FontSize="12" Margin="0,0,0,5"/>
                    <ItemsControl ItemsSource="{Binding AnnotationColors}" Margin="0,0,0,15">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="25" Height="25" Margin="2" Cursor="Hand"
                                        BorderThickness="2" CornerRadius="3"
                                        MouseLeftButtonDown="ColorSwatch_MouseLeftButtonDown">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding}"/>
                                    </Border.Background>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Line Thickness -->
                    <TextBlock Text="Line Thickness:" Foreground="{DynamicResource TextSecondary}" 
                               FontSize="12" Margin="0,0,0,5"/>
                    <Slider Value="{Binding LineThickness}" Minimum="1" Maximum="10" 
                            TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,0,15"/>
                    
                    <!-- Text for Text Annotation -->
                    <TextBlock Text="Text Annotation:" Foreground="{DynamicResource TextSecondary}" 
                               FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding AnnotationText, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" Margin="0,0,0,15"/>
                    
                    <Separator Margin="0,0,0,15"/>
                    
                    <!-- Screenshot Info -->
                    <TextBlock Text="Screenshot Info" FontWeight="SemiBold" FontSize="12"
                               Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,10"/>
                    <TextBlock Foreground="{DynamicResource TextSecondary}" FontSize="12">
                        <Run Text="Size: "/>
                        <Run Text="{Binding ScreenshotWidth, Mode=OneWay}"/>
                        <Run Text=" x "/>
                        <Run Text="{Binding ScreenshotHeight, Mode=OneWay}"/>
                    </TextBlock>
                    
                    <Separator Margin="0,15"/>
                    
                    <!-- Current Mode -->
                    <TextBlock Text="{Binding CurrentModeText}" 
                               Foreground="{DynamicResource AccentBrush}" 
                               FontSize="11" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{DynamicResource CardBackground}" CornerRadius="4" Padding="10" Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource TextSecondary}"/>
        </Border>
    </Grid>
</UserControl>
