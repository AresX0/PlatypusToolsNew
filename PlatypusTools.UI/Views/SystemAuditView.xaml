<UserControl x:Class="PlatypusTools.UI.Views.SystemAuditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:PlatypusTools.UI.ViewModels"
             xmlns:services="clr-namespace:PlatypusTools.Core.Services;assembly=PlatypusTools.Core">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="60"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="2*" MinHeight="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Elevation Warning -->
        <Border Grid.Row="0" Background="Orange" Padding="10" Margin="0,0,0,10"
                Visibility="{Binding NeedsElevation, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock TextWrapping="Wrap" FontWeight="Bold" Foreground="White">
                ‚ö†Ô∏è Administrative privileges required for full system audit. Some features may be limited. Run as administrator for complete audit capabilities.
            </TextBlock>
        </Border>

        <!-- Quick Actions -->
        <GroupBox Header="Audit Actions" Grid.Row="1" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="üîç Full System Audit" Command="{Binding RunFullAuditCommand}" MinWidth="180" Height="35" 
                            Margin="0,0,5,0" Background="#FF2196F3" Foreground="White" FontWeight="Bold"/>
                    <Button Content="üë§ Scan Elevated Users" Command="{Binding ScanElevatedUsersCommand}" MinWidth="180" Height="35" 
                            Margin="0,0,5,0" Background="#FFFF9800" Foreground="White"/>
                    <Button Content="üîí Scan Critical ACLs" Command="{Binding ScanCriticalAclsCommand}" MinWidth="190" Height="35" 
                            Margin="0,0,5,0" Background="#FFF44336" Foreground="White"/>
                    <Button Content="‚¨Ü Scan Outbound Traffic" Command="{Binding ScanOutboundTrafficCommand}" MinWidth="180" Height="35" 
                            Margin="0,0,5,0" Background="#FF4CAF50" Foreground="White"/>
                    <Button Content="‚¨á Scan Inbound Traffic" Command="{Binding ScanInboundTrafficCommand}" MinWidth="190" Height="35" 
                            Margin="0,0,5,0" Background="#FF4CAF50" Foreground="White"/>
                    <Button Content="üë• Open Users &amp; Groups" Command="{Binding OpenUsersAndGroupsCommand}" MinWidth="190" Height="35" 
                            Margin="0,0,5,0" Background="#FF9C27B0" Foreground="White"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Firewall" Command="{Binding RunFirewallAuditCommand}" MinWidth="180" Height="35" Margin="0,0,5,0"/>
                    <Button Content="Updates" Command="{Binding RunUpdatesAuditCommand}" MinWidth="180" Height="35" Margin="0,0,5,0"/>
                    <Button Content="Startup Items" Command="{Binding RunStartupAuditCommand}" MinWidth="180" Height="35" Margin="0,0,5,0"/>
                </StackPanel>
            </StackPanel>
            </ScrollViewer>
        </GroupBox>

        <!-- User Management -->
        <GroupBox Header="User Management (Requires Admin)" Grid.Row="2" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Selected User:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold" Width="100"/>
                    <TextBox Text="{Binding SelectedUsername, UpdateSourceTrigger=PropertyChanged}" 
                             Width="200" Height="30" VerticalContentAlignment="Center" Margin="0,0,10,0"/>
                    
                    <Button Content="Disable User" Command="{Binding DisableUserCommand}" MinWidth="180" Height="30" 
                            Margin="0,0,5,0" Background="Orange"/>
                    <Button Content="Delete User" Command="{Binding DeleteUserCommand}" MinWidth="180" Height="30" 
                            Margin="0,0,5,0" Background="Red" Foreground="White"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="New password:" VerticalAlignment="Center" Margin="0,0,10,0" Width="100"/>
                    <TextBox Text="{Binding NewPassword, UpdateSourceTrigger=PropertyChanged}" 
                             Width="200" Height="30" VerticalContentAlignment="Center" Margin="0,0,10,0"/>
                    
                    <Button Content="Reset Password" Command="{Binding ResetPasswordCommand}" MinWidth="180" Height="30" 
                            Background="LightBlue"/>
                </StackPanel>
            </StackPanel>
            </ScrollViewer>
        </GroupBox>

        <!-- Statistics -->
        <GroupBox Header="Summary" Grid.Row="3" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Total Issues: " FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding TotalIssues}" Foreground="Red" FontWeight="Bold" Margin="0,0,20,0"/>
                
                <TextBlock Text="Critical: " FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding CriticalIssues}" Foreground="DarkRed" FontWeight="Bold" Margin="0,0,20,0"/>
                
                <TextBlock Text="Warnings: " FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding WarningIssues}" Foreground="Orange" FontWeight="Bold"/>
            </StackPanel>
        </GroupBox>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="4" Height="5" HorizontalAlignment="Stretch" 
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>

        <!-- Results Grid -->
        <GroupBox Header="Audit Results" Grid.Row="5" Margin="0,0,0,10">
                <DataGrid ItemsSource="{Binding AuditItems}" AutoGenerateColumns="False" CanUserAddRows="False"
                          SelectionMode="Single"
                          CanUserResizeColumns="True" CanUserSortColumns="True"
                          ColumnHeaderHeight="32"
                          MinHeight="200"
                          ColumnWidth="*"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.CanContentScroll="True"
                          VirtualizingStackPanel.IsVirtualizing="True"
                          VirtualizingStackPanel.VirtualizationMode="Recycling"
                          EnableRowVirtualization="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="150" CanUserResize="True" MinWidth="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" CanUserResize="True" MinWidth="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300" CanUserResize="True" MinWidth="150" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="100" CanUserResize="True" MinWidth="70">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Severity}" Value="Warning">
                                        <Setter Property="Foreground" Value="Orange"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Severity}" Value="Info">
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" CanUserResize="True" MinWidth="60">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="Pass">
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Fail">
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Unknown">
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Actions" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Fix" Command="{Binding DataContext.FixIssueCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}" MinWidth="180" Height="25"
                                        IsEnabled="{Binding CanAutoFix}" Background="LightYellow"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Status Bar -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ProgressBar Grid.Column="1" IsIndeterminate="True" Height="20" 
                         Visibility="{Binding IsAuditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Grid.Column="2" Content="Export Report" Command="{Binding ExportReportCommand}" MinWidth="180" 
                    Height="32" Margin="0,0,5,0"/>
            <Button Grid.Column="3" Content="Clear" Command="{Binding ClearCommand}" MinWidth="180" Height="32"/>
        </Grid>
    </Grid>
</UserControl>
