<Window x:Class="PlatypusTools.UI.Views.ItemSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:PlatypusTools.UI.Converters"
        mc:Ignorable="d"
        Title="Edit Item Settings" 
        Height="320" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <converters:JpegVisibilityConverter x:Key="JpegVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Per-Item Settings Override" FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="{Binding Item.FileName}" Foreground="Gray" TextTrimming="CharacterEllipsis" Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Settings -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Upscale Mode -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Upscale Mode:" 
                       VerticalAlignment="Center" Margin="0,0,8,12"/>
            <ComboBox Grid.Row="0" Grid.Column="1" 
                      ItemsSource="{Binding UpscaleModes}"
                      SelectedItem="{Binding SelectedMode}"
                      Margin="0,0,0,12"/>
            
            <!-- Scale Factor -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Scale Factor:" 
                       VerticalAlignment="Center" Margin="0,0,8,12"/>
            <ComboBox Grid.Row="1" Grid.Column="1" 
                      ItemsSource="{Binding ScaleFactors}"
                      SelectedItem="{Binding SelectedScale}"
                      Margin="0,0,0,12"/>
            
            <!-- Output Format -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Output Format:" 
                       VerticalAlignment="Center" Margin="0,0,8,12"/>
            <ComboBox Grid.Row="2" Grid.Column="1" 
                      ItemsSource="{Binding OutputFormats}"
                      SelectedItem="{Binding SelectedFormat}"
                      Margin="0,0,0,12"/>
            
            <!-- JPEG Quality (only shown when jpeg selected) -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="JPEG Quality:" 
                       VerticalAlignment="Center" Margin="0,0,8,0"
                       Visibility="{Binding SelectedFormat, Converter={StaticResource JpegVisibilityConverter}}"/>
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal"
                        Visibility="{Binding SelectedFormat, Converter={StaticResource JpegVisibilityConverter}}">
                <Slider Width="150" Minimum="50" Maximum="100" 
                        Value="{Binding JpegQuality}" 
                        TickFrequency="5" IsSnapToTickEnabled="True"/>
                <TextBlock Text="{Binding JpegQuality}" Margin="8,0,0,0" Width="30"/>
            </StackPanel>
        </Grid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" MinWidth="180" Margin="0,0,8,0" IsCancel="True"/>
            <Button Content="Apply" MinWidth="180" IsDefault="True" Click="ApplyButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
