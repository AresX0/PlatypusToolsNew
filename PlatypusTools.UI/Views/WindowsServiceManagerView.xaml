<UserControl x:Class="PlatypusTools.UI.Views.WindowsServiceManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Search & Filter -->
        <GroupBox Header="Windows Services Manager" Grid.Row="0" Margin="0,0,0,4">
            <WrapPanel Margin="8">
                <TextBlock Text="Search:" VerticalAlignment="Center" Width="55" />
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Delay=500}" Width="200" Margin="0,0,16,0" />
                <TextBlock Text="Status:" VerticalAlignment="Center" Width="50" />
                <ComboBox SelectedItem="{Binding FilterStatus}" Width="100" Margin="0,0,16,0">
                    <ComboBoxItem Content="All" IsSelected="True" />
                    <ComboBoxItem Content="Running" />
                    <ComboBoxItem Content="Stopped" />
                    <ComboBoxItem Content="Paused" />
                </ComboBox>
                <TextBlock Text="Start Type:" VerticalAlignment="Center" Width="70" />
                <ComboBox SelectedItem="{Binding FilterStartType}" Width="100" Margin="0,0,16,0">
                    <ComboBoxItem Content="All" IsSelected="True" />
                    <ComboBoxItem Content="Automatic" />
                    <ComboBoxItem Content="Manual" />
                    <ComboBoxItem Content="Disabled" />
                </ComboBox>
                <Button Content="Refresh" Command="{Binding RefreshCommand}" MinWidth="70" Margin="0,0,4,0"
                        Background="#FF2196F3" Foreground="White" />
                <Button Content="Export" Command="{Binding ExportListCommand}" MinWidth="70" Margin="0,0,4,0"
                        Background="#FF9C27B0" Foreground="White" />
                <Button Content="services.msc" Command="{Binding OpenServicesFolderCommand}" MinWidth="80"
                        Background="#FFFF9800" Foreground="White" />
            </WrapPanel>
        </GroupBox>

        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows" />

        <!-- Services DataGrid -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Services}" SelectedItem="{Binding SelectedService}"
                  AutoGenerateColumns="False" IsReadOnly="True" CanUserSortColumns="True"
                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Status" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status}" HorizontalAlignment="Center" FontWeight="Bold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Running">
                                                <Setter Property="Foreground" Value="Green" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Stopped">
                                                <Setter Property="Foreground" Value="Red" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Paused">
                                                <Setter Property="Foreground" Value="Orange" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="250">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                            <Setter Property="ToolTip" Value="{Binding Description}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Service Name" Binding="{Binding Name}" Width="180">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontFamily" Value="Consolas" />
                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Start Type" Binding="{Binding StartType}" Width="90" />
                <DataGridTextColumn Header="Account" Binding="{Binding Account}" Width="130">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                            <Setter Property="ToolTip" Value="{Binding Account}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                            <Setter Property="ToolTip" Value="{Binding Path}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Service Actions -->
        <GroupBox Header="Service Actions" Grid.Row="3" Margin="0,4,0,0">
            <WrapPanel Margin="8">
                <Button Content="Start" Command="{Binding StartCommand}" MinWidth="70" Margin="0,0,8,0"
                        Background="#FF4CAF50" Foreground="White" FontWeight="Bold" />
                <Button Content="Stop" Command="{Binding StopCommand}" MinWidth="70" Margin="0,0,8,0"
                        Background="#FFF44336" Foreground="White" FontWeight="Bold" />
                <Button Content="Restart" Command="{Binding RestartCommand}" MinWidth="70" Margin="0,0,8,0"
                        Background="#FFFF9800" Foreground="White" />
                <Button Content="Pause" Command="{Binding PauseCommand}" MinWidth="70" Margin="0,0,24,0"
                        Background="#FF2196F3" Foreground="White" />

                <TextBlock Text="Startup:" VerticalAlignment="Center" Margin="0,0,4,0" />
                <ComboBox SelectedItem="{Binding NewStartupType}" Width="110" Margin="0,0,8,0">
                    <ComboBoxItem Content="Automatic" IsSelected="True" />
                    <ComboBoxItem Content="Manual" />
                    <ComboBoxItem Content="Disabled" />
                </ComboBox>
                <Button Content="Set Startup" Command="{Binding SetStartupTypeCommand}" MinWidth="80" Margin="0,0,16,0"
                        Background="#FF9C27B0" Foreground="White" />
                <Button Content="Copy Name" Command="{Binding CopyServiceNameCommand}" MinWidth="80"
                        Background="#FF2196F3" Foreground="White" />
            </WrapPanel>
        </GroupBox>

        <!-- Status -->
        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="100" Height="16" IsIndeterminate="True"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
