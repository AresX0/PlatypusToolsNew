<UserControl x:Class="PlatypusTools.UI.Views.DuplicatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PlatypusTools.UI.ViewModels"
             xmlns:views="clr-namespace:PlatypusTools.UI.Views"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" MinHeight="100" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Grid.RowSpan="3" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
        <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">Folder:</TextBlock>
            <TextBox Width="250" Text="{Binding FolderPath, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="ðŸ“ Browse..." Command="{Binding BrowseCommand}" Width="90" Margin="8,0,0,0" Padding="6,2"/>
            <Button Content="ðŸ” Scan Duplicates" Command="{Binding ScanCommand}" Width="130" Margin="8,0,0,0" Padding="6,2"
                    Background="#FF4CAF50" Foreground="White"/>
            <Button Content="ðŸ–¼ Similar Images" Command="{Binding ScanSimilarCommand}" Width="120" Margin="4,0,0,0" Padding="6,2"
                    ToolTip="Find visually similar images using perceptual hashing" Background="#FF2196F3" Foreground="White"/>
            <Button Content="ðŸŽ¬ Similar Videos" Command="{Binding ScanSimilarVideosCommand}" Width="120" Margin="4,0,0,0" Padding="6,2"
                    ToolTip="Find similar videos by comparing key frames (requires FFmpeg)" Background="#FF9C27B0" Foreground="White"/>
            <Button Content="âŒ Cancel" Command="{Binding CancelScanCommand}" Width="80" Margin="4,0,0,0" Padding="6,2"
                    Background="#FFF44336" Foreground="White"/>
            <Button Content="ðŸ“¦ Staging" Command="{Binding ToggleStagingCommand}" Width="80" Margin="4,0,0,0" Padding="6,2"/>
        </StackPanel>
        
        <!-- Similarity Threshold Slider for Images -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" 
                    Visibility="{Binding ShowSimilarImages, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">Image Similarity Threshold:</TextBlock>
            <Slider Width="150" Minimum="50" Maximum="100" 
                    Value="{Binding SimilarityThreshold}" 
                    TickFrequency="5" IsSnapToTickEnabled="True"
                    VerticalAlignment="Center" />
            <TextBlock Text="{Binding SimilarityThreshold, StringFormat={}{0}%}" 
                       VerticalAlignment="Center" Margin="8,0,0,0" Width="40" />
            <ProgressBar Width="200" Height="16" Margin="16,0,0,0"
                         Value="{Binding ScanProgress}" Minimum="0" Maximum="100"
                         Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>
        
        <!-- Similarity Threshold Slider for Videos -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" 
                    Visibility="{Binding ShowSimilarVideos, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">Video Similarity Threshold:</TextBlock>
            <Slider Width="150" Minimum="50" Maximum="100" 
                    Value="{Binding VideoSimilarityThreshold}" 
                    TickFrequency="5" IsSnapToTickEnabled="True"
                    VerticalAlignment="Center" />
            <TextBlock Text="{Binding VideoSimilarityThreshold, StringFormat={}{0}%}" 
                       VerticalAlignment="Center" Margin="8,0,0,0" Width="40" />
            <ProgressBar Width="200" Height="16" Margin="16,0,0,0"
                         Value="{Binding ScanProgress}" Minimum="0" Maximum="100"
                         Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <CheckBox Content="Dry Run" IsChecked="{Binding DryRun}" />
            <CheckBox Content="Use Recycle Bin" IsChecked="{Binding UseRecycleBin}" Margin="8,0,0,0" />
            <Button Content="ðŸ“… Select Newest" Command="{Binding SelectNewestCommand}" Width="125" Margin="8,0,0,0" Padding="6,2"/>
            <Button Content="ðŸ“… Select Oldest" Command="{Binding SelectOldestCommand}" Width="125" Margin="8,0,0,0" Padding="6,2"/>
            <Button Content="ðŸ“ Select Largest" Command="{Binding SelectLargestCommand}" Width="130" Margin="8,0,0,0" Padding="6,2"/>
            <Button Content="ðŸ“ Select Smallest" Command="{Binding SelectSmallestCommand}" Width="135" Margin="8,0,0,0" Padding="6,2"/>
            <Button Content="âœ“ Keep One Per Group" Command="{Binding KeepOneCommand}" Width="150" Margin="8,0,0,0" Padding="6,2"
                    Background="#FF2196F3" Foreground="White"/>
            <Button Content="ðŸ—‘ï¸ Delete Selected" Command="{Binding DeleteSelectedCommand}" Width="130" Margin="8,0,0,0" Padding="6,2"
                    Background="#FFF44336" Foreground="White"/>
        </StackPanel>
        </StackPanel>
        </ScrollViewer>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch" 
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>

        <!-- Exact Duplicates DataGrid -->
            <DataGrid Grid.Row="4" ItemsSource="{Binding Groups}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                      CanUserResizeColumns="True" CanUserSortColumns="True"
                      ColumnHeaderHeight="32"
                      Visibility="{Binding ShowDuplicatesGrid, Converter={StaticResource BooleanToVisibilityConverter}}"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.CanContentScroll="True"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      EnableRowVirtualization="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Hash" Binding="{Binding Hash}" Width="250" CanUserResize="True" MinWidth="150" />
                    <DataGridTextColumn Header="# Files" Binding="{Binding Files.Count}" Width="60" CanUserResize="True" MinWidth="50" />
                    <DataGridTemplateColumn Header="Files" Width="*" MinWidth="200" CanUserResize="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ItemsControl ItemsSource="{Binding Files}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,8,0" />
                                                <TextBlock Text="{Binding Path}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" ToolTip="{Binding Path}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Actions" Width="340" MinWidth="340" CanUserResize="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ItemsControl ItemsSource="{Binding Files}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <Button Content="Preview" Command="{Binding DataContext.PreviewFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" MinWidth="65" Padding="6,2"/>
                                                <Button Content="Open" Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" MinWidth="55" Margin="4,0,0,0" Padding="6,2"/>
                                                <Button Content="Folder" Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" MinWidth="60" Margin="4,0,0,0" Padding="6,2"/>
                                                <Button Content="Rename" Command="{Binding DataContext.RenameFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" MinWidth="65" Margin="4,0,0,0" Padding="6,2"/>
                                                <Button Content="Stage" Command="{Binding DataContext.StageFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" MinWidth="55" Margin="4,0,0,0" Padding="6,2"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        
        <!-- Similar Images Grid View -->
        <ScrollViewer Grid.Row="4" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding ShowSimilarImages, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding SimilarImageGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,8" Padding="8" CornerRadius="4" Background="#F9F9F9">
                            <StackPanel>
                                <TextBlock Text="{Binding Summary}" FontWeight="SemiBold" Margin="0,0,0,8" />
                                <ItemsControl ItemsSource="{Binding Images}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" Margin="4" Padding="8" CornerRadius="4" Width="180" Background="{DynamicResource ControlBackgroundBrush}">
                                                <StackPanel>
                                                    <CheckBox IsChecked="{Binding IsSelected}" HorizontalAlignment="Right" Margin="0,0,0,4" />
                                                    <Image Source="{Binding Thumbnail}" Width="120" Height="90" Stretch="Uniform" 
                                                           HorizontalAlignment="Center" Margin="0,0,0,4" />
                                                    <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis" 
                                                               FontSize="11" ToolTip="{Binding FilePath}" />
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <TextBlock Text="{Binding SimilarityText}" FontSize="10" Foreground="Green" FontWeight="Bold" />
                                                        <TextBlock Text=" | " FontSize="10" Foreground="Gray" />
                                                        <TextBlock Text="{Binding FileSizeText}" FontSize="10" Foreground="Gray" />
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Dimensions}" FontSize="10" Foreground="Gray" />
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <Button Content="Open" MinWidth="55" FontSize="10" Padding="4,2"
                                                                Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding FilePath}" />
                                                        <Button Content="Folder" MinWidth="55" FontSize="10" Padding="4,2" Margin="4,0,0,0"
                                                                Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding FilePath}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Similar Videos Grid View -->
        <ScrollViewer Grid.Row="4" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding ShowSimilarVideos, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding SimilarVideoGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,8" Padding="8" CornerRadius="4" Background="#F9F9F9">
                            <StackPanel>
                                <TextBlock Text="{Binding Summary}" FontWeight="SemiBold" Margin="0,0,0,8" />
                                <ItemsControl ItemsSource="{Binding Videos}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" Margin="4" Padding="8" CornerRadius="4" Width="200" Background="{DynamicResource ControlBackgroundBrush}">
                                                <StackPanel>
                                                    <CheckBox IsChecked="{Binding IsSelected}" HorizontalAlignment="Right" Margin="0,0,0,4" />
                                                    <Image Source="{Binding Thumbnail}" Width="160" Height="90" Stretch="Uniform" 
                                                           HorizontalAlignment="Center" Margin="0,0,0,4" />
                                                    <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis" 
                                                               FontSize="11" ToolTip="{Binding FilePath}" />
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <TextBlock Text="{Binding SimilarityText}" FontSize="10" Foreground="Green" FontWeight="Bold" />
                                                        <TextBlock Text=" | " FontSize="10" Foreground="Gray" />
                                                        <TextBlock Text="{Binding FileSizeText}" FontSize="10" Foreground="Gray" />
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                        <TextBlock Text="{Binding Duration}" FontSize="10" Foreground="Gray" />
                                                        <TextBlock Text=" | " FontSize="10" Foreground="Gray" />
                                                        <TextBlock Text="{Binding Dimensions}" FontSize="10" Foreground="Gray" />
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding FrameRateText}" FontSize="10" Foreground="Gray" />
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <Button Content="Open" MinWidth="55" FontSize="10" Padding="4,2"
                                                                Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding FilePath}" />
                                                        <Button Content="Folder" MinWidth="55" FontSize="10" Padding="4,2" Margin="4,0,0,0"
                                                                Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding FilePath}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="5" Margin="0,8,0,0" Background="#F0F0F0" Padding="8,4">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" />
                <TextBlock Text="â³" VerticalAlignment="Center" Margin="8,0,0,0" 
                          Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>
        </Border>

        <Border Grid.Row="6" Margin="0,8,0,0" Visibility="{Binding StagingVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <views:StagingPanel DataContext="{Binding Staging}" />
        </Border>
    </Grid>
</UserControl>