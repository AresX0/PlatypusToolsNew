<UserControl x:Class="PlatypusTools.UI.Views.DuplicatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PlatypusTools.UI.ViewModels"
             xmlns:views="clr-namespace:PlatypusTools.UI.Views"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" MinHeight="100" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Grid.RowSpan="3" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
        <WrapPanel Margin="0,0,0,8">
            <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">Folder:</TextBlock>
            <TextBox Width="250" Text="{Binding FolderPath, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="üìÅ Browse..." Command="{Binding BrowseCommand}" MinWidth="100" Margin="8,2,0,2"/>
            <Button Content="üîç Scan Duplicates" Command="{Binding ScanCommand}" MinWidth="120" Margin="8,2,0,2"
                    Background="#FF4CAF50" Foreground="White"/>
            <Button Content="üñº Similar Images" Command="{Binding ScanSimilarCommand}" MinWidth="110" Margin="4,2,0,2"
                    ToolTip="Find visually similar images using perceptual hashing" Background="#FF2196F3" Foreground="White"/>
            <Button Content="üé¨ Similar Videos" Command="{Binding ScanSimilarVideosCommand}" MinWidth="110" Margin="4,2,0,2"
                    ToolTip="Find similar videos by comparing key frames (requires FFmpeg)" Background="#FF9C27B0" Foreground="White"/>
            <Button Content="üéµ Similar Sounds" Command="{Binding ScanSimilarAudioCommand}" MinWidth="110" Margin="4,2,0,2"
                    ToolTip="Find acoustically similar audio files using audio fingerprinting (requires FFmpeg)" Background="#FFFF9800" Foreground="White"/>
            <Button Content="‚ùå Cancel" Command="{Binding CancelScanCommand}" MinWidth="80" Margin="4,2,0,2"
                    Background="#FFF44336" Foreground="White"/>
            <Button Content="üì¶ Staging" Command="{Binding ToggleStagingCommand}" MinWidth="80" Margin="4,2,0,2"/>
        </WrapPanel>
        
        <!-- Scan Mode Selectors (always visible) -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold">Scan Options:</TextBlock>
            <TextBlock VerticalAlignment="Center" Margin="0,0,4,0">üé¨ Video Mode:</TextBlock>
            <ComboBox ItemsSource="{Binding VideoScanModes}" 
                      SelectedItem="{Binding VideoScanMode}" 
                      Width="90" VerticalAlignment="Center" Margin="0,0,16,0"
                      ToolTip="Fast: Analyze 3 frames from 15-sec sample. Thorough: Analyze 5 frames across entire video." />
            <TextBlock VerticalAlignment="Center" Margin="0,0,4,0">üéµ Audio Mode:</TextBlock>
            <ComboBox ItemsSource="{Binding AudioScanModes}" 
                      SelectedItem="{Binding AudioScanMode}" 
                      Width="90" VerticalAlignment="Center" Margin="0,0,16,0"
                      ToolTip="Fast: Analyze 15-second sample from middle. Thorough: Analyze entire audio file." />
        </StackPanel>

        <!-- Performance Controls -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold">Performance:</TextBlock>
            <TextBlock VerticalAlignment="Center" Margin="0,0,4,0">‚ö° Threads:</TextBlock>
            <Slider Width="120" Minimum="0" Maximum="{Binding MaxThreadCount}" 
                    Value="{Binding ScanThreadCount}" 
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    VerticalAlignment="Center"
                    ToolTip="Number of threads for parallel hashing. 0 = auto (use all CPU cores). Higher = faster scan but more CPU/disk usage." />
            <TextBlock Text="{Binding ScanThreadCountDisplay}" 
                       VerticalAlignment="Center" Margin="4,0,0,0" Width="55" />
            <TextBlock VerticalAlignment="Center" Margin="12,0,4,0">‚è± FFmpeg Timeout:</TextBlock>
            <Slider Width="100" Minimum="5" Maximum="120" 
                    Value="{Binding FfmpegTimeoutSeconds}" 
                    TickFrequency="5" IsSnapToTickEnabled="True"
                    VerticalAlignment="Center"
                    ToolTip="Per-file timeout in seconds for FFmpeg analysis. Files exceeding this are skipped. Increase if valid files are being skipped." />
            <TextBlock Text="{Binding FfmpegTimeoutSeconds, StringFormat={}{0}s}" 
                       VerticalAlignment="Center" Margin="4,0,0,0" Width="30" />
        </StackPanel>
        
        <!-- Similarity Threshold Slider for Images -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" 
                    Visibility="{Binding ShowSimilarImages, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">Image Similarity Threshold:</TextBlock>
            <Slider Width="150" Minimum="50" Maximum="100" 
                    Value="{Binding SimilarityThreshold}" 
                    TickFrequency="5" IsSnapToTickEnabled="True"
                    VerticalAlignment="Center" />
            <TextBlock Text="{Binding SimilarityThreshold, StringFormat={}{0}%}" 
                       VerticalAlignment="Center" Margin="8,0,0,0" Width="40" />
            <ProgressBar Width="200" Height="16" Margin="16,0,0,0"
                         Value="{Binding ScanProgress}" Minimum="0" Maximum="100"
                         Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>
        
        <!-- Similarity Threshold Slider for Videos -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" 
                    Visibility="{Binding ShowSimilarVideos, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">Video Similarity Threshold:</TextBlock>
            <Slider Width="150" Minimum="50" Maximum="100" 
                    Value="{Binding VideoSimilarityThreshold}" 
                    TickFrequency="5" IsSnapToTickEnabled="True"
                    VerticalAlignment="Center" />
            <TextBlock Text="{Binding VideoSimilarityThreshold, StringFormat={}{0}%}" 
                       VerticalAlignment="Center" Margin="8,0,0,0" Width="40" />
            <ProgressBar Width="200" Height="16" Margin="16,0,0,0"
                         Value="{Binding ScanProgress}" Minimum="0" Maximum="100"
                         Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>
        
        <!-- Similarity Threshold Slider for Audio -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" 
                    Visibility="{Binding ShowSimilarAudio, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">Audio Similarity Threshold:</TextBlock>
            <Slider Width="120" Minimum="50" Maximum="100" 
                    Value="{Binding AudioSimilarityThreshold}" 
                    TickFrequency="5" IsSnapToTickEnabled="True"
                    VerticalAlignment="Center" />
            <TextBlock Text="{Binding AudioSimilarityThreshold, StringFormat={}{0}%}" 
                       VerticalAlignment="Center" Margin="8,0,0,0" Width="40" />
            <ProgressBar Width="200" Height="16" Margin="16,0,0,0"
                         Value="{Binding ScanProgress}" Minimum="0" Maximum="100"
                         Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>

        <WrapPanel Margin="0,0,0,8">
            <CheckBox Content="Dry Run" IsChecked="{Binding DryRun}" VerticalAlignment="Center" Margin="0,2,0,2" />
            <CheckBox Content="Use Recycle Bin" IsChecked="{Binding UseRecycleBin}" VerticalAlignment="Center" Margin="8,2,0,2" />
            <Button Content="üìÖ Select Newest" Command="{Binding SelectNewestCommand}" MinWidth="110" Margin="8,2,0,2"/>
            <Button Content="üìÖ Select Oldest" Command="{Binding SelectOldestCommand}" MinWidth="110" Margin="8,2,0,2"/>
            <Button Content="üìê Select Largest" Command="{Binding SelectLargestCommand}" MinWidth="110" Margin="8,2,0,2"/>
            <Button Content="üìê Select Smallest" Command="{Binding SelectSmallestCommand}" MinWidth="110" Margin="8,2,0,2"/>
            <Button Content="‚úì Keep One Per Group" Command="{Binding KeepOneCommand}" MinWidth="130" Margin="8,2,0,2"
                    Background="#FF2196F3" Foreground="White"/>
            <Button Content="üóëÔ∏è Delete Selected" Command="{Binding DeleteSelectedCommand}" MinWidth="110" Margin="8,2,0,2"
                    Background="#FFF44336" Foreground="White"/>
            <Button Content="üìÅ Open in File Cleaner" Click="OpenInFileCleaner_Click" MinWidth="140" Margin="8,2,0,2"
                    Background="#FF9C27B0" Foreground="White"
                    ToolTip="Navigate to File Cleaner with the same folder loaded"/>
        </WrapPanel>
        </StackPanel>
        </ScrollViewer>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch" 
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>

        <!-- Exact Duplicates DataGrid -->
            <DataGrid Grid.Row="4" ItemsSource="{Binding Groups}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                      CanUserResizeColumns="True" CanUserSortColumns="True"
                      ColumnHeaderHeight="32"
                      Visibility="{Binding ShowDuplicatesGrid, Converter={StaticResource BooleanToVisibilityConverter}}"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.CanContentScroll="True"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      EnableRowVirtualization="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Hash" Binding="{Binding Hash}" Width="250" CanUserResize="True" MinWidth="150" />
                    <DataGridTextColumn Header="# Files" Binding="{Binding Files.Count}" Width="60" CanUserResize="True" MinWidth="50" />
                    <DataGridTemplateColumn Header="Files" Width="*" MinWidth="200" CanUserResize="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ItemsControl ItemsSource="{Binding Files}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,8,0" />
                                                <TextBlock Text="{Binding Path}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" ToolTip="{Binding Path}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Actions" Width="340" MinWidth="340" CanUserResize="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ItemsControl ItemsSource="{Binding Files}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <WrapPanel Margin="0,0,0,4">
                                                <Button Content="Preview" Command="{Binding DataContext.PreviewFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" MinWidth="60" Margin="0,1,4,1"/>
                                                <Button Content="Open" Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" MinWidth="45" Margin="0,1,4,1"/>
                                                <Button Content="Folder" Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" MinWidth="50" Margin="0,1,4,1"/>
                                                <Button Content="Rename" Command="{Binding DataContext.RenameFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" MinWidth="55" Margin="0,1,4,1"/>
                                                <Button Content="Stage" Command="{Binding DataContext.StageFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" MinWidth="45" Margin="0,1,0,1"/>
                                            </WrapPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        
        <!-- Similar Images Grid View -->
        <ScrollViewer Grid.Row="4" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding ShowSimilarImages, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding SimilarImageGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,8" Padding="8" CornerRadius="4" Background="#F9F9F9">
                            <StackPanel>
                                <TextBlock Text="{Binding Summary}" FontWeight="SemiBold" Margin="0,0,0,8" />
                                <ItemsControl ItemsSource="{Binding Images}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" Margin="4" Padding="8" CornerRadius="4" Width="180" Background="{DynamicResource ControlBackgroundBrush}">
                                                <StackPanel>
                                                    <CheckBox IsChecked="{Binding IsSelected}" HorizontalAlignment="Right" Margin="0,0,0,4" />
                                                    <Image Source="{Binding Thumbnail}" Width="120" Height="90" Stretch="Uniform" 
                                                           HorizontalAlignment="Center" Margin="0,0,0,4" />
                                                    <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis" 
                                                               FontSize="11" ToolTip="{Binding FilePath}" />
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <TextBlock Text="{Binding SimilarityText}" FontSize="10" Foreground="Green" FontWeight="Bold" />
                                                        <TextBlock Text=" | " FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                        <TextBlock Text="{Binding FileSizeText}" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Dimensions}" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <Button Content="Open" MinWidth="55" FontSize="10" Padding="4,2"
                                                                Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding FilePath}" />
                                                        <Button Content="Folder" MinWidth="55" FontSize="10" Padding="4,2" Margin="4,0,0,0"
                                                                Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding FilePath}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Similar Videos Grid View -->
        <ScrollViewer Grid.Row="4" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding ShowSimilarVideos, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding SimilarVideoGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,8" Padding="8" CornerRadius="4" Background="#F9F9F9">
                            <StackPanel>
                                <TextBlock Text="{Binding Summary}" FontWeight="SemiBold" Margin="0,0,0,8" />
                                <ItemsControl ItemsSource="{Binding Videos}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" Margin="4" Padding="8" CornerRadius="4" Width="200" Background="{DynamicResource ControlBackgroundBrush}">
                                                <StackPanel>
                                                    <CheckBox IsChecked="{Binding IsSelected}" HorizontalAlignment="Right" Margin="0,0,0,4" />
                                                    <Image Source="{Binding Thumbnail}" Width="160" Height="90" Stretch="Uniform" 
                                                           HorizontalAlignment="Center" Margin="0,0,0,4" />
                                                    <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis" 
                                                               FontSize="11" ToolTip="{Binding FilePath}" />
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <TextBlock Text="{Binding SimilarityText}" FontSize="10" Foreground="Green" FontWeight="Bold" />
                                                        <TextBlock Text=" | " FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                        <TextBlock Text="{Binding FileSizeText}" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                        <TextBlock Text="{Binding Duration}" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                        <TextBlock Text=" | " FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                        <TextBlock Text="{Binding Dimensions}" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding FrameRateText}" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <Button Content="Open" MinWidth="55" FontSize="10" Padding="4,2"
                                                                Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding FilePath}" />
                                                        <Button Content="Folder" MinWidth="55" FontSize="10" Padding="4,2" Margin="4,0,0,0"
                                                                Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding FilePath}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Similar Audio Grid View -->
        <ScrollViewer Grid.Row="4" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding ShowSimilarAudio, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding SimilarAudioGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,8" Padding="8" CornerRadius="4" Background="#F9F9F9">
                            <StackPanel>
                                <TextBlock Text="{Binding Summary}" FontWeight="SemiBold" Margin="0,0,0,8" />
                                <ItemsControl ItemsSource="{Binding AudioFiles}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" Margin="4" Padding="8" CornerRadius="4" Width="220" Background="{DynamicResource ControlBackgroundBrush}">
                                                <StackPanel>
                                                    <CheckBox IsChecked="{Binding IsSelected}" HorizontalAlignment="Right" Margin="0,0,0,4" />
                                                    <TextBlock Text="üéµ" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,4" />
                                                    <TextBlock Text="{Binding DisplayTitle}" TextTrimming="CharacterEllipsis" 
                                                               FontSize="11" FontWeight="SemiBold" ToolTip="{Binding FilePath}" />
                                                    <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis" 
                                                               FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" ToolTip="{Binding FilePath}" 
                                                               Visibility="{Binding Artist, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <TextBlock Text="{Binding SimilarityText}" FontSize="10" Foreground="Green" FontWeight="Bold" />
                                                        <TextBlock Text=" | " FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                        <TextBlock Text="{Binding FileSizeText}" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                        <TextBlock Text="{Binding Duration}" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                        <TextBlock Text=" | " FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                        <TextBlock Text="{Binding BitrateText}" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                        <TextBlock Text="{Binding SampleRateText}" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                        <TextBlock Text=" | " FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                        <TextBlock Text="{Binding ChannelInfo}" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                        <TextBlock Text=" | " FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                        <TextBlock Text="{Binding Codec}" FontSize="10" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <Button Content="Open" MinWidth="55" FontSize="10" Padding="4,2"
                                                                Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding FilePath}" />
                                                        <Button Content="Folder" MinWidth="55" FontSize="10" Padding="4,2" Margin="4,0,0,0"
                                                                Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding FilePath}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="5" Margin="0,8,0,0" Background="{DynamicResource ControlBackgroundBrush}" Padding="8,4">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" />
                <TextBlock Text="‚è≥" VerticalAlignment="Center" Margin="8,0,0,0" 
                          Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <Button Content="{Binding ShowScanLog, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert, FallbackValue='üìã Show Log'}"
                        Command="{Binding ToggleScanLogCommand}" 
                        Margin="16,0,0,0" Padding="6,2" FontSize="11"
                        Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Content" Value="üìã Show Log" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowScanLog}" Value="True">
                                    <Setter Property="Content" Value="üìã Hide Log" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Scan Log Panel -->
        <Border Grid.Row="6" Margin="0,4,0,0" Background="{DynamicResource ControlBackgroundBrush}" CornerRadius="4" Padding="4"
                Visibility="{Binding ShowScanLog, Converter={StaticResource BooleanToVisibilityConverter}}"
                MaxHeight="150">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="4,0,4,4">
                    <TextBlock Text="Scan Log" Foreground="#CCCCCC" FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center" />
                    <Button Content="Clear" Command="{Binding ClearScanLogCommand}" 
                            Margin="8,0,0,0" Padding="8,1" FontSize="10"
                            Background="#333333" Foreground="#AAAAAA" BorderThickness="0" />
                </StackPanel>
                <TextBox Grid.Row="1" Text="{Binding ScanLog, Mode=OneWay}" 
                         IsReadOnly="True" TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto"
                         Background="{DynamicResource ControlBackgroundBrush}" Foreground="#D4D4D4" 
                         BorderThickness="0" FontFamily="Consolas" FontSize="11"
                         Padding="4" />
            </Grid>
        </Border>

        <Border Grid.Row="7" Margin="0,8,0,0" Visibility="{Binding StagingVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <views:StagingPanel DataContext="{Binding Staging}" />
        </Border>
    </Grid>
</UserControl>