<UserControl x:Class="PlatypusTools.UI.Views.DuplicatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PlatypusTools.UI.ViewModels"
             xmlns:views="clr-namespace:PlatypusTools.UI.Views"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" MinHeight="100" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Grid.RowSpan="3" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
        <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">Folder:</TextBlock>
            <TextBox Width="250" Text="{Binding FolderPath, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Browse..." Command="{Binding BrowseCommand}" Width="70" Margin="8,0,0,0" />
            <Button Content="Scan Duplicates" Command="{Binding ScanCommand}" Width="110" Margin="8,0,0,0" />
            <Button Content="Similar Images" Command="{Binding ScanSimilarCommand}" Width="110" Margin="4,0,0,0" 
                    ToolTip="Find visually similar images using perceptual hashing" />
            <Button Content="Similar Videos" Command="{Binding ScanSimilarVideosCommand}" Width="110" Margin="4,0,0,0" 
                    ToolTip="Find similar videos by comparing key frames (requires FFmpeg)" />
            <Button Content="Cancel" Command="{Binding CancelScanCommand}" Width="60" Margin="4,0,0,0" />
            <Button Content="Staging" Command="{Binding ToggleStagingCommand}" Width="70" Margin="4,0,0,0" />
        </StackPanel>
        
        <!-- Similarity Threshold Slider for Images -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" 
                    Visibility="{Binding ShowSimilarImages, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">Image Similarity Threshold:</TextBlock>
            <Slider Width="150" Minimum="50" Maximum="100" 
                    Value="{Binding SimilarityThreshold}" 
                    TickFrequency="5" IsSnapToTickEnabled="True"
                    VerticalAlignment="Center" />
            <TextBlock Text="{Binding SimilarityThreshold, StringFormat={}{0}%}" 
                       VerticalAlignment="Center" Margin="8,0,0,0" Width="40" />
            <ProgressBar Width="200" Height="16" Margin="16,0,0,0"
                         Value="{Binding ScanProgress}" Minimum="0" Maximum="100"
                         Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>
        
        <!-- Similarity Threshold Slider for Videos -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" 
                    Visibility="{Binding ShowSimilarVideos, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">Video Similarity Threshold:</TextBlock>
            <Slider Width="150" Minimum="50" Maximum="100" 
                    Value="{Binding VideoSimilarityThreshold}" 
                    TickFrequency="5" IsSnapToTickEnabled="True"
                    VerticalAlignment="Center" />
            <TextBlock Text="{Binding VideoSimilarityThreshold, StringFormat={}{0}%}" 
                       VerticalAlignment="Center" Margin="8,0,0,0" Width="40" />
            <ProgressBar Width="200" Height="16" Margin="16,0,0,0"
                         Value="{Binding ScanProgress}" Minimum="0" Maximum="100"
                         Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <CheckBox Content="Dry Run" IsChecked="{Binding DryRun}" />
            <CheckBox Content="Use Recycle Bin" IsChecked="{Binding UseRecycleBin}" Margin="8,0,0,0" />
            <Button Content="Select Newest" Command="{Binding SelectNewestCommand}" Width="120" Margin="8,0,0,0" />
            <Button Content="Select Oldest" Command="{Binding SelectOldestCommand}" Width="120" Margin="8,0,0,0" />
            <Button Content="Select Largest" Command="{Binding SelectLargestCommand}" Width="120" Margin="8,0,0,0" />
            <Button Content="Select Smallest" Command="{Binding SelectSmallestCommand}" Width="120" Margin="8,0,0,0" />
            <Button Content="Keep One Per Group" Command="{Binding KeepOneCommand}" Width="140" Margin="8,0,0,0" />
            <Button Content="Delete Selected" Command="{Binding DeleteSelectedCommand}" Width="120" Margin="8,0,0,0" />
        </StackPanel>
        </StackPanel>
        </ScrollViewer>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch" 
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>

        <!-- Exact Duplicates DataGrid -->
        <ScrollViewer Grid.Row="4" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding ShowDuplicatesGrid, Converter={StaticResource BooleanToVisibilityConverter}}">
            <DataGrid ItemsSource="{Binding Groups}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                      CanUserResizeColumns="True" CanUserSortColumns="True"
                      ColumnHeaderHeight="32"
                      HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Hash" Binding="{Binding Hash}" Width="250" CanUserResize="True" MinWidth="150" />
                    <DataGridTextColumn Header="# Files" Binding="{Binding Files.Count}" Width="80" CanUserResize="True" MinWidth="60" />
                    <DataGridTemplateColumn Header="Files" Width="600" MinWidth="200" CanUserResize="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding Files}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,8,0" />
                                            <TextBlock Text="{Binding Path}" Width="240" TextTrimming="CharacterEllipsis" />
                                            <Button Content="Preview" Command="{Binding DataContext.PreviewFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" Width="70" Margin="0,0,0,0" />
                                            <Button Content="Open" Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" Width="60" Margin="8,0,0,0" />
                                            <Button Content="Folder" Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" Width="60" Margin="4,0,0,0" />
                                            <Button Content="Rename" Command="{Binding DataContext.RenameFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" Width="60" Margin="4,0,0,0" />
                                            <Button Content="Stage" Command="{Binding DataContext.StageFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding Path}" Width="80" Margin="4,0,0,0" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
        
        <!-- Similar Images Grid View -->
        <ScrollViewer Grid.Row="4" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding ShowSimilarImages, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding SimilarImageGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,8" Padding="8" CornerRadius="4" Background="#F9F9F9">
                            <StackPanel>
                                <TextBlock Text="{Binding Summary}" FontWeight="SemiBold" Margin="0,0,0,8" />
                                <ItemsControl ItemsSource="{Binding Images}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#DDDDDD" BorderThickness="1" Margin="4" Padding="8" CornerRadius="4" Width="180" Background="White">
                                                <StackPanel>
                                                    <CheckBox IsChecked="{Binding IsSelected}" HorizontalAlignment="Right" Margin="0,0,0,4" />
                                                    <Image Source="{Binding Thumbnail}" Width="120" Height="90" Stretch="Uniform" 
                                                           HorizontalAlignment="Center" Margin="0,0,0,4" />
                                                    <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis" 
                                                               FontSize="11" ToolTip="{Binding FilePath}" />
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <TextBlock Text="{Binding SimilarityText}" FontSize="10" Foreground="Green" FontWeight="Bold" />
                                                        <TextBlock Text=" | " FontSize="10" Foreground="Gray" />
                                                        <TextBlock Text="{Binding FileSizeText}" FontSize="10" Foreground="Gray" />
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Dimensions}" FontSize="10" Foreground="Gray" />
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <Button Content="Open" Width="50" FontSize="10" Padding="2"
                                                                Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding FilePath}" />
                                                        <Button Content="Folder" Width="50" FontSize="10" Padding="2" Margin="4,0,0,0"
                                                                Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding FilePath}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Similar Videos Grid View -->
        <ScrollViewer Grid.Row="4" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding ShowSimilarVideos, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding SimilarVideoGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,8" Padding="8" CornerRadius="4" Background="#F9F9F9">
                            <StackPanel>
                                <TextBlock Text="{Binding Summary}" FontWeight="SemiBold" Margin="0,0,0,8" />
                                <ItemsControl ItemsSource="{Binding Videos}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#DDDDDD" BorderThickness="1" Margin="4" Padding="8" CornerRadius="4" Width="200" Background="White">
                                                <StackPanel>
                                                    <CheckBox IsChecked="{Binding IsSelected}" HorizontalAlignment="Right" Margin="0,0,0,4" />
                                                    <Image Source="{Binding Thumbnail}" Width="160" Height="90" Stretch="Uniform" 
                                                           HorizontalAlignment="Center" Margin="0,0,0,4" />
                                                    <TextBlock Text="{Binding FileName}" TextTrimming="CharacterEllipsis" 
                                                               FontSize="11" ToolTip="{Binding FilePath}" />
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <TextBlock Text="{Binding SimilarityText}" FontSize="10" Foreground="Green" FontWeight="Bold" />
                                                        <TextBlock Text=" | " FontSize="10" Foreground="Gray" />
                                                        <TextBlock Text="{Binding FileSizeText}" FontSize="10" Foreground="Gray" />
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                        <TextBlock Text="{Binding Duration}" FontSize="10" Foreground="Gray" />
                                                        <TextBlock Text=" | " FontSize="10" Foreground="Gray" />
                                                        <TextBlock Text="{Binding Dimensions}" FontSize="10" Foreground="Gray" />
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding FrameRateText}" FontSize="10" Foreground="Gray" />
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                        <Button Content="Open" Width="50" FontSize="10" Padding="2"
                                                                Command="{Binding DataContext.OpenFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding FilePath}" />
                                                        <Button Content="Folder" Width="50" FontSize="10" Padding="2" Margin="4,0,0,0"
                                                                Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding FilePath}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="5" Margin="0,8,0,0" Background="#F0F0F0" Padding="8,4">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" />
                <TextBlock Text="â³" VerticalAlignment="Center" Margin="8,0,0,0" 
                          Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>
        </Border>

        <Border Grid.Row="6" Margin="0,8,0,0" Visibility="{Binding StagingVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <views:StagingPanel DataContext="{Binding Staging}" />
        </Border>
    </Grid>
</UserControl>