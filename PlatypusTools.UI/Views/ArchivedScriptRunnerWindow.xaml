<Window x:Class="PlatypusTools.UI.Views.ArchivedScriptRunnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Run Archived Script" Height="500" Width="800" WindowStartupLocation="CenterOwner">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock VerticalAlignment="Center">Script:</TextBlock>
            <ComboBox x:Name="ScriptCombo" Width="520" Margin="8,0,0,0" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,8,0,8">
            <TextBlock>Command to run (will be prefixed by dot-sourcing the selected script):</TextBlock>
            <TextBox x:Name="CmdBox" Height="60" Text="Get-FastFileHash -Path 'C:\\Temp\\somefile'" />
        </StackPanel>
        <TextBox x:Name="OutputBox" Grid.Row="2" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsReadOnly="True" />
        <WrapPanel Grid.Row="3" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button MinWidth="80" Margin="4" Click="Run_Click">Run</Button>
            <Button MinWidth="80" Margin="4" Click="Close_Click">Close</Button>
        </WrapPanel>
    </Grid>
</Window>