                                                                            BorderThickness="0" Padding="2,0" Cursor="Hand" FontSize="8"
                                                                            ToolTip="Move Up"/>
                                                                    <Button Content="â–¼" 
                                                                            Command="{Binding DataContext.MoveFilterDownCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            CommandParameter="{Binding}"
                                                                            Background="Transparent" Foreground="#9CA3AF" 
                                                                            BorderThickness="0" Padding="2,0" Cursor="Hand" FontSize="8"
                                                                            ToolTip="Move Down" Margin="0,0,4,0"/>
                                                                    <ToggleButton IsChecked="{Binding IsEnabled, Mode=TwoWay}" 
                                                                                  Width="20" Height="18" Margin="2,0"
                                                                                  Background="Transparent" BorderThickness="0"
                                                                                  ToolTip="Enable/Disable">
                                                                        <TextBlock Text="ðŸ‘" FontSize="9" 
                                                                                   Opacity="{Binding IsEnabled, Converter={StaticResource BoolToOpacityConverter}}"/>
                                                                    </ToggleButton>
                                                                    <Button Content="âœ•" 
                                                                            Command="{Binding DataContext.RemoveShotcutFilterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            CommandParameter="{Binding}"
                                                                            Background="Transparent" Foreground="#EF4444" 
                                                                            BorderThickness="0" Padding="4,0" Cursor="Hand" FontSize="10"/>
                                                                </StackPanel>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding Icon}" FontSize="11" Margin="0,0,6,0"/>
                                                                    <TextBlock Text="{Binding DisplayName}" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                                                </StackPanel>
                                                            </DockPanel>
                                                        </Expander.Header>
                                                        
                                                        <!-- Filter parameters -->
                                                        <ItemsControl ItemsSource="{Binding Parameters}" Margin="8,4,8,8">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Margin="0,4">
                                                                        <DockPanel>
                                                                            <TextBlock Text="{Binding DisplayName}" 
                                                                                       Foreground="#D1D5DB" FontSize="10"/>
                                                                            <TextBlock DockPanel.Dock="Right" 
                                                                                       Text="{Binding Value, StringFormat='{}{0:F2}'}" 
                                                                                       Foreground="#0EA5E9" FontSize="10"/>
                                                                        </DockPanel>
                                                                        <Slider Minimum="{Binding Minimum}" 
                                                                                Maximum="{Binding Maximum}"
                                                                                Value="{Binding Value, Mode=TwoWay}"
                                                                                Style="{StaticResource DarkSliderStyle}"
                                                                                Margin="0,2,0,0"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </Expander>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    
                                    <!-- Empty state -->
                                    <TextBlock Text="No filters applied. Select a filter above to add it."
                                               Foreground="#6B7280" FontSize="10" TextWrapping="Wrap"
                                               Visibility="{Binding SelectedClip.Filters.Count, Converter={StaticResource ZeroToVisibilityConverter}}"
                                               Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Quick Filters removed - replaced by Shotcut filters above -->

                            <Separator Background="#6B7280" Margin="0,8"/>

                            <!-- Color Grading -->
                            <TextBlock Text="ðŸŽ¬ Color Grading" FontWeight="SemiBold" 
