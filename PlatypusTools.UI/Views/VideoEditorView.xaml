                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemContainerStyle>
                                                        <Style>
                                                            <Setter Property="Canvas.Left" 
                                                                    Value="{Binding StartPosition, Converter={StaticResource TimeToPixelConverter}}"/>
