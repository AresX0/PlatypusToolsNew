                                                                                      Command="{Binding DataContext.AddClipMarkerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                      CommandParameter="{Binding}"/>
                                                                            <MenuItem Header="Add Sync Point"
                                                                                      Command="{Binding DataContext.AddSyncPointMarkerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                      CommandParameter="{Binding}"/>
                                                                            <MenuItem Header="Add Beat Marker"
                                                                                      Command="{Binding DataContext.AddBeatMarkerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                      CommandParameter="{Binding}"/>
                                                                            <Separator/>
                                                                            <MenuItem Header="Clear All Markers"
                                                                                      Command="{Binding DataContext.ClearClipMarkersCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
