                            <TextBlock Text="âœ¨ Transitions" FontWeight="SemiBold" 
                                       Foreground="White" Margin="0,8,0,8"/>

                            <ItemsControl ItemsSource="{Binding AvailableTransitions}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}" 
                                                Command="{Binding DataContext.ApplyTransitionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SmallButtonStyle}"
                                                Margin="2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Row="2" Height="4" HorizontalAlignment="Stretch" 
                      Background="#6B7280" ResizeDirection="Rows"/>

        <!-- Timeline -->
        <Border Grid.Row="3" Background="#3B3F47">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Timeline header with options (Shotcut-style) -->
                <Border Grid.Row="0" Background="#4B5058" Padding="8,4">
                    <DockPanel>
                        <!-- Left: Toggle options -->
                        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                            <CheckBox Content="Show Beats" IsChecked="{Binding ShowBeatMarkers}"
                                      Foreground="White" Margin="0,0,12,0"/>
                            <CheckBox Content="Show Waveform" IsChecked="{Binding ShowWaveform}"
                                      Foreground="White" Margin="0,0,12,0"/>
                            <CheckBox Content="Snap to Beats" IsChecked="{Binding SnapToBeats}"
                                      Foreground="White" Margin="0,0,12,0"/>
                            <CheckBox Content="Snap to Clips" IsChecked="{Binding SnapToClips}"
                                      Foreground="White" Margin="0,0,12,0"/>
                            
                            <Separator Style="{StaticResource VerticalSeparatorStyle}"/>
                            
                            <!-- Loop and Ripple toggles (Shotcut-style) -->
                            <ToggleButton IsChecked="{Binding LoopPlayback}" 
                                          Style="{StaticResource ToggleTransportButtonStyle}"
                                          ToolTip="Loop Playback" Width="32" Height="24" Margin="8,0,4,0">
                                <TextBlock Text="ðŸ”" FontSize="11"/>
                            </ToggleButton>
                            <ToggleButton IsChecked="{Binding RippleEnabled}" 
                                          Style="{StaticResource ToggleTransportButtonStyle}"
                                          ToolTip="Ripple Edits - adjusts subsequent clips" Width="46" Height="24">
                                <TextBlock Text="Â± Ripple" FontSize="9"/>
                            </ToggleButton>
                            
                            <Separator Style="{StaticResource VerticalSeparatorStyle}" Margin="8,0"/>
                            
                            <!-- In/Out Point buttons -->
                            <Button Content="[" Command="{Binding SetInPointCommand}"
                                    Style="{StaticResource SmallButtonStyle}" 
                                    ToolTip="Set In Point (I)" Width="24" Height="22" FontWeight="Bold"
                                    Foreground="#38BDF8" FontSize="14" Padding="0"/>
                            <Button Content="]" Command="{Binding SetOutPointCommand}"
                                    Style="{StaticResource SmallButtonStyle}" 
                                    ToolTip="Set Out Point (O)" Width="24" Height="22" FontWeight="Bold"
                                    Foreground="#F472B6" FontSize="14" Padding="0" Margin="2,0,0,0"/>
                            
                            <Separator Style="{StaticResource VerticalSeparatorStyle}" Margin="8,0"/>
                            
                            <!-- Add Marker button -->
                            <Button Content="ðŸš©" Command="{Binding AddMarkerCommand}"
                                    Style="{StaticResource SmallButtonStyle}" 
                                    ToolTip="Add Marker (M)" Width="28" Height="22" FontSize="12" Padding="0"/>
                        </StackPanel>
                        
                        <!-- Right: Zoom controls and BPM -->
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <!-- Zoom In/Out buttons -->
                            <Button Content="âˆ’" Command="{Binding ZoomOutCommand}"
                                    Style="{StaticResource SmallButtonStyle}" 
                                    ToolTip="Zoom Out (-)" Width="24" Height="22" FontWeight="Bold" FontSize="14" Padding="0"/>
                            <TextBlock Text="ðŸ”" Foreground="#9CA3AF" VerticalAlignment="Center" Margin="4,0,4,0"/>
                            <Slider Minimum="0.1" Maximum="5" Value="{Binding TimelineZoom, Mode=TwoWay}" 
                                    Width="100" VerticalAlignment="Center"
                                    ToolTip="Timeline Zoom"/>
                            <TextBlock Text="{Binding TimelineZoom, StringFormat='{}{0:F1}x'}" 
                                       Foreground="#9CA3AF" VerticalAlignment="Center" 
                                       Width="30" Margin="4,0,4,0"/>
                            <Button Content="+" Command="{Binding ZoomInCommand}"
                                    Style="{StaticResource SmallButtonStyle}" 
                                    ToolTip="Zoom In (+)" Width="24" Height="22" FontWeight="Bold" FontSize="14" Padding="0"/>
                            
                            <Separator Style="{StaticResource VerticalSeparatorStyle}" Margin="8,0"/>
                            
                            <TextBlock Text="{Binding Project.Bpm, StringFormat='BPM: {0:F1}'}"
                                       Foreground="#D1D5DB" VerticalAlignment="Center" Margin="0,0,0,0"/>
                        </StackPanel>
                        
                        <!-- Center: Add track buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="+ Video Track" 
                                    Command="{Binding AddTrackCommand}" CommandParameter="Video"
                                    Style="{StaticResource SmallButtonStyle}" 
                                    Padding="8,2" Margin="0,0,4,0"/>
                            <Button Content="+ Audio Track" 
                                    Command="{Binding AddTrackCommand}" CommandParameter="Audio"
                                    Style="{StaticResource SmallButtonStyle}" 
                                    Padding="8,2"/>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Timeline tracks area -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Track headers -->
                    <Grid Grid.Column="0">
                        <!-- Empty space to align with time ruler -->
                        <Rectangle Height="25" VerticalAlignment="Top" Fill="#4B5058"/>
                        
                        <!-- Track headers list - aligned with tracks content (Shotcut-style) -->
                        <ScrollViewer VerticalScrollBarVisibility="Hidden" Margin="0,25,0,0"
                                      x:Name="TrackHeadersScrollViewer">
