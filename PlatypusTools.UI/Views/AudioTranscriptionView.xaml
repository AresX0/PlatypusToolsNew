<UserControl x:Class="PlatypusTools.UI.Views.AudioTranscriptionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Input Settings -->
        <GroupBox Header="Audio Transcription (Whisper)" Grid.Row="0" Margin="0,0,0,4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <WrapPanel Grid.Row="0" Margin="0,0,0,8">
                        <TextBlock Text="Audio File:" VerticalAlignment="Center" Width="80" />
                        <TextBox Text="{Binding InputFilePath, UpdateSourceTrigger=PropertyChanged}" Width="400" Margin="0,0,8,0" />
                        <Button Content="Browse..." Command="{Binding BrowseInputCommand}" MinWidth="80" Margin="0,0,8,0" />
                    </WrapPanel>

                    <WrapPanel Grid.Row="1" Margin="0,0,0,8">
                        <TextBlock Text="Model:" VerticalAlignment="Center" Width="80" />
                        <ComboBox ItemsSource="{Binding AvailableModels}" SelectedItem="{Binding SelectedModel}" Width="120" Margin="0,0,8,0" />
                        <Button Content="Download Model" Command="{Binding DownloadModelCommand}" MinWidth="110"
                                Background="#FF2196F3" Foreground="White" Margin="0,0,8,0" />
                        <TextBlock Text="Language:" VerticalAlignment="Center" Margin="8,0,0,0" Width="65" />
                        <ComboBox ItemsSource="{Binding AvailableLanguages}" SelectedItem="{Binding SelectedLanguage}" Width="120" Margin="0,0,8,0" />
                    </WrapPanel>

                    <WrapPanel Grid.Row="2" Margin="0,0,0,8">
                        <TextBlock Text="Output:" VerticalAlignment="Center" Width="80" />
                        <ComboBox SelectedItem="{Binding OutputFormat}" Width="80" Margin="0,0,8,0">
                            <ComboBoxItem Content="srt" IsSelected="True" />
                            <ComboBoxItem Content="vtt" />
                            <ComboBoxItem Content="txt" />
                        </ComboBox>
                        <CheckBox Content="Translate to English" IsChecked="{Binding TranslateToEnglish}" VerticalAlignment="Center" Margin="16,0,0,0" />
                    </WrapPanel>

                    <WrapPanel Grid.Row="3">
                        <Button Content="Transcribe" Command="{Binding TranscribeCommand}" MinWidth="100" FontWeight="Bold"
                                Background="#FF4CAF50" Foreground="White" Margin="0,0,8,0" />
                        <Button Content="Cancel" Command="{Binding CancelCommand}" MinWidth="80"
                                Background="#FFF44336" Foreground="White" Margin="0,0,8,0" />
                        <Button Content="Save Result" Command="{Binding SaveResultCommand}" MinWidth="90"
                                Background="#FF9C27B0" Foreground="White" Margin="0,0,8,0" />
                        <Button Content="Copy Result" Command="{Binding CopyResultCommand}" MinWidth="90"
                                Background="#FF2196F3" Foreground="White" Margin="0,0,16,0" />
                        <ProgressBar Width="200" Height="20" Value="{Binding Progress}" Maximum="100"
                                     Visibility="{Binding IsTranscribing, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </WrapPanel>
                </Grid>
            </ScrollViewer>
        </GroupBox>

        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows" />

        <!-- Result -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <GroupBox Header="Transcription Result" Grid.Column="0">
                <TextBox Text="{Binding TranscriptionResult}" IsReadOnly="True"
                         TextWrapping="Wrap" AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas" FontSize="12" />
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="5" VerticalAlignment="Stretch"
                          Background="#CCCCCC" Cursor="SizeWE" />

            <GroupBox Header="Log" Grid.Column="2">
                <TextBox Text="{Binding LogOutput}" IsReadOnly="True"
                         TextWrapping="Wrap" AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas" FontSize="10" Foreground="DarkGray" />
            </GroupBox>
        </Grid>

        <!-- Status -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
