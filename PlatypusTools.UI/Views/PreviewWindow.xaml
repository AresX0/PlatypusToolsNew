<Window x:Class="PlatypusTools.UI.Views.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preview" Height="600" Width="800" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Margin="10" Background="{DynamicResource ControlBackgroundBrush}" CornerRadius="4">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Image x:Name="PreviewImage" Stretch="Uniform" />
            </ScrollViewer>
        </Border>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button MinWidth="180" Margin="4" Click="Close_Click">Close</Button>
            <Button MinWidth="180" Margin="4" Click="OpenInExplorer_Click">Open in Explorer</Button>
        </StackPanel>
    </Grid>
</Window>