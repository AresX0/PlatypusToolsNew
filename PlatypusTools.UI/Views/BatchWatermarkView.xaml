<UserControl x:Class="PlatypusTools.UI.Views.BatchWatermarkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:PlatypusTools.UI.ViewModels">
    
    <UserControl.DataContext>
        <vm:BatchWatermarkViewModel />
    </UserControl.DataContext>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Batch Watermark" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
            <TextBlock Text="Add text or image watermarks to multiple images at once" 
                       Foreground="{DynamicResource TextSecondary}" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- File List Panel -->
            <Border Grid.Column="0" Background="{DynamicResource CardBackground}" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- File List Toolbar -->
                    <WrapPanel Grid.Row="0" Margin="0,0,0,10">
                        <Button Content="ðŸ“ Add Files" Command="{Binding AddFilesCommand}" 
                                Style="{DynamicResource PrimaryButton}" MinWidth="100" Margin="0,2,5,2"/>
                        <Button Content="ðŸ“‚ Add Folder" Command="{Binding AddFolderCommand}" 
                                Style="{DynamicResource SecondaryButton}" MinWidth="100" Margin="0,2,5,2"/>
                        <Button Content="ðŸ—‘ï¸ Remove" Command="{Binding RemoveSelectedCommand}" 
                                Style="{DynamicResource SecondaryButton}" MinWidth="80" Margin="0,2,5,2"/>
                        <Button Content="ðŸ§¹ Clear" Command="{Binding ClearFilesCommand}" 
                                Style="{DynamicResource SecondaryButton}" MinWidth="80" Margin="0,2,0,2"/>
                    </WrapPanel>
                    
                    <!-- File List -->
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding InputFiles}" 
                             SelectedItem="{Binding SelectedFile}"
                             Background="Transparent"
                             BorderThickness="1"
                             BorderBrush="{DynamicResource BorderBrush}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="{Binding FileName}" 
                                               Foreground="{DynamicResource TextPrimary}"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Column="1" Text="{Binding FileSizeFormatted}" 
                                               Foreground="{DynamicResource TextSecondary}"
                                               Width="80" TextAlignment="Right" Margin="10,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- File Count -->
                    <TextBlock Grid.Row="2" Margin="0,10,0,0"
                               Foreground="{DynamicResource TextSecondary}">
                        <Run Text="{Binding InputFiles.Count, Mode=OneWay}"/>
                        <Run Text=" files selected"/>
                    </TextBlock>
                </Grid>
            </Border>
            
            <!-- Watermark Settings Panel -->
            <Border Grid.Column="1" Background="{DynamicResource CardBackground}" CornerRadius="8" Padding="15" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Watermark Settings" FontWeight="SemiBold" FontSize="14" 
                                   Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,15"/>
                        
                        <!-- Watermark Type -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <RadioButton Content="Text Watermark" IsChecked="{Binding IsTextWatermark}" 
                                         GroupName="WatermarkType" Margin="0,0,15,0"
                                         Foreground="{DynamicResource TextPrimary}"/>
                            <RadioButton Content="Image Watermark" IsChecked="{Binding IsImageWatermark}" 
                                         GroupName="WatermarkType"
                                         Foreground="{DynamicResource TextPrimary}"/>
                        </StackPanel>
                        
                        <!-- Text Watermark Settings -->
                        <StackPanel Visibility="{Binding IsTextWatermark, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Watermark Text:" Foreground="{DynamicResource TextSecondary}" 
                                       FontSize="12" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding WatermarkText, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="8" Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Font Family:" Foreground="{DynamicResource TextSecondary}" 
                                       FontSize="12" Margin="0,0,0,5"/>
                            <ComboBox SelectedItem="{Binding FontFamily}" Margin="0,0,0,10"
                                      IsEditable="True">
                                <ComboBoxItem Content="Arial"/>
                                <ComboBoxItem Content="Times New Roman"/>
                                <ComboBoxItem Content="Verdana"/>
                                <ComboBoxItem Content="Georgia"/>
                                <ComboBoxItem Content="Courier New"/>
                                <ComboBoxItem Content="Impact"/>
                            </ComboBox>
                            
                            <TextBlock Text="Font Size:" Foreground="{DynamicResource TextSecondary}" 
                                       FontSize="12" Margin="0,0,0,5"/>
                            <Slider Value="{Binding FontSize}" Minimum="12" Maximum="200" 
                                    TickFrequency="4" IsSnapToTickEnabled="True" Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Rotation:" Foreground="{DynamicResource TextSecondary}" 
                                       FontSize="12" Margin="0,0,0,5"/>
                            <Slider Value="{Binding Rotation}" Minimum="-180" Maximum="180" 
                                    TickFrequency="15" IsSnapToTickEnabled="True" Margin="0,0,0,10"/>
                        </StackPanel>
                        
                        <!-- Image Watermark Settings -->
                        <StackPanel Visibility="{Binding IsImageWatermark, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Watermark Image:" Foreground="{DynamicResource TextSecondary}" 
                                       FontSize="12" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding WatermarkImagePath}" 
                                         IsReadOnly="True" Padding="8"/>
                                <Button Grid.Column="1" Content="..." Width="40" Margin="5,0,0,0"
                                        Command="{Binding BrowseWatermarkImageCommand}"
                                        Style="{DynamicResource SecondaryButton}"/>
                            </Grid>
                            
                            <TextBlock Text="Scale:" Foreground="{DynamicResource TextSecondary}" 
                                       FontSize="12" Margin="0,0,0,5"/>
                            <Slider Value="{Binding ImageScale}" Minimum="0.1" Maximum="2.0" 
                                    TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="0,0,0,10"/>
                        </StackPanel>
                        
                        <Separator Margin="0,5,0,15"/>
                        
                        <!-- Common Settings -->
                        <TextBlock Text="Position:" Foreground="{DynamicResource TextSecondary}" 
                                   FontSize="12" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Positions}" 
                                  SelectedItem="{Binding SelectedPosition}" 
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Opacity:" Foreground="{DynamicResource TextSecondary}" 
                                   FontSize="12" Margin="0,0,0,5"/>
                        <Slider Value="{Binding Opacity}" Minimum="0.1" Maximum="1.0" 
                                TickFrequency="0.1" IsSnapToTickEnabled="True" Margin="0,0,0,10"/>
                        
                        <Separator Margin="0,5,0,15"/>
                        
                        <!-- Apply Button -->
                        <Button Content="ðŸ’§ Apply Watermark" Command="{Binding ApplyWatermarkCommand}"
                                Style="{DynamicResource PrimaryButton}" HorizontalAlignment="Stretch"
                                Height="40" FontSize="14"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Preview Panel -->
            <Border Grid.Column="2" Background="{DynamicResource CardBackground}" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Preview" FontWeight="SemiBold" FontSize="14" 
                               Foreground="{DynamicResource TextPrimary}" Margin="0,0,0,10"/>
                    
                    <Border Grid.Row="1" Background="{DynamicResource ControlBackground}" 
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4">
                        <Image Source="{Binding PreviewImage}" Stretch="Uniform" Margin="5"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Progress Bar -->
        <Grid Grid.Row="2" Margin="0,15,0,0" Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressBar Value="{Binding Progress}" Maximum="100" Height="8" 
                         Background="{DynamicResource ProgressBackground}"
                         Foreground="{DynamicResource AccentBrush}"/>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource CardBackground}" CornerRadius="4" Padding="10" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                           Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Center"/>
                <Button Grid.Column="1" Content="âŒ Cancel" Command="{Binding CancelCommand}"
                        Style="{DynamicResource DangerButton}" MinWidth="180"
                        Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
