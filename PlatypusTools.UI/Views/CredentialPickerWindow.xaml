<Window x:Class="PlatypusTools.UI.Views.CredentialPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Credential" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" ResizeMode="CanResize"
        MinWidth="400" MinHeight="300">
    <Window.Resources>
        <Style TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Select a saved credential to load:" 
                   FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>

        <!-- Filter -->
        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="ðŸ”" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="SearchBox" Grid.Column="1" Padding="4"
                     TextChanged="SearchBox_TextChanged" ToolTip="Search credentials"/>
            <TextBlock Grid.Column="2" Text="Type:" VerticalAlignment="Center" Margin="12,0,8,0"/>
            <ComboBox x:Name="TypeFilter" Grid.Column="3" SelectionChanged="TypeFilter_SelectionChanged">
                <ComboBoxItem Content="All Types" IsSelected="True"/>
                <ComboBoxItem Content="SSH"/>
                <ComboBoxItem Content="FTP"/>
                <ComboBoxItem Content="SFTP"/>
                <ComboBoxItem Content="Database"/>
                <ComboBoxItem Content="Generic"/>
            </ComboBox>
        </Grid>

        <!-- Credentials List -->
        <ListBox x:Name="CredentialsList" Grid.Row="2" 
                 SelectionMode="Single" 
                 MouseDoubleClick="CredentialsList_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FF2196F3" CornerRadius="3" Padding="6,2" 
                                Margin="0,0,8,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TypeDisplay}" Foreground="White" FontSize="11"/>
                        </Border>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding Key}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding DisplayInfo}" FontSize="11" Opacity="0.7"/>
                        </StackPanel>
                        <TextBlock Grid.Column="2" Text="{Binding LastUsedDisplay}" 
                                   FontSize="11" Opacity="0.5" VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Open Credential Manager" Click="OpenCredentialManager_Click" 
                    MinWidth="190" Margin="0,0,8,0"/>
            <Button Content="Select" Click="Select_Click" MinWidth="180" Margin="0,0,8,0"
                    IsDefault="True" Background="#FF4CAF50" Foreground="White"/>
            <Button Content="Cancel" Click="Cancel_Click" MinWidth="180" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
