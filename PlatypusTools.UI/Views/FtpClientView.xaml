<UserControl x:Class="PlatypusTools.UI.Views.FtpClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Saved Sessions -->
        <GroupBox Grid.Column="0" Header="Saved Sessions" Margin="0,0,8,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <ListBox Grid.Row="0" ItemsSource="{Binding SavedSessions}" 
                         BorderThickness="0" Margin="4">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding DisplayText}" FontSize="10" Opacity="0.7" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="â–¶" Width="22" Height="22" Margin="2,0,0,0"
                                            Command="{Binding DataContext.LoadSessionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" ToolTip="Load Session"/>
                                    <Button Content="ðŸ—‘" Width="22" Height="22" Margin="2,0,0,0"
                                            Command="{Binding DataContext.DeleteSessionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" ToolTip="Delete Session"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="1" Margin="4">
                    <TextBox Text="{Binding SessionName, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,4" ToolTip="Session name (optional)"/>
                    <Button Content="ðŸ’¾ Save Session" Command="{Binding SaveSessionCommand}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Right Panel - Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Connection Settings -->
            <GroupBox Grid.Row="0" Header="Connection" Margin="0,0,0,8">
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Host:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}" 
                             VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Column="2" Grid.Row="0" Text="Port:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                    <TextBox Grid.Column="3" Grid.Row="0" Text="{Binding Port}" VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="0" Grid.Row="2" Text="Username:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                             VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Column="2" Grid.Row="2" Text="Password:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                    <PasswordBox Grid.Column="3" Grid.Row="2" x:Name="PasswordBox" VerticalAlignment="Center"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>

                    <StackPanel Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <CheckBox Content="SFTP" IsChecked="{Binding UseSftp}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <CheckBox Content="Passive" IsChecked="{Binding UsePassive}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <CheckBox Content="SSL/TLS" IsChecked="{Binding UseSsl}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="Key:" VerticalAlignment="Center" Margin="8,0,4,0"/>
                        <TextBox Text="{Binding PrivateKeyPath}" Width="120" FontSize="10" IsReadOnly="True" 
                                 VerticalAlignment="Center" ToolTip="{Binding PrivateKeyPath}"/>
                        <Button Content="..." Width="24" Margin="4,0,0,0" Command="{Binding BrowseKeyCommand}" 
                                ToolTip="Browse for key file" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="ðŸ”Œ Connect" Command="{Binding ConnectCommand}" Width="85" Margin="0,0,4,0"
                                Background="#FF4CAF50" Foreground="White"/>
                        <Button Content="âŒ Disconnect" Command="{Binding DisconnectCommand}" Width="85"
                                Background="#FFF44336" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Toolbar -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                <Button Content="ðŸ“ Up" Command="{Binding NavigateUpCommand}" MinWidth="65" Margin="0,0,4,0" Padding="6,2"/>
                <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}" MinWidth="95" Margin="0,0,4,0" Padding="6,2"/>
                <Button Content="ðŸ“¥ Download" Command="{Binding DownloadCommand}" MinWidth="105" Margin="0,0,4,0"/>
                <Button Content="ðŸ“¤ Upload" Command="{Binding UploadCommand}" MinWidth="95" Margin="0,0,4,0" Padding="6,2"/>
                <Button Content="ðŸ“ New Folder" Command="{Binding CreateFolderCommand}" MinWidth="115" Margin="0,0,4,0"/>
                <Button Content="ðŸ—‘ï¸ Delete" Command="{Binding DeleteCommand}" MinWidth="90" Margin="0,0,4,0" Padding="6,2"
                        Background="#FFF44336" Foreground="White"/>
                <TextBlock Text="Path:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                <TextBox Text="{Binding CurrentPath, Mode=OneWay}" Width="200" IsReadOnly="True" 
                         VerticalAlignment="Center" Background="{DynamicResource ControlBackgroundBrush}"/>
            </StackPanel>

            <!-- File List -->
            <DataGrid Grid.Row="2" ItemsSource="{Binding Files}" SelectedItem="{Binding SelectedItem}"
                      AutoGenerateColumns="False" IsReadOnly="True"
                      CanUserAddRows="False" CanUserDeleteRows="False"
                      CanUserResizeColumns="True" CanUserSortColumns="True"
                      SelectionMode="Single" GridLinesVisibility="Horizontal"
                      BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1">
                <DataGrid.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick" 
                                  Command="{Binding NavigateToCommand}" 
                                  CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                </DataGrid.InputBindings>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="" Binding="{Binding Icon}" Width="30"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Size" Binding="{Binding DisplaySize}" Width="100"/>
                </DataGrid.Columns>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource WindowForegroundBrush}"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>

            <!-- Status Bar -->
            <Grid Grid.Row="3" Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
                
                <ProgressBar Grid.Column="1" Value="{Binding TransferProgress}" Minimum="0" Maximum="100" 
                             Height="16" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
