<UserControl x:Class="PlatypusTools.UI.Views.RegistryCleanerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="60" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" MinHeight="100"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Actions -->
        <GroupBox Header="Registry Cleaner" Grid.Row="0" Margin="0,0,0,5">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <WrapPanel Grid.Column="0">
                    <Button Content="Scan for Issues" Click="OnScanClick" MinWidth="120" FontWeight="Bold" Margin="0,2,8,2" />
                    <Button Content="Fix Selected" Click="OnFixSelectedClick" MinWidth="100" Background="DarkGreen" Foreground="White" Margin="0,2,8,2" />
                    <Button Content="Fix All" Click="OnFixAllClick" MinWidth="80" Background="DarkOrange" Foreground="White" Margin="0,2,16,2" />
                    <Button Content="Create Backup" Click="OnBackupClick" MinWidth="110" Margin="0,2,8,2" />
                    <Button Content="Select All" Click="OnSelectAllClick" MinWidth="90" Margin="0,2,4,2" />
                    <Button Content="Deselect All" Click="OnDeselectAllClick" MinWidth="90" Margin="0,2,0,2" />
                </WrapPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="TotalIssuesText" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,16,0">
                        Issues: <Run Text="{Binding TotalIssues, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock x:Name="FixedIssuesText" VerticalAlignment="Center" FontWeight="Bold" Foreground="Green">
                        Fixed: <Run Text="{Binding FixedIssues, Mode=OneWay}" />
                    </TextBlock>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- GridSplitter for resizing -->
        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" 
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>

        <!-- Issues List -->
        <GroupBox Header="Registry Issues" Grid.Row="2" Margin="0,5,0,8">
                <DataGrid x:Name="IssuesDataGrid" ItemsSource="{Binding Issues}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          SelectionMode="Extended"
                          ColumnHeaderHeight="32"
                          MinHeight="200"
                          ColumnWidth="*"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.CanContentScroll="True">
                    <DataGrid.Columns>

                        <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="60" MinWidth="50" CanUserResize="True"/>
                        <DataGridTextColumn Header="Issue Type" Binding="{Binding IssueType}" Width="120" MinWidth="100" IsReadOnly="True" CanUserResize="True"/>
                        <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="80" MinWidth="60" IsReadOnly="True" CanUserResize="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="High">
                                            <Setter Property="Foreground" Value="Red" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                        </Trigger>
                                        <Trigger Property="Text" Value="Medium">
                                            <Setter Property="Foreground" Value="Orange" />
                                        </Trigger>
                                        <Trigger Property="Text" Value="Low">
                                            <Setter Property="Foreground" Value="Green" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Key Path" Binding="{Binding KeyPath}" Width="*" MinWidth="300" IsReadOnly="True" CanUserResize="True"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="250" MinWidth="200" IsReadOnly="True" CanUserResize="True"/>
                        <DataGridCheckBoxColumn Header="Fixed" Binding="{Binding IsFixed, Mode=OneWay}" Width="60" MinWidth="50" IsReadOnly="True" CanUserResize="True"/>
                    </DataGrid.Columns>
                </DataGrid>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding DataContext.StatusMessage, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Scanning..." Margin="0,0,8,0"
                               Visibility="{Binding DataContext.IsScanning, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed, TargetNullValue=Collapsed}" />
                    <ProgressBar Width="100" Height="16" IsIndeterminate="True"
                                 Visibility="{Binding DataContext.IsScanning, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed, TargetNullValue=Collapsed}" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
