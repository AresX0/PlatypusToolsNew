<Window x:Class="PlatypusTools.UI.Views.ThemeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Theme Editor" Height="600" Width="700"
        WindowStartupLocation="CenterOwner">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20">
            <StackPanel>
                <TextBlock Text="Theme Editor" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Customize the look and feel of PlatypusTools" Foreground="#CCFFFFFF" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Theme List -->
            <Border Grid.Column="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Themes" FontWeight="SemiBold" Padding="12" 
                               Background="{DynamicResource SurfaceBrush}"/>
                    
                    <ListBox x:Name="ThemeList" Grid.Row="1" SelectionChanged="ThemeList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4">
                                    <Border Width="24" Height="24" CornerRadius="4" 
                                            Background="{Binding PrimaryColor}" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8">
                        <Button Content="New" Width="50" Margin="0,0,4,0" Click="NewTheme_Click"/>
                        <Button Content="Duplicate" Width="70" Margin="0,0,4,0" Click="DuplicateTheme_Click"/>
                        <Button x:Name="DeleteButton" Content="Delete" Width="50" Click="DeleteTheme_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Color Editor -->
            <ScrollViewer Grid.Column="1" Margin="20,0,0,0" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ColorEditor">
                    <TextBlock Text="Theme Colors" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    
                    <GroupBox Header="Primary Colors" Margin="0,0,0,16">
                        <StackPanel>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Primary" VerticalAlignment="Center"/>
                                <Border x:Name="PrimaryColorPreview" Grid.Column="1" Height="30" CornerRadius="4" 
                                        Background="#007ACC" Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="Primary"/>
                                <TextBox x:Name="PrimaryColorText" Grid.Column="2" Margin="8,0,0,0" Text="#007ACC" 
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="Primary"/>
                            </Grid>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Accent" VerticalAlignment="Center"/>
                                <Border x:Name="AccentColorPreview" Grid.Column="1" Height="30" CornerRadius="4" 
                                        Background="#0E639C" Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="Accent"/>
                                <TextBox x:Name="AccentColorText" Grid.Column="2" Margin="8,0,0,0" Text="#0E639C"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="Accent"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                    <GroupBox Header="Background Colors" Margin="0,0,0,16">
                        <StackPanel>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Background" VerticalAlignment="Center"/>
                                <Border x:Name="BackgroundColorPreview" Grid.Column="1" Height="30" CornerRadius="4" 
                                        Background="#FFFFFF" BorderBrush="Gray" BorderThickness="1" 
                                        Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="Background"/>
                                <TextBox x:Name="BackgroundColorText" Grid.Column="2" Margin="8,0,0,0" Text="#FFFFFF"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="Background"/>
                            </Grid>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Surface" VerticalAlignment="Center"/>
                                <Border x:Name="SurfaceColorPreview" Grid.Column="1" Height="30" CornerRadius="4" 
                                        Background="#F5F5F5" BorderBrush="Gray" BorderThickness="1"
                                        Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="Surface"/>
                                <TextBox x:Name="SurfaceColorText" Grid.Column="2" Margin="8,0,0,0" Text="#F5F5F5"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="Surface"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                    <GroupBox Header="Text Colors" Margin="0,0,0,16">
                        <StackPanel>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Primary Text" VerticalAlignment="Center"/>
                                <Border x:Name="TextColorPreview" Grid.Column="1" Height="30" CornerRadius="4" 
                                        Background="#1E1E1E" Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="Text"/>
                                <TextBox x:Name="TextColorText" Grid.Column="2" Margin="8,0,0,0" Text="#1E1E1E"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="Text"/>
                            </Grid>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Secondary Text" VerticalAlignment="Center"/>
                                <Border x:Name="SecondaryTextColorPreview" Grid.Column="1" Height="30" CornerRadius="4" 
                                        Background="#6E6E6E" Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="SecondaryText"/>
                                <TextBox x:Name="SecondaryTextColorText" Grid.Column="2" Margin="8,0,0,0" Text="#6E6E6E"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="SecondaryText"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Preview Panel -->
                    <GroupBox Header="Preview">
                        <Border x:Name="PreviewPanel" Padding="16" CornerRadius="4">
                            <StackPanel>
                                <TextBlock Text="Sample Heading" FontSize="18" FontWeight="Bold"/>
                                <TextBlock Text="This is sample body text to preview theme colors." Margin="0,8,0,16"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Primary Button" Margin="0,0,8,0"/>
                                    <Button Content="Secondary" Background="Transparent" Margin="0,0,8,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="20,12">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Import..." Margin="0,0,8,0" Click="Import_Click"/>
                    <Button Content="Export..." Click="Export_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Reset to Default" Margin="0,0,8,0" Click="ResetDefault_Click"/>
                    <Button Content="Apply" Width="80" Margin="0,0,8,0" Click="Apply_Click"/>
                    <Button Content="Close" Width="80" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
