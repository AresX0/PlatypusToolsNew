<Window x:Class="PlatypusTools.UI.Views.ThemeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PlatypusTools.UI.Views"
        Title="Theme Creator" Height="750" Width="900"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <local:BoolToBuiltInConverter x:Key="BoolToBuiltInConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20">
            <StackPanel>
                <TextBlock Text="ðŸŽ¨ Theme Creator" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource WindowForegroundBrush}"/>
                <TextBlock Text="Create and customize your own themes for PlatypusTools" Foreground="#CCFFFFFF" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Theme List -->
            <Border Grid.Column="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Available Themes" FontWeight="SemiBold" Padding="12" 
                               Background="{DynamicResource SurfaceBrush}"/>
                    
                    <ListBox x:Name="ThemeList" Grid.Row="1" SelectionChanged="ThemeList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="4">
                                    <Border Width="24" Height="24" CornerRadius="4" 
                                            Background="{Binding PrimaryColor}" Margin="0,0,8,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding IsBuiltIn, Converter={StaticResource BoolToBuiltInConverter}}" 
                                                   FontSize="10" Opacity="0.6"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8">
                        <Button Content="âž• New" MinWidth="180" Margin="0,0,4,0" Click="NewTheme_Click" ToolTip="Create a new theme"/>
                        <Button Content="ðŸ“‹ Copy" MinWidth="180" Margin="0,0,4,0" Click="DuplicateTheme_Click" ToolTip="Duplicate selected theme"/>
                        <Button x:Name="DeleteButton" Content="ðŸ—‘ï¸" Width="40" Click="DeleteTheme_Click" ToolTip="Delete selected theme"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="3" Margin="8,0,8,8">
                        <TextBox x:Name="ThemeNameBox" Text="Custom Theme" Margin="0,0,0,4" 
                                 TextChanged="ThemeName_Changed" ToolTip="Theme name"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Color Editor -->
            <ScrollViewer Grid.Column="1" Margin="20,0,0,0" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ColorEditor">
                    <TextBlock Text="Theme Settings" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    <TextBlock Text="Click any color swatch to open a color picker, or enter hex values directly." 
                               Opacity="0.7" Margin="0,0,0,16"/>
                    
                    <!-- Font Settings -->
                    <GroupBox Header="Font Settings" Margin="0,0,0,12">
                        <StackPanel>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Font Family" VerticalAlignment="Center"/>
                                <ComboBox x:Name="FontFamilyCombo" Grid.Column="1" SelectionChanged="FontFamily_Changed">
                                    <ComboBoxItem Content="Segoe UI" Tag="Segoe UI" IsSelected="True"/>
                                    <ComboBoxItem Content="Arial" Tag="Arial"/>
                                    <ComboBoxItem Content="Calibri" Tag="Calibri"/>
                                    <ComboBoxItem Content="Consolas" Tag="Consolas"/>
                                    <ComboBoxItem Content="Courier New" Tag="Courier New"/>
                                    <ComboBoxItem Content="Georgia" Tag="Georgia"/>
                                    <ComboBoxItem Content="Tahoma" Tag="Tahoma"/>
                                    <ComboBoxItem Content="Times New Roman" Tag="Times New Roman"/>
                                    <ComboBoxItem Content="Trebuchet MS" Tag="Trebuchet MS"/>
                                    <ComboBoxItem Content="Verdana" Tag="Verdana"/>
                                    <ComboBoxItem Content="Inter" Tag="Inter"/>
                                    <ComboBoxItem Content="Roboto" Tag="Roboto"/>
                                    <ComboBoxItem Content="Open Sans" Tag="Open Sans"/>
                                    <!-- Theme-specific fonts (require installation via Settings > Advanced) -->
                                    <ComboBoxItem Content="Okuda (LCARS)" Tag="Okuda" ToolTip="LCARS theme font - install via Settings > Advanced"/>
                                    <ComboBoxItem Content="Monofonto (PipBoy)" Tag="Monofonto" ToolTip="PipBoy theme font - install via Settings > Advanced"/>
                                    <ComboBoxItem Content="Klingon" Tag="klingon font" ToolTip="Klingon theme font - install via Settings > Advanced"/>
                                    <ComboBoxItem Content="Overseer" Tag="Overseer" ToolTip="Fallout-inspired font - install via Settings > Advanced"/>
                                </ComboBox>
                            </Grid>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Font Size" VerticalAlignment="Center"/>
                                <Slider x:Name="FontSizeSlider" Grid.Column="1" Minimum="10" Maximum="16" Value="12" 
                                        TickFrequency="1" IsSnapToTickEnabled="True" 
                                        ValueChanged="FontSize_Changed" VerticalAlignment="Center"/>
                                <TextBlock x:Name="FontSizeDisplay" Grid.Column="2" Text="12 pt" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Logo Settings -->
                    <GroupBox Header="Logo Settings" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Customize the title bar logo for this theme (optional)" 
                                       Opacity="0.7" Margin="0,8,0,8"/>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="48" Height="48" CornerRadius="4" 
                                        Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" 
                                        BorderThickness="1">
                                    <Image x:Name="LogoPreview" Width="40" Height="40" Stretch="Uniform"/>
                                </Border>
                                <TextBox x:Name="LogoPathText" Grid.Column="1" Margin="8,0" 
                                         VerticalAlignment="Center" IsReadOnly="True"
                                         Text="(Default Logo)" ToolTip="Path to custom logo image"/>
                                <Button Content="Browse..." Grid.Column="2" Padding="12,6" 
                                        Click="BrowseLogo_Click" ToolTip="Select a custom logo image"/>
                                <Button Content="Reset" Grid.Column="3" Padding="12,6" Margin="6,0,0,0"
                                        Click="ResetLogo_Click" ToolTip="Use default logo"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Primary Colors -->
                    <GroupBox Header="Primary &amp; Accent Colors" Margin="0,0,0,12">
                        <StackPanel>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Primary" VerticalAlignment="Center"/>
                                <Border x:Name="PrimaryColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#007ACC" Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="Primary"/>
                                <TextBox x:Name="PrimaryColorText" Grid.Column="2" Margin="8,0,0,0" Text="#007ACC" 
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="Primary"/>
                            </Grid>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Accent" VerticalAlignment="Center"/>
                                <Border x:Name="AccentColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#0E639C" Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="Accent"/>
                                <TextBox x:Name="AccentColorText" Grid.Column="2" Margin="8,0,0,0" Text="#0E639C"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="Accent"/>
                            </Grid>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Accent Hover" VerticalAlignment="Center"/>
                                <Border x:Name="AccentHoverColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#1177BB" Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="AccentHover"/>
                                <TextBox x:Name="AccentHoverColorText" Grid.Column="2" Margin="8,0,0,0" Text="#1177BB"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="AccentHover"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Background Colors -->
                    <GroupBox Header="Background Colors" Margin="0,0,0,12">
                        <StackPanel>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Window Background" VerticalAlignment="Center"/>
                                <Border x:Name="BackgroundColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#FFFFFF" BorderBrush="Gray" BorderThickness="1" 
                                        Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="Background"/>
                                <TextBox x:Name="BackgroundColorText" Grid.Column="2" Margin="8,0,0,0" Text="#FFFFFF"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="Background"/>
                            </Grid>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Surface" VerticalAlignment="Center"/>
                                <Border x:Name="SurfaceColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#F5F5F5" BorderBrush="Gray" BorderThickness="1"
                                        Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="Surface"/>
                                <TextBox x:Name="SurfaceColorText" Grid.Column="2" Margin="8,0,0,0" Text="#F5F5F5"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="Surface"/>
                            </Grid>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Card Background" VerticalAlignment="Center"/>
                                <Border x:Name="CardBackgroundColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#FAFAFA" BorderBrush="Gray" BorderThickness="1"
                                        Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="CardBackground"/>
                                <TextBox x:Name="CardBackgroundColorText" Grid.Column="2" Margin="8,0,0,0" Text="#FAFAFA"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="CardBackground"/>
                            </Grid>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Control Border" VerticalAlignment="Center"/>
                                <Border x:Name="ControlBorderColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#D0D0D0" Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="ControlBorder"/>
                                <TextBox x:Name="ControlBorderColorText" Grid.Column="2" Margin="8,0,0,0" Text="#D0D0D0"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="ControlBorder"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Text Colors -->
                    <GroupBox Header="Text Colors" Margin="0,0,0,12">
                        <StackPanel>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Primary Text" VerticalAlignment="Center"/>
                                <Border x:Name="TextColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#1E1E1E" Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="Text"/>
                                <TextBox x:Name="TextColorText" Grid.Column="2" Margin="8,0,0,0" Text="#1E1E1E"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="Text"/>
                            </Grid>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Secondary Text" VerticalAlignment="Center"/>
                                <Border x:Name="SecondaryTextColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#6E6E6E" Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="SecondaryText"/>
                                <TextBox x:Name="SecondaryTextColorText" Grid.Column="2" Margin="8,0,0,0" Text="#6E6E6E"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="SecondaryText"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Header Colors -->
                    <GroupBox Header="Header &amp; Title Bar" Margin="0,0,0,12">
                        <StackPanel>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Header Background" VerticalAlignment="Center"/>
                                <Border x:Name="HeaderColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#007ACC" Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="Header"/>
                                <TextBox x:Name="HeaderColorText" Grid.Column="2" Margin="8,0,0,0" Text="#007ACC"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="Header"/>
                            </Grid>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Header Text" VerticalAlignment="Center"/>
                                <Border x:Name="HeaderForegroundColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#FFFFFF" BorderBrush="Gray" BorderThickness="1"
                                        Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="HeaderForeground"/>
                                <TextBox x:Name="HeaderForegroundColorText" Grid.Column="2" Margin="8,0,0,0" Text="#FFFFFF"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="HeaderForeground"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Menu Colors -->
                    <GroupBox Header="Menu Colors" Margin="0,0,0,12">
                        <StackPanel>
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Menu Background" VerticalAlignment="Center"/>
                                <Border x:Name="MenuBackgroundColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#F5F5F5" BorderBrush="Gray" BorderThickness="1"
                                        Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="MenuBackground"/>
                                <TextBox x:Name="MenuBackgroundColorText" Grid.Column="2" Margin="8,0,0,0" Text="#F5F5F5"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="MenuBackground"/>
                            </Grid>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Menu Text" VerticalAlignment="Center"/>
                                <Border x:Name="MenuForegroundColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#1E1E1E" Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="MenuForeground"/>
                                <TextBox x:Name="MenuForegroundColorText" Grid.Column="2" Margin="8,0,0,0" Text="#1E1E1E"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="MenuForeground"/>
                            </Grid>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Menu Hover" VerticalAlignment="Center"/>
                                <Border x:Name="MenuHoverBackgroundColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#E0E0E0" Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="MenuHoverBackground"/>
                                <TextBox x:Name="MenuHoverBackgroundColorText" Grid.Column="2" Margin="8,0,0,0" Text="#E0E0E0"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="MenuHoverBackground"/>
                            </Grid>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Menu Border" VerticalAlignment="Center"/>
                                <Border x:Name="MenuBorderColorPreview" Grid.Column="1" Height="28" CornerRadius="4" 
                                        Background="#D0D0D0" Cursor="Hand" MouseLeftButtonUp="ColorPreview_Click" Tag="MenuBorder"/>
                                <TextBox x:Name="MenuBorderColorText" Grid.Column="2" Margin="8,0,0,0" Text="#D0D0D0"
                                         VerticalAlignment="Center" TextChanged="ColorText_Changed" Tag="MenuBorder"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Preview Panel -->
                    <GroupBox Header="Live Preview" Margin="0,0,0,12">
                        <Border x:Name="PreviewPanel" Padding="16" CornerRadius="4" Background="#FFFFFF">
                            <StackPanel>
                                <Border x:Name="PreviewHeader" Background="#007ACC" CornerRadius="4,4,0,0" Padding="12,8" Margin="0,0,0,12">
                                    <TextBlock x:Name="PreviewHeaderText" Text="PlatypusTools" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource WindowForegroundBrush}"/>
                                </Border>
                                <TextBlock x:Name="PreviewPrimaryText" Text="Sample Heading" FontSize="16" FontWeight="Bold" Foreground="#1E1E1E"/>
                                <TextBlock x:Name="PreviewSecondaryText" Text="This is secondary text to preview your theme colors." 
                                           Foreground="#6E6E6E" Margin="0,4,0,12"/>
                                <StackPanel Orientation="Horizontal">
                                    <Border x:Name="PreviewButton" Background="#007ACC" CornerRadius="4" Padding="12,6" Margin="0,0,8,0">
                                        <TextBlock Text="Primary Button" Foreground="{DynamicResource WindowForegroundBrush}"/>
                                    </Border>
                                    <Border x:Name="PreviewSecondaryButton" Background="Transparent" BorderBrush="#007ACC" 
                                            BorderThickness="1" CornerRadius="4" Padding="12,6">
                                        <TextBlock x:Name="PreviewSecondaryButtonText" Text="Secondary" Foreground="#007ACC"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="12,12">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="ðŸ“¥ Import..." Padding="12,6" Margin="0,0,6,0" Click="Import_Click" ToolTip="Import a theme file"/>
                    <Button Content="ðŸ“¤ Export..." Padding="12,6" Click="Export_Click" ToolTip="Export selected theme"/>
                    <Button Content="ðŸ“„ Export XAML..." Padding="12,6" Margin="6,0,0,0" Click="ExportXaml_Click" ToolTip="Export theme as XAML file"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Reset" Padding="14,6" Margin="0,0,6,0" Click="ResetDefault_Click" ToolTip="Reset to built-in themes"/>
                    <Button Content="âœ“ Apply Theme" Padding="14,6" Margin="0,0,6,0" Click="Apply_Click" 
                            Background="{DynamicResource PrimaryBrush}" Foreground="{DynamicResource WindowForegroundBrush}"/>
                    <Button Content="Close" Padding="16,6" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>