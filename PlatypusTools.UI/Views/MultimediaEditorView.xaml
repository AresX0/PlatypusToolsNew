<UserControl x:Class="PlatypusTools.UI.Views.MultimediaEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
             xmlns:winforms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             xmlns:local="clr-namespace:PlatypusTools.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- File Selection at Top -->
        <GroupBox Header="Media File" Grid.Row="0" Margin="5">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="File:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" Text="{Binding FilePath}" IsReadOnly="True" Margin="0,0,10,0"/>
                <Button Grid.Column="2" Content="Browse..." Command="{Binding BrowseFileCommand}" MinWidth="180" Padding="5"/>
            </Grid>
        </GroupBox>

        <!-- Tabbed Interface for Each Application -->
        <TabControl Grid.Row="1" Margin="5">
            <!-- Native Video Player Tab - HIDDEN (available in Video tab) -->
            <TabItem Header="â–¶ï¸ Video Player" Visibility="Collapsed">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Video Display -->
                    <Border Grid.Row="0" Background="Black" CornerRadius="4">
                        <MediaElement x:Name="NativeVideoPlayer" 
                                      LoadedBehavior="Manual" 
                                      UnloadedBehavior="Stop"
                                      MediaOpened="NativeVideoPlayer_MediaOpened"
                                      MediaEnded="NativeVideoPlayer_MediaEnded"
                                      Stretch="Uniform"/>
                    </Border>
                    
                    <!-- Video Controls -->
                    <GroupBox Grid.Row="1" Header="Playback Controls" Margin="0,5,0,0">
                        <StackPanel Margin="5">
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="VideoPositionText" Grid.Column="0" Text="00:00:00" VerticalAlignment="Center" Margin="0,0,10,0" FontFamily="Consolas"/>
                                <Slider x:Name="VideoSeekSlider" Grid.Column="1" Minimum="0" Maximum="100" ValueChanged="VideoSeekSlider_ValueChanged" Margin="0,0,10,0"/>
                                <TextBlock x:Name="VideoDurationText" Grid.Column="2" Text="00:00:00" VerticalAlignment="Center" FontFamily="Consolas"/>
                            </Grid>
                            <WrapPanel HorizontalAlignment="Center" Margin="0,5">
                                <Button x:Name="VideoPlayButton" Content="â–¶ Play" Click="VideoPlay_Click" MinWidth="180" Height="35" Margin="5" FontWeight="Bold"/>
                                <Button x:Name="VideoPauseButton" Content="â¸ Pause" Click="VideoPause_Click" MinWidth="180" Height="35" Margin="5"/>
                                <Button x:Name="VideoStopButton" Content="â¹ Stop" Click="VideoStop_Click" MinWidth="180" Height="35" Margin="5"/>
                                <Button Content="âª -10s" Click="VideoBack_Click" MinWidth="180" Height="35" Margin="5"/>
                                <Button Content="â© +10s" Click="VideoForward_Click" MinWidth="180" Height="35" Margin="5"/>
                                <Button Content="â›¶ Fullscreen" Click="VideoFullscreen_Click" MinWidth="180" Height="35" Margin="5" ToolTip="Press Escape to exit fullscreen"/>
                            </WrapPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                                <TextBlock Text="Volume:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <Slider x:Name="VideoVolumeSlider" Minimum="0" Maximum="1" Value="0.7" Width="150" ValueChanged="VideoVolume_ValueChanged"/>
                                <Button Content="ðŸ”‡ Mute" Click="VideoMute_Click" MinWidth="180" Height="30" Margin="10,0,0,0"/>
                            </StackPanel>
                            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" FontStyle="Italic" Foreground="#666">
                                Native WPF video player - No external software required
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Native Audio Trim Tab - HIDDEN (available in Audio tab) -->
            <TabItem Header="âœ‚ï¸ Audio Trim" Visibility="Collapsed">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Trim Settings -->
                    <GroupBox Header="Trim Settings" Grid.Row="0" Margin="0,0,0,10">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Start Time:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                            <TextBox x:Name="AudioTrimStart" Grid.Row="0" Grid.Column="1" Text="00:00:00" Margin="0,0,20,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="End Time:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                            <TextBox x:Name="AudioTrimEnd" Grid.Row="0" Grid.Column="3" Text="00:00:30" Margin="0,0,0,5"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Output Format:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="AudioTrimFormat" Grid.Row="1" Grid.Column="1" SelectedIndex="0">
                                <ComboBoxItem Content="MP3"/>
                                <ComboBoxItem Content="WAV"/>
                                <ComboBoxItem Content="FLAC"/>
                                <ComboBoxItem Content="AAC"/>
                                <ComboBoxItem Content="OGG"/>
                            </ComboBox>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Actions -->
                    <GroupBox Header="Actions" Grid.Row="1" Margin="0,0,0,10">
                        <WrapPanel Margin="10">
                            <Button x:Name="AudioTrimButton" Content="âœ‚ï¸ Trim Audio" Click="AudioTrim_Click" MinWidth="190" Height="40" Margin="0,0,10,5" FontWeight="Bold" Background="#FF4CAF50" Foreground="White"/>
                            <Button x:Name="AudioPreviewButton" Content="â–¶ Preview" Click="AudioPreview_Click" MinWidth="180" Height="40" Margin="0,0,10,5"/>
                            <Button Content="ðŸ“‚ Open Output Folder" Click="OpenOutputFolder_Click" MinWidth="180" Height="40" Margin="0,0,10,5"/>
                        </WrapPanel>
                    </GroupBox>
                    
                    <!-- Info Panel -->
                    <GroupBox Header="Audio Trim - Powered by FFmpeg" Grid.Row="2">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="10">
                                <TextBlock Text="Native Audio Trimming" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                    Trim audio files to specific start and end times. Uses FFmpeg for lossless audio processing when possible.
                                </TextBlock>
                                <TextBlock Text="Features:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="â€¢ Set precise start and end timestamps" Margin="15,0,0,3"/>
                                <TextBlock Text="â€¢ Convert to different output formats" Margin="15,0,0,3"/>
                                <TextBlock Text="â€¢ Preview selection before trimming" Margin="15,0,0,3"/>
                                <TextBlock Text="â€¢ Batch processing support (select folder)" Margin="15,0,0,10"/>
                                <Border Background="#E8F5E9" Padding="10" Margin="0,10,0,0" BorderBrush="#4CAF50" BorderThickness="1">
                                    <TextBlock Text="ðŸ’¡ Tip: Use format HH:MM:SS for timestamps (e.g., 00:01:30 for 1 minute 30 seconds)" Foreground="#2E7D32" TextWrapping="Wrap"/>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Native Image Edit Tab - HIDDEN (available in Image tab) -->
            <TabItem Header="ðŸ–¼ï¸ Image Edit" Visibility="Collapsed">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Quick Actions -->
                    <GroupBox Header="Quick Image Operations" Grid.Row="0" Margin="0,0,0,10">
                        <WrapPanel Margin="10">
                            <Button x:Name="ImageRotateLeftButton" Content="â†¶ Rotate Left" Click="ImageRotateLeft_Click" MinWidth="180" Height="35" Margin="0,0,5,5"/>
                            <Button x:Name="ImageRotateRightButton" Content="â†· Rotate Right" Click="ImageRotateRight_Click" MinWidth="180" Height="35" Margin="0,0,5,5"/>
                            <Button x:Name="ImageFlipHButton" Content="â†” Flip Horizontal" Click="ImageFlipH_Click" MinWidth="190" Height="35" Margin="0,0,5,5"/>
                            <Button x:Name="ImageFlipVButton" Content="â†• Flip Vertical" Click="ImageFlipV_Click" MinWidth="180" Height="35" Margin="0,0,5,5"/>
                            <Button x:Name="ImageGrayscaleButton" Content="ðŸŽ¨ Grayscale" Click="ImageGrayscale_Click" MinWidth="180" Height="35" Margin="0,0,5,5"/>
                            <Button x:Name="ImageInvertButton" Content="ðŸ”„ Invert Colors" Click="ImageInvert_Click" MinWidth="180" Height="35" Margin="0,0,5,5"/>
                        </WrapPanel>
                    </GroupBox>
                    
                    <!-- Image Preview -->
                    <GroupBox Header="Image Preview" Grid.Row="1">
                        <Grid>
                            <Image x:Name="ImageEditPreview" Stretch="Uniform" Margin="5"/>
                            <TextBlock Text="Select an image file to edit" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="#999" FontSize="14" FontStyle="Italic"
                                       Visibility="{Binding IsImageFile, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Save Options -->
                    <GroupBox Header="Save Options" Grid.Row="2" Margin="0,5,0,0">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Output Format:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="ImageOutputFormat" Grid.Column="1" SelectedIndex="0" Width="100">
                                <ComboBoxItem Content="PNG"/>
                                <ComboBoxItem Content="JPEG"/>
                                <ComboBoxItem Content="BMP"/>
                                <ComboBoxItem Content="GIF"/>
                                <ComboBoxItem Content="WEBP"/>
                            </ComboBox>
                            <Button x:Name="ImageSaveButton" Grid.Column="2" Content="ðŸ’¾ Save As..." Click="ImageSave_Click" MinWidth="180" Height="35" Margin="10,0,5,0" FontWeight="Bold" Background="#FF4CAF50" Foreground="White"/>
                            <Button x:Name="ImageResetButton" Grid.Column="3" Content="â†© Reset" Click="ImageReset_Click" MinWidth="180" Height="35"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- VLC Player Tab -->
            <TabItem Header="ðŸŽ¬ VLC Player">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- VLC Configuration -->
                    <GroupBox Header="VLC Configuration" Grid.Row="0" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="VLC Path:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding VlcPath}" IsReadOnly="True" Margin="0,0,10,0"/>
                                <Button Grid.Column="2" Content="Browse..." Command="{Binding BrowseVlcCommand}" Padding="5" Margin="0,0,5,0"/>
                                <TextBlock Grid.Column="3" Text="âœ”" Foreground="Green" FontSize="16" FontWeight="Bold" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Visibility="{Binding IsVlcAvailable, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Grid.Column="3" Text="âœ–" Foreground="Red" FontSize="16" FontWeight="Bold" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Visibility="{Binding IsVlcAvailable, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                            </Grid>
                            
                            <Button Content="ðŸ“¥ Download VLC Player" Command="{Binding DownloadVlcCommand}" 
                                    MinWidth="200" HorizontalAlignment="Left" Padding="5"
                                    Visibility="{Binding IsVlcAvailable, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- VLC Features -->
                    <GroupBox Header="Features" Grid.Row="1" Margin="0,0,0,10">
                        <WrapPanel Margin="5">
                            <Button Content="Open in VLC" Command="{Binding OpenInVlcCommand}" MinWidth="190" Height="40" Margin="0,0,10,5" Padding="5" FontWeight="Bold"
                                    ToolTip="Open selected file in VLC Media Player for playback and basic editing"/>
                            <Button Content="Embed VLC Here" Command="{Binding EmbedVlcCommand}" MinWidth="190" Height="40" Margin="0,0,10,5" Padding="5" FontWeight="Bold" Background="#FF2196F3" Foreground="White"
                                    ToolTip="Embed VLC player directly in this tab"/>
                            <Button Content="Convert Format" Command="{Binding VlcConvertFormatCommand}" MinWidth="190" Height="40" Margin="0,0,10,5" Padding="5"
                                    ToolTip="Use VLC to convert video/audio format (outputs to same folder)"/>
                            <Button Content="Extract Audio" Command="{Binding VlcExtractAudioCommand}" MinWidth="190" Height="40" Margin="0,0,10,5" Padding="5"
                                    ToolTip="Extract audio track from video file as MP3"/>
                            <Button Content="Take Snapshot" Command="{Binding VlcTakeSnapshotCommand}" MinWidth="190" Height="40" Margin="0,0,10,5" Padding="5"
                                    ToolTip="Capture frames from video as PNG images"/>
                        </WrapPanel>
                    </GroupBox>

                    <!-- VLC Workspace -->
                    <GroupBox Header="VLC Workspace" Grid.Row="2">
                        <Grid>
                            <!-- Embedded VLC Host -->
                            <wfi:WindowsFormsHost x:Name="VlcHost" Loaded="VlcHost_Loaded" 
                                                 Visibility="{Binding EmbedVlc, Converter={StaticResource BoolToVisibilityConverter}}">
                                <winforms:Panel x:Name="VlcPanel" Dock="Fill"/>
                            </wfi:WindowsFormsHost>
                            
                            <!-- Information Panel (when not embedded) -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                          Visibility="{Binding EmbedVlc, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <StackPanel Margin="10">
                                    <TextBlock Text="VLC Media Player Capabilities" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                                    
                                    <TextBlock Text="ðŸŽ¬ Playback Features:" FontWeight="Bold" Margin="0,0,0,8"/>
                                    <TextBlock Text="â€¢ Play video and audio files in virtually all formats" Margin="15,0,0,5"/>
                                    <TextBlock Text="â€¢ Stream network media (HTTP, RTSP, etc.)" Margin="15,0,0,5"/>
                                    <TextBlock Text="â€¢ Playback speed control and frame-by-frame navigation" Margin="15,0,0,5"/>
                                    <TextBlock Text="â€¢ Subtitle support with timing adjustment" Margin="15,0,0,10"/>
                                    
                                    <TextBlock Text="ðŸ”„ Conversion and Processing:" FontWeight="Bold" Margin="0,10,0,8"/>
                                    <TextBlock Text="â€¢ Convert between media formats" Margin="15,0,0,5"/>
                                    <TextBlock Text="â€¢ Extract audio from videos" Margin="15,0,0,5"/>
                                    <TextBlock Text="â€¢ Apply video/audio effects and filters" Margin="15,0,0,10"/>
                                    
                                    <TextBlock Text="ðŸ“¸ Additional Features:" FontWeight="Bold" Margin="0,10,0,8"/>
                                <TextBlock Text="â€¢ Capture video snapshots" Margin="15,0,0,5"/>
                                <TextBlock Text="â€¢ Record desktop or webcam" Margin="15,0,0,5"/>
                                <TextBlock Text="â€¢ Create video playlists" Margin="15,0,0,10"/>
                                
                                <Border Background="#E3F2FD" Padding="15" Margin="0,15,0,0" BorderBrush="#2196F3" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ’¡ Quick Start:" FontWeight="Bold" Foreground="#1976D2" Margin="0,0,0,5"/>
                                        <TextBlock Text="1. Select a video or audio file using the Browse button above" Foreground="#1976D2" Margin="0,0,0,3"/>
                                        <TextBlock Text="2. Click 'Open in VLC' to launch the file in VLC Media Player" Foreground="#1976D2" Margin="0,0,0,3"/>
                                        <TextBlock Text="3. Use VLC's built-in tools for playback, conversion, or editing" Foreground="#1976D2"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Audacity Tab -->
            <TabItem Header="ðŸŽµ Audacity">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Audacity Configuration -->
                    <GroupBox Header="Audacity Configuration" Grid.Row="0" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Audacity Path:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding AudacityPath}" IsReadOnly="True" Margin="0,0,10,0"/>
                                <Button Grid.Column="2" Content="Browse..." Command="{Binding BrowseAudacityCommand}" Padding="5" Margin="0,0,5,0"/>
                                <TextBlock Grid.Column="3" Text="âœ”" Foreground="Green" FontSize="16" FontWeight="Bold" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Visibility="{Binding IsAudacityAvailable, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Grid.Column="3" Text="âœ–" Foreground="Red" FontSize="16" FontWeight="Bold" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Visibility="{Binding IsAudacityAvailable, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                            </Grid>
                            
                            <Button Content="ðŸ“¥ Download Audacity" Command="{Binding DownloadAudacityCommand}" 
                                    MinWidth="200" HorizontalAlignment="Left" Padding="5"
                                    Visibility="{Binding IsAudacityAvailable, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Audacity Features -->
                    <GroupBox Header="Features" Grid.Row="1" Margin="0,0,0,10">
                        <WrapPanel Margin="5">
                            <Button Content="Open in Audacity" Command="{Binding OpenInAudacityCommand}" MinWidth="190" Height="40" Margin="0,0,10,5" Padding="5" FontWeight="Bold"
                                    ToolTip="Open selected audio file in Audacity for editing"/>
                            <Button Content="Embed Audacity Here" Command="{Binding EmbedAudacityCommand}" MinWidth="190" Height="40" Margin="0,0,10,5" Padding="5" FontWeight="Bold" Background="#FF2196F3" Foreground="White"
                                    ToolTip="Embed Audacity directly in this tab"/>
                            <Button Content="Record Audio" Command="{Binding AudacityRecordAudioCommand}" MinWidth="190" Height="40" Margin="0,0,10,5" Padding="5"
                                    ToolTip="Launch Audacity for audio recording"/>
                            <Button Content="Apply Effects" Command="{Binding AudacityApplyEffectsCommand}" MinWidth="190" Height="40" Margin="0,0,10,5" Padding="5"
                                    ToolTip="Open file in Audacity to apply audio effects and filters"/>
                            <Button Content="Noise Reduction" Command="{Binding AudacityNoiseReductionCommand}" MinWidth="190" Height="40" Margin="0,0,10,5" Padding="5"
                                    ToolTip="Open file in Audacity for noise reduction (Effect > Noise Reduction)"/>
                        </WrapPanel>
                    </GroupBox>

                    <!-- Audacity Workspace -->
                    <GroupBox Header="Audacity Workspace" Grid.Row="2">
                        <Grid>
                            <!-- Embedded Audacity Host -->
                            <wfi:WindowsFormsHost x:Name="AudacityHost" Loaded="AudacityHost_Loaded" 
                                                 Visibility="{Binding EmbedAudacity, Converter={StaticResource BoolToVisibilityConverter}}">
                                <winforms:Panel x:Name="AudacityPanel" Dock="Fill"/>
                            </wfi:WindowsFormsHost>
                            
                            <!-- Information Panel (when not embedded) -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                          Visibility="{Binding EmbedAudacity, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <StackPanel Margin="10">
                                    <TextBlock Text="Audacity Audio Editor Capabilities" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                                
                                <TextBlock Text="ðŸŽ™ï¸ Recording:" FontWeight="Bold" Margin="0,0,0,8"/>
                                <TextBlock Text="â€¢ Record live audio from microphone or other input devices" Margin="15,0,0,5"/>
                                <TextBlock Text="â€¢ Multi-track recording for layering sounds" Margin="15,0,0,5"/>
                                <TextBlock Text="â€¢ Timer recording for scheduled captures" Margin="15,0,0,10"/>
                                
                                <TextBlock Text="âœ‚ï¸ Editing:" FontWeight="Bold" Margin="0,10,0,8"/>
                                <TextBlock Text="â€¢ Cut, copy, paste, and delete audio segments" Margin="15,0,0,5"/>
                                <TextBlock Text="â€¢ Trim, split, and merge audio files" Margin="15,0,0,5"/>
                                <TextBlock Text="â€¢ Change tempo without affecting pitch" Margin="15,0,0,5"/>
                                <TextBlock Text="â€¢ Change pitch without affecting tempo" Margin="15,0,0,10"/>
                                
                                <TextBlock Text="ðŸŽšï¸ Effects and Processing:" FontWeight="Bold" Margin="0,10,0,8"/>
                                <TextBlock Text="â€¢ Noise reduction and click removal" Margin="15,0,0,5"/>
                                <TextBlock Text="â€¢ Reverb, echo, phaser, and chorus effects" Margin="15,0,0,5"/>
                                <TextBlock Text="â€¢ Normalize, amplify, and compress audio" Margin="15,0,0,5"/>
                                <TextBlock Text="â€¢ Equalization and bass/treble adjustment" Margin="15,0,0,5"/>
                                <TextBlock Text="â€¢ Fade in/out and crossfade" Margin="15,0,0,10"/>
                                
                                <TextBlock Text="ðŸ’¾ Export:" FontWeight="Bold" Margin="0,10,0,8"/>
                                <TextBlock Text="â€¢ Save in various formats: MP3, WAV, FLAC, OGG, etc." Margin="15,0,0,5"/>
                                <TextBlock Text="â€¢ Batch processing for multiple files" Margin="15,0,0,10"/>
                                
                                <Border Background="{DynamicResource WarningBackgroundBrush}" Padding="15" Margin="0,15,0,0" BorderBrush="{DynamicResource WarningBorderBrush}" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ’¡ Quick Start:" FontWeight="Bold" Foreground="{DynamicResource WarningForegroundBrush}" Margin="0,0,0,5"/>
                                        <TextBlock Text="1. Select an audio file using the Browse button above" Foreground="{DynamicResource WarningForegroundBrush}" Margin="0,0,0,3"/>
                                        <TextBlock Text="2. Click 'Open in Audacity' to load the file for editing" Foreground="{DynamicResource WarningForegroundBrush}" Margin="0,0,0,3"/>
                                        <TextBlock Text="3. Use Audacity's tools for professional audio editing and enhancement" Foreground="{DynamicResource WarningForegroundBrush}"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- GIMP Tab -->
            <TabItem Header="ðŸŽ¨ GIMP">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- GIMP Configuration -->
                    <GroupBox Header="GIMP Configuration" Grid.Row="0" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="GIMP Path:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Grid.Column="1" Text="{Binding GimpPath}" IsReadOnly="True" Margin="0,0,10,0"/>
                                <Button Grid.Column="2" Content="Browse..." Command="{Binding BrowseGimpCommand}" Padding="5" Margin="0,0,5,0"/>
