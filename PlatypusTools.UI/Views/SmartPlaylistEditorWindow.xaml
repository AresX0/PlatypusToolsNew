<Window x:Class="PlatypusTools.UI.Views.SmartPlaylistEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Playlist Rules Editor" Width="700" Height="550"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource WindowForegroundBrush}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Playlist Name -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Playlist Name:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,8,0"/>
            <TextBox x:Name="PlaylistNameBox" Width="300" Text="My Smart Playlist" VerticalContentAlignment="Center" FontSize="14"/>
        </StackPanel>

        <!-- Match Mode -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Match" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,8,0"/>
            <ComboBox x:Name="MatchModeCombo" SelectedIndex="0" Width="80">
                <ComboBoxItem Content="All"/>
                <ComboBoxItem Content="Any"/>
            </ComboBox>
            <TextBlock Text="of the following rules:" VerticalAlignment="Center" Margin="8,0,0,0"/>
        </StackPanel>

        <!-- Add Rule Button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="âž• Add Rule" Click="AddRule_Click" Padding="10,4" MinWidth="90"
                    Background="#FF4CAF50" Foreground="White" FontWeight="SemiBold"/>
            <Button Content="ðŸ—‘ï¸ Remove Selected" Click="RemoveRule_Click" Padding="10,4" MinWidth="120" Margin="8,0,0,0"
                    Background="#FFF44336" Foreground="White" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Rules List -->
        <Border Grid.Row="3" Background="{DynamicResource ControlBackgroundBrush}" 
                BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="RulesPanel">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="0,0,0,1" Padding="8,6">
                                <StackPanel Orientation="Horizontal">
                                    <ComboBox Width="130" SelectedItem="{Binding Field}" 
                                              SelectionChanged="Field_Changed" Tag="{Binding}"
                                              ItemsSource="{Binding AvailableFields}" Margin="0,0,8,0"/>
                                    <ComboBox x:Name="OperatorCombo" Width="140" 
                                              SelectedItem="{Binding Operator}"
                                              ItemsSource="{Binding AvailableOperators}" Margin="0,0,8,0"/>
                                    <TextBox Width="200" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                             VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Sort and Limit Options -->
        <Grid Grid.Row="4" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="SortByCombo" Grid.Column="1" Width="120" SelectedIndex="0">
                <ComboBoxItem Content="None"/>
                <ComboBoxItem Content="Title"/>
                <ComboBoxItem Content="Artist"/>
                <ComboBoxItem Content="Album"/>
                <ComboBoxItem Content="Rating"/>
                <ComboBoxItem Content="PlayCount"/>
                <ComboBoxItem Content="DateAdded"/>
                <ComboBoxItem Content="Year"/>
            </ComboBox>
            <CheckBox x:Name="SortDescCheck" Grid.Column="2" Content="Descending" VerticalAlignment="Center" Margin="12,0,0,0"/>
            <TextBlock Grid.Column="3" Text="Limit to:" VerticalAlignment="Center" Margin="24,0,6,0"/>
            <TextBox x:Name="MaxResultsBox" Grid.Column="4" Width="60" Text="" VerticalContentAlignment="Center"/>
            <TextBlock Grid.Column="5" Text="tracks" VerticalAlignment="Center" Margin="6,0,0,0"/>
        </Grid>

        <!-- Preview Count -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,12,0,0">
            <Button Content="ðŸ” Preview" Click="Preview_Click" Padding="10,4" MinWidth="80"
                    Background="#FF2196F3" Foreground="White" FontWeight="SemiBold"/>
            <TextBlock x:Name="PreviewCountText" VerticalAlignment="Center" Margin="12,0,0,0" 
                       Foreground="{DynamicResource ForegroundDimBrush}" FontStyle="Italic"/>
        </StackPanel>

        <!-- OK/Cancel -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Save" IsDefault="True" Click="Save_Click" Padding="16,6" MinWidth="80"
                    Background="#FF4CAF50" Foreground="White" FontWeight="SemiBold"/>
            <Button Content="Cancel" IsCancel="True" Click="Cancel_Click" Padding="16,6" MinWidth="80" Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
