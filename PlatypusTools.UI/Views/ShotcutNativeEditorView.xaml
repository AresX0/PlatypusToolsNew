<UserControl x:Class="PlatypusTools.UI.Views.ShotcutNativeEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:PlatypusTools.UI.Controls.VideoEditor"
             xmlns:converters="clr-namespace:PlatypusTools.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#1E1E1E"
             Loaded="UserControl_Loaded">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:BoolToFavoriteIconConverter x:Key="BoolToFavoriteIconConverter"/>
        
        <SolidColorBrush x:Key="PanelBg" Color="#252525"/>
        <SolidColorBrush x:Key="HeaderBg" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3D3D3D"/>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextColorDim" Color="#BBBBBB"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4488FF"/>
        <SolidColorBrush x:Key="ButtonBg" Color="#3D3D3D"/>
        <SolidColorBrush x:Key="ButtonHoverBg" Color="#4D4D4D"/>
        
        <!-- Dark theme button style -->
        <Style x:Key="DarkButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBg}"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="contentPresenter" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"
                                              TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ButtonHoverBg}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="contentPresenter" Property="TextBlock.Foreground" Value="#888888"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Small icon button -->
        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource DarkButton}">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style x:Key="PanelHeader" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource HeaderBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
        
        <Style x:Key="PanelHeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        
        <!-- Dark RadioButton style with white text -->
        <Style x:Key="DarkRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="radio" Width="12" Height="12" 
                                     Stroke="#888888" StrokeThickness="1" 
                                     Fill="Transparent" Margin="0,0,6,0"/>
                            <ContentPresenter VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="radio" Property="Fill" Value="#4488FF"/>
                                <Setter TargetName="radio" Property="Stroke" Value="#4488FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Dark ListBox style -->
        <Style TargetType="ListBox" x:Key="DarkListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        </Style>
        
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D3D3D"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#4488FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <!-- Context Menus -->
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Open File..." Click="OpenFile_Click"/>
            <MenuItem Header="Save Project" Click="SaveProject_Click"/>
            <Separator/>
            <MenuItem Header="New from Template..." Click="NewFromTemplate_Click"/>
            <MenuItem Header="Project Notes..." Click="ProjectNotes_Click"/>
            <MenuItem Header="Archive Project..." Click="ArchiveProject_Click"/>
            <Separator/>
            <MenuItem Header="Export Video..." Click="Export_Click"/>
            <MenuItem Header="Export EDL/XML..." Click="ExportEDL_Click"/>
            <MenuItem Header="Export Chapters..." Click="ExportChapterMarkers_Click"/>
            <Separator/>
            <MenuItem Header="Layout">
                <MenuItem Header="Toggle Left Panel" Click="ToggleLeftPanel_Click"/>
                <MenuItem Header="Toggle Right Panel" Click="ToggleRightPanel_Click"/>
                <MenuItem Header="Toggle Timeline" Click="ToggleTimeline_Click"/>
                <Separator/>
                <MenuItem Header="Default Layout" Click="LayoutPreset_Click" Tag="Default"/>
                <MenuItem Header="Edit Only" Click="LayoutPreset_Click" Tag="EditOnly"/>
                <MenuItem Header="Preview Mode" Click="LayoutPreset_Click" Tag="Preview"/>
                <MenuItem Header="Trim Mode" Click="LayoutPreset_Click" Tag="Trim"/>
            </MenuItem>
        </ContextMenu>
    </UserControl.ContextMenu>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition x:Name="TimelineRow" Height="200"/>
        </Grid.RowDefinitions>
        
        <!-- Top Toolbar (like Shotcut) -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBg}" 
                BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1"
                Padding="4" MaxHeight="80">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <WrapPanel Orientation="Horizontal">
                    <!-- Row 1: File & Edit Operations -->
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="OpenFile_Click">
                        <TextBlock Text="ðŸ“ Open" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="SaveProject_Click">
                        <TextBlock Text="ðŸ’¾ Save" Foreground="White"/>
                    </Button>
                    <Separator Width="1" Background="{StaticResource BorderColor}" Margin="8,4"/>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="Undo_Click" ToolTip="Undo (Ctrl+Z)">
                        <TextBlock Text="â†© Undo" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="Redo_Click" ToolTip="Redo (Ctrl+Y)">
                        <TextBlock Text="â†ª Redo" Foreground="White"/>
                    </Button>
                    <Separator Width="1" Background="{StaticResource BorderColor}" Margin="8,4"/>
                    
                    <!-- Advanced Edits -->
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="RollingEdit_Click" ToolTip="Rolling Edit â€” adjust edit point between clips">
                        <TextBlock Text="â†” Roll" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="SlipEdit_Click" ToolTip="Slip Edit â€” shift source under clip">
                        <TextBlock Text="â‡„ Slip" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="SlideEdit_Click" ToolTip="Slide Edit â€” move clip, adjust neighbors">
                        <TextBlock Text="â‡” Slide" Foreground="White"/>
                    </Button>
                    <Separator Width="1" Background="{StaticResource BorderColor}" Margin="8,4"/>
                    
                    <!-- Clip Operations -->
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="ReversePlayback_Click" ToolTip="Toggle reverse playback">
                        <TextBlock Text="âª Rev" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="CopyKeyframes_Click" ToolTip="Copy clip filters">
                        <TextBlock Text="ðŸ“‹ Copy" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="PasteKeyframes_Click" ToolTip="Paste filters to clip">
                        <TextBlock Text="ðŸ“Œ Paste" Foreground="White"/>
                    </Button>
                    <Separator Width="1" Background="{StaticResource BorderColor}" Margin="8,4"/>
                    
                    <!-- Text/Title & Recording -->
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="AddTextTitle_Click" ToolTip="Text/Title generator">
                        <TextBlock Text="ðŸ”¤ Title" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="VoiceOverRecord_Click" ToolTip="Record voice-over">
                        <TextBlock Text="ðŸŽ™ï¸ VO" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="AddChapterMarker_Click" ToolTip="Add chapter marker at playhead">
                        <TextBlock Text="ðŸ“‘ Ch" Foreground="White"/>
                    </Button>
                    <Separator Width="1" Background="{StaticResource BorderColor}" Margin="8,4"/>
                    
                    <!-- Speed & Effects -->
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="SpeedRamping_Click" ToolTip="Clip speed ramping">
                        <TextBlock Text="âš¡ Speed" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="FreezeFrame_Click" ToolTip="Insert freeze frame at playhead">
                        <TextBlock Text="â„ Freeze" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="SnapToNearestEdit_Click" ToolTip="Snap playhead to nearest edit">
                        <TextBlock Text="ðŸ§² Snap" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="TimeRemap_Click" ToolTip="Time remap / speed curves">
                        <TextBlock Text="â± Remap" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="ExternalMonitor_Click" ToolTip="External preview monitor (second screen)">
                        <TextBlock Text="ðŸ–¥ Monitor" Foreground="White"/>
                    </Button>
                    <Separator Width="1" Background="{StaticResource BorderColor}" Margin="8,4"/>
                    
                    <!-- Playback Controls -->
                    <Button Style="{StaticResource IconButton}" Margin="2,2" Click="ShuttleReverse_Click" ToolTip="Shuttle Reverse (J)">
                        <TextBlock Text="âª" Foreground="White" FontSize="12"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Margin="2,2" Click="JogBackward_Click" ToolTip="Jog -1 frame">
                        <TextBlock Text="â®" Foreground="White" FontSize="12"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Margin="2,2" Click="ShuttlePause_Click" ToolTip="Pause (K)">
                        <TextBlock Text="â¸" Foreground="White" FontSize="12"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Margin="2,2" Click="JogForward_Click" ToolTip="Jog +1 frame">
                        <TextBlock Text="â­" Foreground="White" FontSize="12"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Margin="2,2" Click="ShuttleForward_Click" ToolTip="Shuttle Forward (L)">
                        <TextBlock Text="â©" Foreground="White" FontSize="12"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="SetLoopRegion_Click" ToolTip="Toggle loop region (In/Out)">
                        <TextBlock Text="ðŸ” Loop" Foreground="White"/>
                    </Button>
                    <Separator Width="1" Background="{StaticResource BorderColor}" Margin="8,4"/>
                    
                    <!-- Preview & Export -->
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="GenerateProxy_Click" ToolTip="Generate proxy media">
                        <TextBlock Text="ðŸŽž Proxy" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="SetPreviewScale_Click" ToolTip="Preview scaling">
                        <TextBlock x:Name="PreviewScaleLabel" Text="ðŸ“ 100%" Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource DarkButton}" Margin="4,2" Click="RenderPreview_Click" ToolTip="Quick render preview">
                        <TextBlock Text="ðŸ‘ Preview" Foreground="White"/>
                    </Button>
                    <Separator Width="1" Background="{StaticResource BorderColor}" Margin="8,4"/>
                    <Button Padding="12,4" 
                            Background="{StaticResource AccentColor}"
                            BorderThickness="0"
                            Style="{StaticResource DarkButton}"
                            Margin="4,2"
                            Click="Export_Click">
                        <TextBlock Text="ðŸ“¤ Export" Foreground="White"/>
                    </Button>
                </WrapPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Main content area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="150"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="250" MinWidth="150"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel: Playlist/Media Bin (like Shotcut) -->
            <Border x:Name="LeftPanel" Grid.Column="0" Background="{StaticResource PanelBg}"
                    BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Tabs: Playlist | Recent -->
                    <Border Grid.Row="0" Style="{StaticResource PanelHeader}">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="PlaylistTab" Content="Playlist" 
                                         IsChecked="True" GroupName="LeftTabs"
                                         Style="{StaticResource DarkRadioButton}"
                                         Margin="0,0,12,0"/>
                            <RadioButton x:Name="RecentTab" Content="Recent" 
                                         GroupName="LeftTabs"
                                         Style="{StaticResource DarkRadioButton}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Playlist content -->
                    <Grid Grid.Row="1">
                        <!-- Toolbar -->
                        <Border Background="{StaticResource HeaderBg}" 
                                VerticalAlignment="Top" Height="28">
                            <StackPanel Orientation="Horizontal" Margin="4,0">
                                <Button Style="{StaticResource IconButton}" ToolTip="Add Files"
                                        Click="AddToPlaylist_Click">
                                    <TextBlock Text="âž•" Foreground="White"/>
                                </Button>
                                <Button Style="{StaticResource IconButton}" ToolTip="Remove Selected"
                                        Click="RemoveFromPlaylist_Click">
                                    <TextBlock Text="âž–" Foreground="White"/>
                                </Button>
                                <Button Style="{StaticResource IconButton}" ToolTip="Add to Timeline"
                                        Click="AddToTimeline_Click" Margin="8,0,0,0">
                                    <TextBlock Text="â–¶" Foreground="White"/>
                                </Button>
                            </StackPanel>
                        </Border>
                        
                        <!-- Playlist items -->
                        <ListBox x:Name="PlaylistBox" 
                                 Margin="0,28,0,0"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 SelectionChanged="PlaylistBox_SelectionChanged"
                                 MouseDoubleClick="PlaylistBox_MouseDoubleClick"
                                 AllowDrop="True"
                                 Drop="PlaylistBox_Drop"
                                 PreviewMouseLeftButtonDown="PlaylistBox_PreviewMouseLeftButtonDown"
                                 PreviewMouseMove="PlaylistBox_PreviewMouseMove">
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Open in Player" Click="OpenInPlayer_Click"/>
                                    <MenuItem Header="Add to Timeline" Click="AddToTimeline_Click"/>
                                    <MenuItem Header="Add Video to V1" Click="AddVideoToTimeline_Click"/>
                                    <MenuItem Header="Extract Audio to A1" Click="ExtractAudioToTimeline_Click"/>
                                    <Separator/>
                                    <MenuItem Header="Remove from Playlist" Click="RemoveFromPlaylist_Click"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Thumbnail -->
                                        <Border Grid.Column="0" Background="#333333" 
                                                Width="56" Height="32" CornerRadius="2">
                                            <Image Source="{Binding Thumbnail}" 
                                                   Stretch="UniformToFill"/>
                                        </Border>
                                        
                                        <!-- Info -->
                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding Name}" 
                                                       Foreground="#FFFFFF"
                                                       TextTrimming="CharacterEllipsis"
                                                       FontSize="11"/>
                                            <TextBlock Text="{Binding DurationText}" 
                                                       Foreground="#AAAAAA"
                                                       FontSize="10"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Grid>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter x:Name="LeftSplitter" Grid.Column="1" Width="5" 
                          HorizontalAlignment="Stretch" 
                          Background="{StaticResource BorderColor}"/>
            
            <!-- Center: Video Player -->
            <controls:VideoPlayerPanel x:Name="VideoPlayer" Grid.Column="2"/>
            
            <!-- Splitter -->
            <GridSplitter x:Name="RightSplitter" Grid.Column="3" Width="5" 
                          HorizontalAlignment="Stretch" 
                          Background="{StaticResource BorderColor}"/>
            
            <!-- Right Panel: Properties/Filters -->
            <Border x:Name="RightPanel" Grid.Column="4" Background="{StaticResource PanelBg}"
                    BorderBrush="{StaticResource BorderColor}" BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Tabs -->
                    <Border Grid.Row="0" Style="{StaticResource PanelHeader}">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="PropertiesTab" Content="Properties" 
                                         IsChecked="True" GroupName="RightTabs"
                                         Style="{StaticResource DarkRadioButton}"
                                         Margin="0,0,12,0"/>
                            <RadioButton x:Name="FiltersTab" Content="Filters" 
                                         GroupName="RightTabs"
                                         Style="{StaticResource DarkRadioButton}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Properties Panel (visible when Properties tab selected) -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding IsChecked, ElementName=PropertiesTab, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel x:Name="PropertiesPanel" Margin="8">
                            <TextBlock Text="No clip selected" 
                                       Foreground="#999999"
                                       HorizontalAlignment="Center"
                                       Margin="0,20,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Filters Panel (visible when Filters tab selected) -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding IsChecked, ElementName=FiltersTab, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel x:Name="FiltersPanel" Margin="8">
                            <!-- Filter Search -->
                            <Grid Margin="0,0,0,8">
                                <TextBox x:Name="FilterSearchBox"
                                         Text="{Binding FilterSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Background="#2B2F37" Foreground="White"
                                         BorderBrush="#4B5058" Padding="24,6,6,6"/>
                                <TextBlock Text="ðŸ”" IsHitTestVisible="False" 
                                           VerticalAlignment="Center" Margin="6,0,0,0"
                                           Foreground="#6B7280"/>
                            </Grid>
                            
                            <!-- Filter Categories -->
                            <TextBlock Text="Categories" Foreground="#9CA3AF" FontSize="11" Margin="0,0,0,4"/>
                            <WrapPanel Margin="0,0,0,8">
                                <RadioButton Content="All" GroupName="FilterCat" IsChecked="True"
                                             Foreground="White" Margin="0,0,8,4"/>
                                <RadioButton Content="Color" GroupName="FilterCat"
                                             Foreground="White" Margin="0,0,8,4"/>
                                <RadioButton Content="Blur" GroupName="FilterCat"
                                             Foreground="White" Margin="0,0,8,4"/>
                                <RadioButton Content="Stylize" GroupName="FilterCat"
                                             Foreground="White" Margin="0,0,8,4"/>
                                <RadioButton Content="Transform" GroupName="FilterCat"
                                             Foreground="White" Margin="0,0,8,4"/>
                                <RadioButton Content="Audio" GroupName="FilterCat"
                                             Foreground="White" Margin="0,0,8,4"/>
                            </WrapPanel>
                            
                            <!-- Available Filters List -->
                            <TextBlock Text="Available Filters" Foreground="#9CA3AF" FontSize="11" Margin="0,0,0,4"/>
                            <ListBox x:Name="FiltersList" 
                                     ItemsSource="{Binding FilteredShotcutFilters}"
                                     Background="#2B2F37" BorderBrush="#4B5058"
                                     MaxHeight="200" Margin="0,0,0,8">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="2,1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Button Grid.Column="0" 
                                                    Content="{Binding IsFavorite, Converter={StaticResource BoolToFavoriteIconConverter}}"
                                                    Command="{Binding DataContext.ToggleFilterFavoriteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent" BorderThickness="0"
                                                    Foreground="#FFD700" Padding="2,0" Cursor="Hand"
                                                    FontSize="11" ToolTip="Toggle Favorite"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Icon}" 
                                                       FontSize="12" VerticalAlignment="Center"/>
                                            <StackPanel Grid.Column="2" Margin="4,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" Foreground="White" FontSize="11"/>
                                            </StackPanel>
                                            <Button Grid.Column="3" Content="+" 
                                                    Command="{Binding DataContext.ApplyShotcutFilterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#3B82F6" Foreground="White"
                                                    BorderThickness="0" 
                                                    FontWeight="Bold" Cursor="Hand"
                                                    ToolTip="Add filter to clip"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <!-- Applied Filters -->
                            <TextBlock Text="Applied Filters" Foreground="#9CA3AF" FontSize="11" Margin="0,8,0,4"/>
                            <ItemsControl ItemsSource="{Binding SelectedClip.Filters}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#3B3F47" CornerRadius="4" Margin="0,2" Padding="6">
                                            <DockPanel>
                                                <Button DockPanel.Dock="Right" Content="âœ•"
                                                        Background="Transparent" Foreground="#EF4444"
                                                        BorderThickness="0" Cursor="Hand" FontSize="10"
                                                        Command="{Binding DataContext.RemoveShotcutFilterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"/>
                                                <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding IsEnabled}"
                                                              Width="18" Height="18" Background="Transparent" BorderThickness="0">
                                                    <TextBlock Text="ðŸ‘" FontSize="10"/>
                                                </ToggleButton>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Icon}" FontSize="10" Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding Name}" Foreground="White" FontSize="10"/>
                                                </StackPanel>
                                            </DockPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <TextBlock Text="Select a clip to add filters" 
                                       Foreground="#666666" FontSize="10" FontStyle="Italic"
                                       HorizontalAlignment="Center" Margin="0,16,0,0"
                                       Visibility="{Binding HasSelectedClip, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Splitter -->
        <GridSplitter x:Name="TimelineSplitter" Grid.Row="2" Height="5" 
                      HorizontalAlignment="Stretch" 
                      Background="{StaticResource BorderColor}"/>
        
        <!-- Bottom: Timeline -->
        <controls:TimelinePanel x:Name="Timeline" Grid.Row="3"
                                TimelineModel="{Binding TimelineModel}"
                                ClipSelected="Timeline_ClipSelected"
                                PositionChanged="Timeline_PositionChanged"/>
    </Grid>
</UserControl>
