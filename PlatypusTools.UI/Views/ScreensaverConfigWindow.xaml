<Window x:Class="PlatypusTools.UI.Views.ScreensaverConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PlatypusTools Screensaver Settings"
        Width="450" Height="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸŒ™ PlatypusTools Screensaver" 
                       FontSize="20" FontWeight="Bold" 
                       Foreground="#00D4FF"/>
            <TextBlock Text="Configure your audio visualizer screensaver" 
                       FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Visualizer Mode -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Visualizer Mode:" Foreground="{DynamicResource WindowForegroundBrush}" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="ModeComboBox" Width="300" HorizontalAlignment="Left" FontSize="14" Padding="8,6">
                <ComboBoxItem Content="Bars"/>
                <ComboBoxItem Content="Mirror"/>
                <ComboBoxItem Content="Waveform"/>
                <ComboBoxItem Content="Circular"/>
                <ComboBoxItem Content="Radial"/>
                <ComboBoxItem Content="Particles"/>
                <ComboBoxItem Content="Aurora"/>
                <ComboBoxItem Content="Wave Grid"/>
                <ComboBoxItem Content="Starfield" IsSelected="True"/>
                <ComboBoxItem Content="Toasters"/>
                <ComboBoxItem Content="Matrix"/>
                <ComboBoxItem Content="Star Wars Crawl"/>
                <ComboBoxItem Content="Stargate"/>
                <ComboBoxItem Content="Klingon"/>
                <ComboBoxItem Content="Federation"/>
                <ComboBoxItem Content="Jedi"/>
                <ComboBoxItem Content="TimeLord"/>
                <ComboBoxItem Content="VU Meter"/>
                <ComboBoxItem Content="Oscilloscope"/>
                <ComboBoxItem Content="Milkdrop"/>
                <ComboBoxItem Content="3D Bars"/>
                <ComboBoxItem Content="Waterfall"/>
                <ComboBoxItem Content="Honmoon"/>
            </ComboBox>
        </StackPanel>
        
        <!-- Color Scheme -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Color Scheme:" Foreground="{DynamicResource WindowForegroundBrush}" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="ColorSchemeComboBox" Width="300" HorizontalAlignment="Left" FontSize="14" Padding="8,6">
                <ComboBoxItem Content="Blue-Green" IsSelected="True"/>
                <ComboBoxItem Content="Rainbow"/>
                <ComboBoxItem Content="Fire"/>
                <ComboBoxItem Content="Purple"/>
                <ComboBoxItem Content="Neon"/>
                <ComboBoxItem Content="Ocean"/>
                <ComboBoxItem Content="Sunset"/>
                <ComboBoxItem Content="Monochrome"/>
                <ComboBoxItem Content="Pip-Boy"/>
                <ComboBoxItem Content="LCARS"/>
                <ComboBoxItem Content="Klingon"/>
                <ComboBoxItem Content="Federation"/>
                <ComboBoxItem Content="Jedi"/>
            </ComboBox>
        </StackPanel>
        
        <!-- Info -->
        <Border Grid.Row="3" Background="#252525" CornerRadius="5" Padding="15" Margin="0,10,0,0">
            <StackPanel>
                <TextBlock Text="â„¹ï¸ How to use:" Foreground="#00D4FF" FontSize="13" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock TextWrapping="Wrap" Foreground="LightGray" FontSize="12" LineHeight="20">
                    <Run>â€¢ The screensaver displays animated audio visualizations</Run><LineBreak/>
                    <Run>â€¢ Press any key or click mouse to exit</Run><LineBreak/>
                    <Run>â€¢ Right-click during screensaver to access quick settings</Run><LineBreak/>
                    <Run>â€¢ Use "Install as Screensaver" button to register with Windows</Run>
                </TextBlock>
            </StackPanel>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Preview" MinWidth="180" Padding="0,8" Margin="0,0,10,0"
                    Click="Preview_Click"
                    Background="#2196F3" Foreground="{DynamicResource WindowForegroundBrush}" BorderThickness="0"/>
            <Button Content="Save" MinWidth="180" Padding="0,8" Margin="0,0,10,0"
                    Click="Save_Click"
                    Background="#4CAF50" Foreground="{DynamicResource WindowForegroundBrush}" BorderThickness="0"/>
            <Button Content="Cancel" MinWidth="180" Padding="0,8"
                    Click="Cancel_Click"
                    Background="#666" Foreground="{DynamicResource WindowForegroundBrush}" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
