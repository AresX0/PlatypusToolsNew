<Window x:Class="PlatypusTools.UI.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About PlatypusTools" Height="500" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/Assets/platypus.png" Width="64" Height="64" Margin="0,0,15,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="PlatypusTools" FontSize="28" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Advanced File Management Suite" FontSize="14" Foreground="#FFBBDEFB"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Version Info -->
                <GroupBox Header="Version Information" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" FontWeight="Bold"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="VersionText" Text="3.4.3.2"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Build Date:" FontWeight="Bold"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="BuildDateText" Text="2026-01-19"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text=".NET Version:" FontWeight="Bold"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DotNetText" Text=""/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="OS Version:" FontWeight="Bold"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="OSText" Text=""/>
                    </Grid>
                </GroupBox>
                
                <!-- Features -->
                <GroupBox Header="Features" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="• File Cleaner &amp; Batch Renamer" Margin="0,2"/>
                        <TextBlock Text="• Native Video/Audio Player with Fullscreen" Margin="0,2"/>
                        <TextBlock Text="• Image Editor (Rotate, Flip, Effects)" Margin="0,2"/>
                        <TextBlock Text="• Audio Trimmer with FFmpeg" Margin="0,2"/>
                        <TextBlock Text="• Video/Image Converter &amp; Upscaler" Margin="0,2"/>
                        <TextBlock Text="• Duplicate &amp; Similar Image Finder" Margin="0,2"/>
                        <TextBlock Text="• System Cleanup &amp; Privacy Tools" Margin="0,2"/>
                        <TextBlock Text="• Security Audit &amp; Folder Hider" Margin="0,2"/>
                        <TextBlock Text="• Metadata Editor with ExifTool" Margin="0,2"/>
                        <TextBlock Text="• Network Tools &amp; Archive Manager" Margin="0,2"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Credits -->
                <GroupBox Header="Credits" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="Developed with:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="• .NET 10 / WPF" Margin="10,2,0,0"/>
                        <TextBlock Text="• CommunityToolkit.Mvvm" Margin="10,2,0,0"/>
                        <TextBlock Text="• SixLabors.ImageSharp" Margin="10,2,0,0"/>
                        <TextBlock Text="• ExifTool by Phil Harvey" Margin="10,2,0,0"/>
                        <TextBlock Text="• FFmpeg/FFprobe for media processing" Margin="10,2,0,0"/>
                        <TextBlock Text="• WiX Toolset for installer" Margin="10,2,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Links -->
                <GroupBox Header="Links" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Button Content="GitHub" Click="GitHub_Click" Margin="0,0,10,0" Padding="15,5"/>
                        <Button Content="Documentation" Click="Docs_Click" Margin="0,0,10,0" Padding="15,5"/>
                        <Button Content="Report Issue" Click="Issue_Click" Padding="15,5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2" Padding="20" Background="{DynamicResource SurfaceBrush}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="© 2026 PlatypusTools Project" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <Button Content="Close" MinWidth="180" Click="Close_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
