<Window x:Class="PlatypusTools.UI.Views.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PlatypusTools Loading..."
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="480" Height="360"
        Topmost="True"
        ShowInTaskbar="False">
    <Border Background="#FF1565C0" CornerRadius="12" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- Video Player - LoadedBehavior=Manual for better control -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0" ClipToBounds="True">
                <MediaElement x:Name="VideoPlayer" 
                              LoadedBehavior="Manual" 
                              UnloadedBehavior="Stop"
                              Stretch="UniformToFill"
                              MediaOpened="VideoPlayer_MediaOpened"
                              MediaEnded="VideoPlayer_MediaEnded"
                              IsMuted="True" />
            </Border>
            
            <!-- Loading Text and Progress -->
            <StackPanel Grid.Row="1" Margin="20,10,20,20">
                <TextBlock Text="PlatypusTools" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" />
                <TextBlock x:Name="LoadingText" 
                           Text="Loading..." 
                           FontSize="12" 
                           Foreground="#FFBBDEFB" 
                           HorizontalAlignment="Center" 
                           Margin="0,4,0,8" />
                <ProgressBar x:Name="LoadingProgress" 
                             IsIndeterminate="True" 
                             Height="4" 
                             Background="#FF0D47A1"
                             Foreground="#FF64B5F6" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
