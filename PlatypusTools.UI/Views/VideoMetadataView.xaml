<UserControl x:Class="PlatypusTools.UI.Views.VideoMetadataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Controls -->
        <GroupBox Header="Batch Video Metadata Editor" Grid.Row="0" Margin="0,0,0,4">
            <WrapPanel Margin="8">
                <Button Content="Add Files" Command="{Binding AddFilesCommand}" MinWidth="80"
                        Background="#FF2196F3" Foreground="White" Margin="0,0,8,0" />
                <Button Content="Add Folder" Command="{Binding AddFolderCommand}" MinWidth="80"
                        Background="#FF2196F3" Foreground="White" Margin="0,0,8,0" />
                <Button Content="Read Metadata" Command="{Binding ReadMetadataCommand}" MinWidth="110" FontWeight="Bold"
                        Background="#FF4CAF50" Foreground="White" Margin="0,0,8,0" />
                <Button Content="Save Selected" Command="{Binding SaveSelectedCommand}" MinWidth="100"
                        Background="#FF9C27B0" Foreground="White" Margin="0,0,8,0" />
                <Button Content="Save All" Command="{Binding SaveAllCommand}" MinWidth="80"
                        Background="#FF4CAF50" Foreground="White" Margin="0,0,8,0" />
                <Button Content="Clear" Command="{Binding ClearCommand}" MinWidth="60"
                        Background="#FFF44336" Foreground="White" />
            </WrapPanel>
        </GroupBox>

        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows" />

        <!-- Files Grid -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding VideoFiles}" SelectedItem="{Binding SelectedVideo}"
                  AutoGenerateColumns="False" CanUserSortColumns="True"
                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="200" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                            <Setter Property="ToolTip" Value="{Binding FilePath}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="150" />
                <DataGridTextColumn Header="Artist" Binding="{Binding Artist}" Width="120" />
                <DataGridTextColumn Header="Album" Binding="{Binding Album}" Width="120" />
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="80" />
                <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="60" />
                <DataGridTextColumn Header="Resolution" Binding="{Binding Resolution}" Width="90" IsReadOnly="True" />
                <DataGridTextColumn Header="Codec" Binding="{Binding Codec}" Width="80" IsReadOnly="True" />
                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="80" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Batch Edit -->
        <GroupBox Header="Batch Edit - Apply to All Selected" Grid.Row="3" Margin="0,4,0,0">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Title:" VerticalAlignment="Center" Margin="0,0,4,0" Grid.Column="0" />
                <TextBox Text="{Binding BatchTitle, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Margin="0,0,8,0" />

                <TextBlock Text="Artist:" VerticalAlignment="Center" Margin="0,0,4,0" Grid.Column="2" />
                <TextBox Text="{Binding BatchArtist, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Margin="0,0,8,0" />

                <TextBlock Text="Genre:" VerticalAlignment="Center" Margin="0,0,4,0" Grid.Column="4" />
                <TextBox Text="{Binding BatchGenre, UpdateSourceTrigger=PropertyChanged}" Grid.Column="5" Margin="0,0,8,0" />

                <Button Content="Apply to All" Command="{Binding ApplyToAllCommand}" Grid.Column="6"
                        MinWidth="90" Background="#FFFF9800" Foreground="White" />
            </Grid>
        </GroupBox>

        <!-- Status -->
        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
