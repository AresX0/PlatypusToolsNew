<UserControl x:Class="PlatypusTools.UI.Views.BatchUpscaleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:PlatypusTools.UI.Controls"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*" MinHeight="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Settings Panel -->
        <GroupBox Header="Upscale Settings" Grid.Row="0" Margin="0,0,0,8">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Output Folder -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Output Folder:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Settings.OutputDirectory, UpdateSourceTrigger=PropertyChanged}" 
                         VerticalAlignment="Center" Margin="0,0,8,0"/>
                <Button Grid.Row="0" Grid.Column="2" Content="Browse..." Command="{Binding BrowseOutputCommand}" 
                        MinWidth="180" Margin="0,0,8,0"/>
                
                <!-- Scale Factor -->
                <TextBlock Grid.Row="0" Grid.Column="3" Text="Scale:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox Grid.Row="0" Grid.Column="4" ItemsSource="{Binding ScaleFactors}" 
                          SelectedItem="{Binding Settings.ScaleFactor}" Width="60" Margin="0,0,8,0"/>
                
                <!-- Mode -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Mode:" VerticalAlignment="Center" Margin="0,8,8,0"/>
                <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding UpscaleModes}" 
                          SelectedItem="{Binding Settings.Mode}" Width="150" HorizontalAlignment="Left" Margin="0,8,8,0"/>
                
                <!-- Max Concurrent -->
                <TextBlock Grid.Row="1" Grid.Column="3" Text="Max Parallel:" VerticalAlignment="Center" Margin="0,8,8,0"/>
                <ComboBox Grid.Row="1" Grid.Column="4" Width="60" Margin="0,8,0,0"
                          SelectedItem="{Binding Settings.MaxConcurrentJobs}">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="4"/>
                </ComboBox>
            </Grid>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Actions -->
        <WrapPanel Grid.Row="1" Margin="0,0,0,8">
            <Button Content="ðŸ“ Add Files..." Command="{Binding AddFilesCommand}" MinWidth="100" Margin="0,2,8,2"/>
            <Button Content="ðŸ“‚ Add Folder..." Command="{Binding AddFolderCommand}" MinWidth="110" Margin="0,2,8,2"/>
            <Button Content="ðŸ—‘ï¸ Remove Selected" Command="{Binding RemoveSelectedCommand}" MinWidth="120" Margin="0,2,8,2"
                    IsEnabled="{Binding CanModifyQueue}" Background="#FFF44336" Foreground="White"/>
            <Button Content="ðŸ§¹ Clear All" Command="{Binding ClearQueueCommand}" MinWidth="90" Margin="0,2,24,2"
                    IsEnabled="{Binding CanModifyQueue}"/>
            
            <Button Content="â–¶ Start" Command="{Binding StartProcessingCommand}" MinWidth="80" Margin="0,2,8,2"
                    Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>
            <Button Content="â¸ Pause" Command="{Binding PauseProcessingCommand}" MinWidth="80" Margin="0,2,8,2"
                    Background="#FFFF9800" Foreground="White"/>
            <Button Content="â¹ Cancel" Command="{Binding CancelProcessingCommand}" MinWidth="80" Margin="0,2,0,2"
                    Background="#FFF44336" Foreground="White"/>
        </WrapPanel>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" 
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>
        
        <!-- Main Content - Split between Queue and Preview -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="350" MinWidth="250"/>
            </Grid.ColumnDefinitions>
            
            <!-- Queue DataGrid -->
            <GroupBox Header="Upscale Queue" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <DataGrid ItemsSource="{Binding CurrentJobItems}"
                                  SelectedItem="{Binding SelectedItem}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="True"
                                  SelectionMode="Extended"
                                  IsReadOnly="True"
                                  ColumnHeaderHeight="32"
                                  HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Disabled"
                                  ColumnWidth="*">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="180" MinWidth="120" CanUserResize="True"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="100" MinWidth="80" CanUserResize="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                    <Setter Property="Foreground" Value="Green"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Processing">
                                                    <Setter Property="Foreground" Value="Blue"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Settings" Binding="{Binding EffectiveSettingsDisplay}" Width="110" MinWidth="80" CanUserResize="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontStyle" Value="Italic"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding UseOverrides}" Value="True">
                                                    <Setter Property="Foreground" Value="DarkOrange"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="FontStyle" Value="Normal"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Original Size" Binding="{Binding OriginalSizeDisplay}" Width="90" MinWidth="70" CanUserResize="True"/>
                                <DataGridTextColumn Header="Output Size" Binding="{Binding OutputSizeDisplay}" Width="90" MinWidth="70" CanUserResize="True"/>
                                <DataGridTextColumn Header="Source Path" Binding="{Binding SourcePath}" Width="*" MinWidth="150" CanUserResize="True"/>
                            </DataGrid.Columns>
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Edit Item Settings..." Command="{Binding EditItemSettingsCommand}"/>
                                    <MenuItem Header="Use Default Settings" Command="{Binding ResetItemSettingsCommand}"
                                              IsEnabled="{Binding SelectedItem.UseOverrides}"/>
                                    <Separator/>
                                    <MenuItem Header="Compare Before/After" Command="{Binding CompareCommand}"/>
                                    <MenuItem Header="Open Output Folder" Command="{Binding OpenOutputFolderCommand}"/>
                                    <Separator/>
                                    <MenuItem Header="Remove from Queue" Command="{Binding RemoveSelectedCommand}"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                          Background="{DynamicResource BorderBrush}" Cursor="SizeWE"/>
            
            <!-- Preview Panel -->
            <GroupBox Header="Comparison Preview" Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Comparison Viewer -->
                    <controls:ComparisonViewer x:Name="ComparisonViewer" Grid.Row="0"
                                               LeftImage="{Binding OriginalPreviewImage}"
                                               RightImage="{Binding UpscaledPreviewImage}"/>
                    
                    <!-- Info Panel -->
                    <Border Grid.Row="1" Background="{DynamicResource ControlBackgroundBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="8">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedItem.FileName}" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="Original: " Foreground="Gray"/>
                                <TextBlock Text="{Binding SelectedItem.OriginalDimensions}"/>
                                <TextBlock Text=" â†’ " Foreground="Gray"/>
                                <TextBlock Text="Output: " Foreground="Gray"/>
                                <TextBlock Text="{Binding SelectedItem.OutputDimensions}" FontWeight="SemiBold" Foreground="Green"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </GroupBox>
        </Grid>
        
        <!-- Progress -->
        <GroupBox Header="Progress" Grid.Row="4" Margin="0,8,0,0">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ProgressBar Grid.Row="0" Grid.ColumnSpan="2" Height="20" 
                             Value="{Binding OverallProgress}" Maximum="100" Margin="0,0,0,8"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding StatusMessage}"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Completed: " Foreground="Gray"/>
                    <TextBlock Text="{Binding CompletedCount}" FontWeight="Bold" Foreground="Green"/>
                    <TextBlock Text=" / " Foreground="Gray"/>
                    <TextBlock Text="{Binding TotalCount}"/>
                    <TextBlock Text=" | Failed: " Foreground="Gray" Margin="16,0,0,0"/>
                    <TextBlock Text="{Binding FailedCount}" FontWeight="Bold" Foreground="Red"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="5" Margin="0,8,0,0">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Queue: "/><Run Text="{Binding TotalCount, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text=" items"/>
                </TextBlock>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Processing..." Margin="0,0,8,0" 
                               Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <ProgressBar Width="100" Height="16" IsIndeterminate="True" 
                                 Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
