<UserControl x:Class="PlatypusTools.UI.Views.GifMakerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Settings -->
        <GroupBox Header="GIF Maker" Grid.Row="0" Margin="0,0,0,4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Input -->
                    <WrapPanel Grid.Row="0" Margin="0,0,0,8">
                        <TextBlock Text="Input Video:" VerticalAlignment="Center" Width="90" />
                        <TextBox Text="{Binding InputFilePath, UpdateSourceTrigger=PropertyChanged}" Width="400" Margin="0,0,8,0" />
                        <Button Content="Browse..." Command="{Binding BrowseInputCommand}" MinWidth="80" Margin="0,0,8,0" />
                        <TextBlock Text="{Binding VideoDuration, StringFormat='Duration: {0}'}" VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}" />
                    </WrapPanel>

                    <!-- Output -->
                    <WrapPanel Grid.Row="1" Margin="0,0,0,8">
                        <TextBlock Text="Output GIF:" VerticalAlignment="Center" Width="90" />
                        <TextBox Text="{Binding OutputFilePath, UpdateSourceTrigger=PropertyChanged}" Width="400" Margin="0,0,8,0" />
                        <Button Content="Browse..." Command="{Binding BrowseOutputCommand}" MinWidth="80" />
                    </WrapPanel>

                    <!-- Timing -->
                    <WrapPanel Grid.Row="2" Margin="0,0,0,8">
                        <TextBlock Text="Start Time:" VerticalAlignment="Center" Width="90" />
                        <TextBox Text="{Binding StartTime, UpdateSourceTrigger=PropertyChanged}" Width="80" Margin="0,0,16,0"
                                 ToolTip="Format: seconds (e.g., 5.0) or HH:MM:SS" />
                        <TextBlock Text="Duration:" VerticalAlignment="Center" Width="65" />
                        <TextBox Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}" Width="80" Margin="0,0,16,0"
                                 ToolTip="Duration in seconds" />
                    </WrapPanel>

                    <!-- Settings -->
                    <WrapPanel Grid.Row="3" Margin="0,0,0,8">
                        <TextBlock Text="Width:" VerticalAlignment="Center" Width="90" />
                        <TextBox Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}" Width="60" Margin="0,0,16,0"
                                 ToolTip="Output width in pixels (-1 for auto)" />
                        <TextBlock Text="FPS:" VerticalAlignment="Center" Width="35" />
                        <TextBox Text="{Binding Fps, UpdateSourceTrigger=PropertyChanged}" Width="50" Margin="0,0,16,0" />
                        <CheckBox Content="High Quality (2-pass)" IsChecked="{Binding HighQuality}" VerticalAlignment="Center" Margin="0,0,16,0" />
                    </WrapPanel>

                    <!-- Text Overlay & Actions -->
                    <WrapPanel Grid.Row="4">
                        <TextBlock Text="Text Overlay:" VerticalAlignment="Center" Width="90" />
                        <TextBox Text="{Binding TextOverlay, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="0,0,16,0"
                                 ToolTip="Optional text overlay on the GIF" />
                        <Button Content="Create GIF" Command="{Binding CreateGifCommand}" MinWidth="100" FontWeight="Bold"
                                Background="#FF4CAF50" Foreground="White" Margin="0,0,8,0" />
                        <Button Content="Cancel" Command="{Binding CancelCommand}" MinWidth="80"
                                Background="#FFF44336" Foreground="White" Margin="0,0,8,0" />
                        <Button Content="Open Output" Command="{Binding OpenOutputCommand}" MinWidth="90"
                                Background="#FF2196F3" Foreground="White" Margin="0,0,16,0" />
                        <ProgressBar Width="150" Height="20" IsIndeterminate="True"
                                     Visibility="{Binding IsCreating, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </WrapPanel>
                </Grid>
            </ScrollViewer>
        </GroupBox>

        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows" />

        <!-- Log Output -->
        <GroupBox Header="Output Log" Grid.Row="2">
            <TextBox Text="{Binding LogOutput}" IsReadOnly="True"
                     TextWrapping="Wrap" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas" FontSize="11" />
        </GroupBox>

        <!-- Status -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
