<UserControl x:Class="PlatypusTools.UI.Views.RemoteDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1200">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style x:Key="StatusDot" TargetType="Ellipse">
            <Setter Property="Width" Value="12" />
            <Setter Property="Height" Value="12" />
            <Setter Property="Margin" Value="0,0,6,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="#FF1E1E2E" />
            <Setter Property="BorderBrush" Value="#FF3E3E5E" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Margin" Value="4" />
        </Style>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#FFCDD6F4" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>
        <Style x:Key="StatValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#FF89B4FA" />
        </Style>
        <Style x:Key="StatLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="#FF6C7086" />
            <Setter Property="Margin" Value="0,2,0,0" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Row: Status + Controls -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="ðŸŒ Remote Management Dashboard" FontSize="18" FontWeight="Bold"
                           Foreground="#FFCDD6F4" VerticalAlignment="Center" />
                <ProgressBar IsIndeterminate="True" Width="60" Height="4" Margin="12,0,0,0"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}" />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{Binding ServerToggleText}" Command="{Binding ToggleServerCommand}"
                        Background="#FF4CAF50" Foreground="White" Padding="12,6"
                        Margin="0,0,8,0" MinWidth="100" />
                <Button Content="{Binding TunnelToggleText}" Command="{Binding ToggleTunnelCommand}"
                        Background="#FF2196F3" Foreground="White" Padding="12,6"
                        Margin="0,0,8,0" MinWidth="120" />
                <Button Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}"
                        Padding="12,6" MinWidth="80" />
            </StackPanel>
        </Grid>

        <!-- Stats Cards Row -->
        <UniformGrid Grid.Row="1" Columns="5" Margin="0,0,0,4">
            <!-- Server Status -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse>
                            <Ellipse.Style>
                                <Style TargetType="Ellipse" BasedOn="{StaticResource StatusDot}">
                                    <Setter Property="Fill" Value="#FF6C7086" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsServerRunning}" Value="True">
                                            <Setter Property="Fill" Value="#FFA6E3A1" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock Text="{Binding ServerStatus}" FontSize="14" FontWeight="SemiBold"
                                   Foreground="#FFCDD6F4" VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock Text="Server" Style="{StaticResource StatLabel}" />
                </StackPanel>
            </Border>

            <!-- Tunnel Status -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse>
                            <Ellipse.Style>
                                <Style TargetType="Ellipse" BasedOn="{StaticResource StatusDot}">
                                    <Setter Property="Fill" Value="#FF6C7086" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsTunnelRunning}" Value="True">
                                            <Setter Property="Fill" Value="#FF89B4FA" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock Text="{Binding TunnelStatus}" FontSize="14" FontWeight="SemiBold"
                                   Foreground="#FFCDD6F4" VerticalAlignment="Center" />
                    </StackPanel>
                    <TextBlock Text="Cloudflare Tunnel" Style="{StaticResource StatLabel}" />
                </StackPanel>
            </Border>

            <!-- Connections -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="{Binding TotalConnections}" Style="{StaticResource StatValue}" />
                    <TextBlock Text="Total Connections (7d)" Style="{StaticResource StatLabel}" />
                </StackPanel>
            </Border>

            <!-- Actions -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="{Binding TotalActions}" Style="{StaticResource StatValue}" />
                    <TextBlock Text="Total Actions (7d)" Style="{StaticResource StatLabel}" />
                </StackPanel>
            </Border>

            <!-- Unique Clients -->
            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="{Binding UniqueClients}" Style="{StaticResource StatValue}" />
                    <TextBlock Text="Unique Clients (7d)" Style="{StaticResource StatLabel}" />
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Main Content: 3-column layout -->
        <Grid Grid.Row="2" Margin="0,4,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <!-- Left: Connection Info + IP Allowlist -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Connection URLs -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="ðŸ”— Connection" Style="{StaticResource SectionHeader}" />
                            
                            <TextBlock Text="Local URL" Foreground="#FF6C7086" FontSize="10" Margin="0,0,0,2" />
                            <DockPanel Margin="0,0,0,8">
                                <Button DockPanel.Dock="Right" Content="ðŸ“‹" Width="28" Height="28" Margin="4,0,0,0"
                                        Command="{Binding CopyServerUrlCommand}" ToolTip="Copy" />
                                <TextBox Text="{Binding ServerUrl, Mode=OneWay}" IsReadOnly="True"
                                         FontSize="11" VerticalAlignment="Center" />
                            </DockPanel>

                            <TextBlock Text="LAN URL" Foreground="#FF6C7086" FontSize="10" Margin="0,0,0,2" />
                            <DockPanel Margin="0,0,0,8">
                                <Button DockPanel.Dock="Right" Content="ðŸ“‹" Width="28" Height="28" Margin="4,0,0,0"
                                        Command="{Binding CopyLocalIpCommand}" ToolTip="Copy" />
                                <TextBox IsReadOnly="True" FontSize="11" VerticalAlignment="Center">
                                    <TextBox.Text>
                                        <MultiBinding StringFormat="https://{0}:{1}">
                                            <Binding Path="LocalIpAddress" />
                                            <Binding Path="ServerPort" />
                                        </MultiBinding>
                                    </TextBox.Text>
                                </TextBox>
                            </DockPanel>

                            <TextBlock Text="Tunnel URL" Foreground="#FF6C7086" FontSize="10" Margin="0,0,0,2"
                                       Visibility="{Binding IsTunnelRunning, Converter={StaticResource BoolToVis}}" />
                            <DockPanel Margin="0,0,0,4"
                                       Visibility="{Binding IsTunnelRunning, Converter={StaticResource BoolToVis}}">
                                <Button DockPanel.Dock="Right" Content="ðŸ“‹" Width="28" Height="28" Margin="4,0,0,0"
                                        Command="{Binding CopyTunnelUrlCommand}" ToolTip="Copy" />
                                <TextBox Text="{Binding TunnelUrl, Mode=OneWay}" IsReadOnly="True"
                                         FontSize="11" VerticalAlignment="Center" TextWrapping="Wrap" />
                            </DockPanel>

                            <!-- Tailscale -->
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0"
                                        Visibility="{Binding IsTailscaleConnected, Converter={StaticResource BoolToVis}}">
                                <Ellipse Width="8" Height="8" Fill="#FFA6E3A1" Margin="0,0,6,0" VerticalAlignment="Center" />
                                <TextBlock FontSize="11" Foreground="#FF6C7086" VerticalAlignment="Center">
                                    <Run Text="Tailscale: " />
                                    <Run Text="{Binding TailscaleIp}" Foreground="#FFA6E3A1" />
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Connected Clients -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionHeader}">
                                <Run Text="ðŸ‘¥ Connected Clients (" />
                                <Run Text="{Binding ConnectedClients.Count, Mode=OneWay}" />
                                <Run Text=")" />
                            </TextBlock>
                            <ItemsControl ItemsSource="{Binding ConnectedClients}" MaxHeight="200">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FF2A2A3E" CornerRadius="4" Padding="8" Margin="0,0,0,4">
                                            <StackPanel>
                                                <TextBlock Text="{Binding IpAddress}" FontWeight="SemiBold"
                                                           Foreground="#FFCDD6F4" FontSize="12" />
                                                <TextBlock FontSize="10" Foreground="#FF6C7086"
                                                           Text="{Binding ConnectedAt, StringFormat='Connected: {0:HH:mm:ss}'}" />
                                                <TextBlock FontSize="10" Foreground="#FF6C7086"
                                                           Text="{Binding UserAgent}" TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding UserAgent}" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Text="No clients connected" Foreground="#FF6C7086" FontSize="11"
                                       Margin="0,4,0,0" FontStyle="Italic">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ConnectedClients.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- IP Allowlist -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="ðŸ”’ IP Allowlist" Style="{StaticResource SectionHeader}" />
                            <CheckBox Content="Enable IP filtering" IsChecked="{Binding IsIpAllowlistEnabled}"
                                      Foreground="#FFCDD6F4" Margin="0,0,0,8" />
                            
                            <DockPanel Margin="0,0,0,8">
                                <Button DockPanel.Dock="Right" Content="Add" Width="50" Margin="4,0,0,0"
                                        Command="{Binding AddIpCommand}"
                                        Background="#FF4CAF50" Foreground="White" />
                                <TextBox Text="{Binding NewIpEntry, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="11" VerticalAlignment="Center" />
                            </DockPanel>

                            <ItemsControl ItemsSource="{Binding IpAllowlist}" MaxHeight="150">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Margin="0,0,0,2">
                                            <Button DockPanel.Dock="Right" Content="âœ•" Width="22" Height="22"
                                                    FontSize="10" Margin="4,0,0,0" Foreground="#FFF38BA8"
                                                    Background="Transparent" BorderThickness="0"
                                                    Command="{Binding DataContext.RemoveIpCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" />
                                            <TextBlock Text="{Binding}" Foreground="#FFCDD6F4" FontSize="11"
                                                       VerticalAlignment="Center" FontFamily="Consolas" />
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"
                          Background="Transparent" Cursor="SizeWE" />

            <!-- Center: Audit Log -->
            <Border Grid.Column="2" Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Log Header + Controls -->
                    <DockPanel Grid.Row="0" Margin="0,0,0,8">
                        <TextBlock Text="ðŸ“‹ Audit Log" Style="{StaticResource SectionHeader}"
                                   DockPanel.Dock="Left" VerticalAlignment="Center" />
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                            <ComboBox ItemsSource="{Binding LogFilterOptions}"
                                      SelectedItem="{Binding SelectedLogFilter}"
                                      Width="100" Margin="0,0,4,0" FontSize="11" />
                            <Button Content="Export" Command="{Binding ExportLogsCommand}"
                                    Padding="8,4" Margin="0,0,4,0" FontSize="11"
                                    Background="#FF2196F3" Foreground="White" />
                            <Button Content="Cleanup" Command="{Binding CleanupOldLogsCommand}"
                                    Padding="8,4" Margin="0,0,4,0" FontSize="11"
                                    Background="#FFFF9800" Foreground="White" ToolTip="Remove logs older than 30 days" />
                            <Button Content="Clear" Command="{Binding ClearLogsCommand}"
                                    Padding="8,4" FontSize="11"
                                    Background="#FFF44336" Foreground="White" />
                        </StackPanel>
                    </DockPanel>

                    <!-- Log DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredLogEntries}"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              CanUserSortColumns="True"
                              GridLinesVisibility="Horizontal"
                              BorderThickness="0" Background="Transparent"
                              RowBackground="#FF1E1E2E" AlternatingRowBackground="#FF2A2A3E"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Width="80"
                                                Binding="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}" />
                            <DataGridTextColumn Header="Client IP" Width="130"
                                                Binding="{Binding ClientIp}" />
                            <DataGridTextColumn Header="Action" Width="110"
                                                Binding="{Binding Action}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Action}" Value="Connected">
                                                <Setter Property="Foreground" Value="#FFA6E3A1" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Action}" Value="Disconnected">
                                                <Setter Property="Foreground" Value="#FFF38BA8" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Action}" Value="Play">
                                                <Setter Property="Foreground" Value="#FF89B4FA" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Action}" Value="Pause">
                                                <Setter Property="Foreground" Value="#FFFAB387" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Details" Width="*"
                                                Binding="{Binding Details}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                        <Setter Property="ToolTip" Value="{Binding Details}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Track" Width="180"
                                                Binding="{Binding TrackInfo}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                        <Setter Property="ToolTip" Value="{Binding TrackInfo}" />
                                        <Setter Property="Foreground" Value="#FF6C7086" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="" Width="35">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="ðŸ“‹" Width="24" Height="24" FontSize="10"
                                                Background="Transparent" BorderThickness="0"
                                                Command="{Binding DataContext.CopyLogEntryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Copy entry" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch"
                          Background="Transparent" Cursor="SizeWE" />

            <!-- Right: Server Logs -->
            <Border Grid.Column="4" Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="ðŸ–¥ï¸ Server Log" Style="{StaticResource SectionHeader}" />

                    <ListBox Grid.Row="1" ItemsSource="{Binding ServerLogs}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas" FontSize="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Foreground="#FF6C7086" TextWrapping="Wrap" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#FF1E1E2E" CornerRadius="4" Padding="8,4" Margin="4,4,4,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Right" FontSize="11" Foreground="#FF6C7086" VerticalAlignment="Center">
                    <Run Text="Port: " />
                    <Run Text="{Binding ServerPort}" />
                    <Run Text=" | Local: " />
                    <Run Text="{Binding LocalIpAddress}" />
                </TextBlock>
                <TextBlock Text="{Binding StatusMessage}" FontSize="11" Foreground="#FFA6E3A1"
                           VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
