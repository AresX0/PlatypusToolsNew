<UserControl x:Class="PlatypusTools.UI.Views.RecentCleanupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PlatypusTools.UI.ViewModels"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" MinHeight="50" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" MinHeight="100" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Target Directories -->
        <GroupBox Header="Target Directories to Match Against" Grid.Row="0" Margin="0,0,0,8">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding TargetDirs, UpdateSourceTrigger=PropertyChanged}" 
                         ToolTip="Semicolon-separated directories to match shortcuts against"/>
                <Button Grid.Row="0" Grid.Column="1" Content="Browse..." Command="{Binding BrowseCommand}" Width="80" Margin="8,0,0,0"/>
                <Button Grid.Row="0" Grid.Column="2" Content="Clear" Command="{Binding ClearTargetDirsCommand}" Width="60" Margin="5,0,0,0"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="Enter directories whose shortcuts should be found and removed from Recent, Favorites, and Start Menu" 
                           Foreground="Gray" FontStyle="Italic" Margin="0,5,0,0"/>
            </Grid>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Exclusion Directories -->
        <GroupBox Header="Directories to Exclude" Grid.Row="1" Margin="0,0,0,8">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ListBox Grid.Column="0" ItemsSource="{Binding ExclusionDirs}" SelectedItem="{Binding SelectedExclusionDir}" 
                         Height="80" SelectionMode="Single"/>
                <StackPanel Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center">
                    <Button Content="Add..." Command="{Binding AddExclusionCommand}" Width="80" Margin="0,0,0,5"/>
                    <Button Content="Remove" Command="{Binding RemoveExclusionCommand}" Width="80"/>
                </StackPanel>
            </Grid>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Options and Actions -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8">
            <CheckBox IsChecked="{Binding DryRun}" Content="Dry Run (Preview Only)" VerticalAlignment="Center" Margin="0,0,16,0" 
                      FontWeight="SemiBold"/>
            <CheckBox IsChecked="{Binding IncludeSubDirs}" Content="Include Subdirectories" VerticalAlignment="Center" Margin="0,0,16,0" 
                      ToolTip="When checked, matches files in subdirectories of target directories. When unchecked, only matches files directly in the target directory."/>
            <Button Content="ðŸ” Scan Recent" Command="{Binding ScanAllRecentCommand}" Width="120" Margin="0,0,8,0" Padding="8,4"
                    ToolTip="Scan all recent items. If target directories are specified, filters to only show items from those directories." 
                    Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>
            <Button Content="ðŸ—‘ï¸ Remove Selected" Command="{Binding RemoveSelectedCommand}" Width="140" Margin="0,0,8,0" Padding="8,4"
                    Background="#FFF44336" Foreground="White" FontWeight="Bold"/>
            <Button Content="ðŸ’¥ Clear ALL Recent" Command="{Binding ClearAllRecentCommand}" Width="140" Margin="0,0,8,0" Padding="8,4"
                    ToolTip="Delete all recent shortcuts, jump lists, and history. Nuclear option!" 
                    Background="#FF9C27B0" Foreground="White" FontWeight="Bold"/>
            <Button Content="ðŸ”„ Refresh Explorer" Command="{Binding RefreshExplorerCommand}" Width="130" Margin="0,0,8,0" Padding="8,4"
                    ToolTip="Restart Explorer to refresh the Recent view" 
                    Background="#FF2196F3" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
        
        <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" VerticalAlignment="Bottom" Margin="0,30,0,0" FontWeight="SemiBold"/>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch" 
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>
        
        <!-- Results List -->
        <GroupBox Header="Found Shortcuts (Select items to remove)" Grid.Row="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,4">
                    <Button Content="Select All" Command="{Binding SelectAllCommand}" Width="80" Margin="0,0,8,0" Padding="4,2"/>
                    <Button Content="Select None" Command="{Binding SelectNoneCommand}" Width="80" Padding="4,2"/>
                </StackPanel>
                <DataGrid x:Name="ResultsGrid" Grid.Row="1" ItemsSource="{Binding Results}" AutoGenerateColumns="False"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          CanUserResizeColumns="True" CanUserSortColumns="True"
                          SelectionMode="Extended"
                          SelectedItem="{Binding SelectedResult}"
                          ColumnHeaderHeight="32"
                          MinHeight="200"
                          ColumnWidth="*">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Select" Width="60" CanUserResize="True" MinWidth="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100" CanUserResize="True" MinWidth="80" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Shortcut Path" Binding="{Binding Path}" Width="350" CanUserResize="True" MinWidth="200" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Target" Binding="{Binding Target}" Width="*" CanUserResize="True" MinWidth="200" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
        
        <!-- Summary -->
        <StatusBar Grid.Row="5" Margin="0,8,0,0">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Found: "/><Run Text="{Binding Results.Count, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text=" shortcuts | Selected: "/><Run Text="{Binding SelectedCount, Mode=OneWay}" FontWeight="Bold"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>