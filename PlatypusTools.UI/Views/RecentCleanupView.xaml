<UserControl x:Class="PlatypusTools.UI.Views.RecentCleanupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PlatypusTools.UI.ViewModels"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" MinHeight="50" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" MinHeight="100" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Target Directories -->
        <GroupBox Header="Target Directories to Match Against" Grid.Row="0" Margin="0,0,0,8">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ListBox Grid.Row="0" Grid.Column="0" ItemsSource="{Binding TargetDirectoryList}" 
                         SelectedItem="{Binding SelectedTargetDirectory}" 
                         Height="80" SelectionMode="Single"
                         ToolTip="Directories to match shortcuts against â€” add multiple directories using the buttons"/>
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center">
                    <Button Content="Add..." Command="{Binding AddTargetDirCommand}" MinWidth="100" Margin="0,0,0,5"/>
                    <Button Content="Remove" Command="{Binding RemoveTargetDirCommand}" MinWidth="100" Margin="0,0,0,5"/>
                    <Button Content="Clear All" Command="{Binding ClearTargetDirsCommand}" MinWidth="100"/>
                </StackPanel>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="Enter directories whose shortcuts should be found and removed from Recent, Favorites, and Start Menu" 
                           Foreground="Gray" FontStyle="Italic" Margin="0,5,0,0"/>
            </Grid>
        </GroupBox>
        
        <!-- Exclusion Directories -->
        <GroupBox Header="Directories to Exclude" Grid.Row="1" Margin="0,0,0,8">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ListBox Grid.Column="0" ItemsSource="{Binding ExclusionDirs}" SelectedItem="{Binding SelectedExclusionDir}" 
                         Height="80" SelectionMode="Single"/>
                <StackPanel Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center">
                    <Button Content="Add..." Command="{Binding AddExclusionCommand}" MinWidth="100" Margin="0,0,0,5"/>
                    <Button Content="Remove" Command="{Binding RemoveExclusionCommand}" MinWidth="100"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Options and Actions -->
        <WrapPanel Grid.Row="2" Margin="0,0,0,8">
            <CheckBox IsChecked="{Binding DryRun}" Content="Dry Run (Preview Only)" VerticalAlignment="Center" Margin="0,2,16,2" 
                      FontWeight="SemiBold"/>
            <CheckBox IsChecked="{Binding IncludeSubDirs}" Content="Include Subdirectories" VerticalAlignment="Center" Margin="0,2,16,2" 
                      ToolTip="When checked, matches files in subdirectories of target directories. When unchecked, only matches files directly in the target directory."/>
            <Button Content="ðŸ” Scan Recent" Command="{Binding ScanAllRecentCommand}" MinWidth="110" Margin="0,2,8,2"
                    ToolTip="Scan all recent items. If target directories are specified, filters to only show items from those directories." 
                    Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>
            <Button Content="ðŸ—‘ï¸ Remove Selected" Command="{Binding RemoveSelectedCommand}" MinWidth="120" Margin="0,2,8,2"
                    Background="#FFF44336" Foreground="White" FontWeight="Bold"/>
            <Button Content="ðŸ’¥ Clear ALL Recent" Command="{Binding ClearAllRecentCommand}" MinWidth="120" Margin="0,2,8,2"
                    ToolTip="Delete all recent shortcuts, jump lists, and history. Nuclear option!" 
                    Background="#FF9C27B0" Foreground="White" FontWeight="Bold"/>
            <Button Content="ðŸ”„ Refresh Explorer" Command="{Binding RefreshExplorerCommand}" MinWidth="130" Margin="0,2,8,2"
                    ToolTip="Restart Explorer to refresh the Recent view" 
                    Background="#FF2196F3" Foreground="White" FontWeight="Bold"/>
            <Separator Margin="4,2"/>
            <Button Command="{Binding ToggleBlockerCommand}" MinWidth="140" Margin="0,2,8,2"
                    ToolTip="Start/stop real-time monitoring â€” instantly removes new Recent items from blocked directories while PlatypusTools is running"
                    Foreground="White" FontWeight="Bold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Content" Value="ðŸ›¡ï¸ Start Blocker"/>
                        <Setter Property="Background" Value="#FF009688"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBlockerActive}" Value="True">
                                <Setter Property="Content" Value="â¹ï¸ Stop Blocker"/>
                                <Setter Property="Background" Value="#FFF44336"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Separator Margin="4,2"/>
            <ComboBox ItemsSource="{Binding ScheduleFrequencyOptions}" SelectedItem="{Binding SelectedScheduleFrequency}"
                      Width="90" Margin="0,2,4,2" VerticalAlignment="Center"
                      ToolTip="Frequency for scheduled task"/>
            <Button Content="ðŸ“… Schedule (In-App)" Command="{Binding ScheduleCleanupCommand}" MinWidth="120" Margin="0,2,8,2"
                    ToolTip="Schedule cleanup within PlatypusTools (runs while app is open)" 
                    Background="#FFFF9800" Foreground="White" FontWeight="Bold"/>
            <Button Content="ðŸ–¥ï¸ Windows Task" Command="{Binding CreateWindowsTaskCommand}" MinWidth="120" Margin="0,2,4,2"
                    ToolTip="Create a Windows Scheduled Task that runs even when PlatypusTools is closed (requires admin)" 
                    Background="#FF795548" Foreground="White" FontWeight="Bold"/>
            <Button Content="âŒ Remove Task" Command="{Binding RemoveWindowsTaskCommand}" MinWidth="100" Margin="0,2,8,2"
                    ToolTip="Remove the Windows Scheduled Task"
                    Visibility="{Binding WindowsTaskExists, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </WrapPanel>
        
        <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" VerticalAlignment="Bottom" Margin="0,30,0,0" FontWeight="SemiBold"/>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch" 
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>
        
        <!-- Results List -->
        <GroupBox Header="Found Shortcuts (Select items to remove)" Grid.Row="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,4">
                    <Button Content="Select All" Command="{Binding SelectAllCommand}" MinWidth="180" Margin="0,0,8,0" Padding="4,2"/>
                    <Button Content="Select None" Command="{Binding SelectNoneCommand}" MinWidth="180" Padding="4,2"/>
                </StackPanel>
                <DataGrid x:Name="ResultsGrid" Grid.Row="1" ItemsSource="{Binding Results}" AutoGenerateColumns="False"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          CanUserResizeColumns="True" CanUserSortColumns="True"
                          SelectionMode="Extended"
                          SelectedItem="{Binding SelectedResult}"
                          ColumnHeaderHeight="32"
                          MinHeight="200"
                          ColumnWidth="*">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Select" Width="60" CanUserResize="True" MinWidth="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100" CanUserResize="True" MinWidth="80" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Shortcut Path" Binding="{Binding Path}" Width="350" CanUserResize="True" MinWidth="200" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Target" Binding="{Binding Target}" Width="*" CanUserResize="True" MinWidth="200" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
        
        <!-- Summary -->
        <StatusBar Grid.Row="5" Margin="0,8,0,0">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Found: "/><Run Text="{Binding Results.Count, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text=" shortcuts | Selected: "/><Run Text="{Binding SelectedCount, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text=" | "/><Run Text="{Binding BlockerStatusText, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text=" | "/><Run Text="{Binding WindowsTaskStatusText, Mode=OneWay}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>