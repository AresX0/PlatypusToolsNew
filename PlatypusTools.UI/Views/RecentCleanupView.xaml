<UserControl x:Class="PlatypusTools.UI.Views.RecentCleanupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PlatypusTools.UI.ViewModels"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" MinHeight="50" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" MinHeight="100" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Target Directories -->
        <GroupBox Header="Target Directories to Match Against" Grid.Row="0" Margin="0,0,0,8">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding TargetDirs, UpdateSourceTrigger=PropertyChanged}" 
                         ToolTip="Semicolon-separated directories to match shortcuts against"/>
                <Button Grid.Row="0" Grid.Column="1" Content="Browse..." Command="{Binding BrowseCommand}" Width="80" Margin="8,0,0,0"/>
                <Button Grid.Row="0" Grid.Column="2" Content="Clear" Command="{Binding ClearTargetDirsCommand}" Width="60" Margin="5,0,0,0"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="Enter directories whose shortcuts should be found and removed from Recent, Favorites, and Start Menu" 
                           Foreground="Gray" FontStyle="Italic" Margin="0,5,0,0"/>
            </Grid>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Exclusion Directories -->
        <GroupBox Header="Directories to Exclude" Grid.Row="1" Margin="0,0,0,8">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ListBox Grid.Column="0" ItemsSource="{Binding ExclusionDirs}" SelectedItem="{Binding SelectedExclusionDir}" 
                         Height="80" SelectionMode="Single"/>
                <StackPanel Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center">
                    <Button Content="Add..." Command="{Binding AddExclusionCommand}" Width="80" Margin="0,0,0,5"/>
                    <Button Content="Remove" Command="{Binding RemoveExclusionCommand}" Width="80"/>
                </StackPanel>
            </Grid>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Options and Actions -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8">
            <CheckBox IsChecked="{Binding DryRun}" Content="Dry Run (Preview Only)" VerticalAlignment="Center" Margin="0,0,16,0" 
                      FontWeight="SemiBold"/>
            <Button Content="Scan All Recent" Command="{Binding ScanAllRecentCommand}" Width="120" FontWeight="Bold" Background="LightGreen" Margin="0,0,8,0"
                    ToolTip="Scan all items in Windows Recent folder, Quick Access, etc."/>
            <Button Content="Scan Matching" Command="{Binding ScanCommand}" Width="120" FontWeight="Bold" Background="LightBlue"
                    ToolTip="Scan for shortcuts matching target directories"/>
            <Button Content="Remove Selected" Command="{Binding RemoveSelectedCommand}" Width="120" Margin="8,0,0,0" 
                    Background="LightCoral" FontWeight="Bold"/>
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="16,0,0,0" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- GridSplitter -->
        <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch" 
                      Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>
        
        <!-- Results List -->
        <GroupBox Header="Found Shortcuts (Select items to remove)" Grid.Row="4">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DataGrid x:Name="ResultsGrid" ItemsSource="{Binding Results}" AutoGenerateColumns="False"
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          CanUserResizeColumns="True" CanUserSortColumns="True"
                          SelectionMode="Extended" IsReadOnly="True"
                          SelectedItem="{Binding SelectedResult}"
                          ColumnHeaderHeight="32"
                          MinHeight="200"
                          ColumnWidth="*"
                          HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="60" CanUserResize="True" MinWidth="50"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100" CanUserResize="True" MinWidth="80"/>
                        <DataGridTextColumn Header="Shortcut Path" Binding="{Binding Path}" Width="350" CanUserResize="True" MinWidth="200"/>
                        <DataGridTextColumn Header="Target" Binding="{Binding Target}" Width="*" CanUserResize="True" MinWidth="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Summary -->
        <StatusBar Grid.Row="5" Margin="0,8,0,0">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Found: "/><Run Text="{Binding Results.Count, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text=" shortcuts | Selected: "/><Run Text="{Binding SelectedCount, Mode=OneWay}" FontWeight="Bold"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>