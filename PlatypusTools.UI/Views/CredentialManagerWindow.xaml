<Window x:Class="PlatypusTools.UI.Views.CredentialManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credential Manager" Height="600" Width="850" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ” Credential Manager" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Securely store and manage credentials for FTP, SSH, and other services" 
                               Foreground="#CCFFFFFF" Margin="0,4,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ“¥ Import" Click="Import_Click" Margin="0,0,8,0" MinWidth="80"
                            Background="#FF4CAF50" Foreground="White"/>
                    <Button Content="ðŸ“¤ Export" Click="Export_Click" MinWidth="80"
                            Background="#FF2196F3" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>
            
            <!-- Credentials List -->
            <Grid Grid.Column="0" Margin="0,0,16,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Search/Filter -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchBox" Grid.Column="0" TextChanged="SearchBox_TextChanged"/>
                    <ComboBox x:Name="TypeFilter" Grid.Column="1" Width="120" Margin="8,0,0,0"
                              SelectionChanged="TypeFilter_SelectionChanged">
                        <ComboBoxItem Content="All Types" IsSelected="True"/>
                        <ComboBoxItem Content="SSH" Tag="SSH"/>
                        <ComboBoxItem Content="FTP" Tag="FTP"/>
                        <ComboBoxItem Content="SFTP" Tag="SFTP"/>
                        <ComboBoxItem Content="Database" Tag="Database"/>
                        <ComboBoxItem Content="Generic" Tag="Generic"/>
                        <ComboBoxItem Content="Other" Tag="Other"/>
                    </ComboBox>
                </Grid>
                
                <!-- Credentials DataGrid -->
                <DataGrid x:Name="CredentialsGrid" Grid.Row="1" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionChanged="CredentialsGrid_SelectionChanged"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name/Key" Binding="{Binding Key}" Width="150"/>
                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="120"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding TypeDisplay}" Width="80"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        <DataGridTextColumn Header="Last Used" Binding="{Binding LastUsedDisplay}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            
            <!-- Add/Edit Panel -->
            <Border Grid.Column="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="8" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Credential Details" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,16"/>
                    
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Name/Key:" Margin="0,0,0,4"/>
                        <TextBox x:Name="KeyBox" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Username:" Margin="0,0,0,4"/>
                        <TextBox x:Name="UsernameBox" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Password:" Margin="0,0,0,4"/>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <PasswordBox x:Name="PasswordBox" Grid.Column="0"/>
                            <Button x:Name="ShowPasswordBtn" Grid.Column="1" MinWidth="32" Margin="4,0,0,0"
                                    Click="ShowPassword_Click" ToolTip="Show/Hide password" FontFamily="Segoe MDL2 Assets" Content="&#xE7B3;" Padding="4,2"/>
                            <Button x:Name="GeneratePasswordBtn" Grid.Column="2" MinWidth="32" Margin="4,0,0,0"
                                    Click="GeneratePassword_Click" ToolTip="Generate secure password" FontFamily="Segoe MDL2 Assets" Content="&#xE8B1;" Padding="4,2"/>
                        </Grid>
                        <TextBox x:Name="PasswordTextBox" Visibility="Collapsed" Margin="0,0,0,8"/>
                        <StackPanel x:Name="PasswordOptionsPanel" Orientation="Horizontal" Margin="0,0,0,4" Visibility="Collapsed">
                            <TextBlock Text="Length:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBox x:Name="PasswordLengthBox" Text="16" Width="40" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <CheckBox x:Name="IncludeUppercase" Content="A-Z" IsChecked="True" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <CheckBox x:Name="IncludeLowercase" Content="a-z" IsChecked="True" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <CheckBox x:Name="IncludeNumbers" Content="0-9" IsChecked="True" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <CheckBox x:Name="IncludeSymbols" Content="!@#" IsChecked="True" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Text="Description:" Margin="0,0,0,4"/>
                        <TextBox x:Name="DescriptionBox" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Type:" Margin="0,0,0,4"/>
                        <ComboBox x:Name="TypeCombo" Margin="0,0,0,16">
                            <ComboBoxItem Content="Generic" Tag="Generic" IsSelected="True"/>
                            <ComboBoxItem Content="SSH" Tag="SSH"/>
                            <ComboBoxItem Content="FTP" Tag="FTP"/>
                            <ComboBoxItem Content="SFTP" Tag="SFTP"/>
                            <ComboBoxItem Content="Database" Tag="Database"/>
                            <ComboBoxItem Content="Remote Desktop" Tag="RemoteDesktop"/>
                            <ComboBoxItem Content="Web Service" Tag="WebService"/>
                            <ComboBoxItem Content="Email" Tag="Email"/>
                            <ComboBoxItem Content="Other" Tag="Other"/>
                        </ComboBox>
                        
                        <Border Background="{DynamicResource InfoBackgroundBrush}" 
                                BorderBrush="{DynamicResource InfoBorderBrush}"
                                BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,0,0,16">
                            <TextBlock TextWrapping="Wrap" FontSize="11" Opacity="0.8">
                                Credentials are encrypted using Windows DPAPI and can only be accessed by the current user.
                            </TextBlock>
                        </Border>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" x:Name="SaveBtn" Content="ðŸ’¾ Save" Click="Save_Click" 
                                    Margin="0,0,4,0" Background="#FF4CAF50" Foreground="White"/>
                            <Button Grid.Column="1" x:Name="DeleteBtn" Content="ðŸ—‘ï¸ Delete" Click="Delete_Click"
                                    Margin="4,0,0,0" Background="#FFF44336" Foreground="White"/>
                        </Grid>
                        <Button Content="âœ¨ New Credential" Click="New_Click" Margin="0,8,0,0"/>
                        <Button Content="ðŸ“‹ Copy Password" Click="CopyPassword_Click" Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" x:Name="StatusText" VerticalAlignment="Center" Opacity="0.7"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Open Windows Credential Manager" Click="OpenWindowsCredentialManager" 
                            Margin="0,0,16,0"/>
                    <Button Content="Close" Width="100" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>