<Window x:Class="PlatypusTools.UI.Views.CredentialManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credential Manager" Height="450" Width="650" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="16">
            <StackPanel>
                <TextBlock Text="ðŸ” Credential Manager" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Securely store and manage credentials for FTP, SSH, and other services" 
                           Foreground="#CCFFFFFF" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1" Margin="16">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ”’" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="Credential Manager Coming Soon" FontSize="18" FontWeight="SemiBold" 
                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" MaxWidth="400" Opacity="0.8">
                    A secure credential storage system is planned for a future release.
                    For now, you can use these alternatives:
                </TextBlock>
                
                <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="8" 
                        Margin="0,20,0,0" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Current Options:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="â€¢ Windows Credential Manager (run: control /name Microsoft.CredentialManager)" Margin="0,4"/>
                        <TextBlock Text="â€¢ FTP Client tab has built-in credential storage" Margin="0,4"/>
                        <TextBlock Text="â€¢ Hider tab can securely hide sensitive files" Margin="0,4"/>
                    </StackPanel>
                </Border>
                
                <Button Content="Open Windows Credential Manager" Margin="0,20,0,0" 
                        Padding="16,8" Click="OpenWindowsCredentialManager"/>
            </StackPanel>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="16,12">
            <Button Content="Close" Width="100" HorizontalAlignment="Right" Click="Close_Click"/>
        </Border>
    </Grid>
</Window>