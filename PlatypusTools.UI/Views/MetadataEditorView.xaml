<UserControl x:Class="PlatypusTools.UI.Views.MetadataEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:PlatypusTools.UI.ViewModels"
             xmlns:converters="clr-namespace:PlatypusTools.UI.Converters">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:FavoriteIconConverter x:Key="FavoriteIconConverter" />
    </UserControl.Resources>
    <Grid Margin="10">
        <TabControl>
            <!-- Single File Tab -->
            <TabItem Header="üìÑ Single File">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto" MinHeight="80"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*" MinHeight="100"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- File Selection -->
                    <GroupBox Header="File" Grid.Row="0" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding FilePath}" IsReadOnly="True" Width="600" HorizontalAlignment="Left"/>
                            <Button Grid.Row="0" Grid.Column="1" Content="Browse..." Command="{Binding BrowseFileCommand}" Width="80" Margin="5,0,0,0"/>
                            <Button Grid.Row="0" Grid.Column="2" Content="Load" Command="{Binding LoadMetadataCommand}" Width="80" Margin="5,0,0,0" FontWeight="Bold"/>
                            
                            <!-- ExifTool warning panel -->
                            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Background="Orange" Padding="10" Margin="0,10,0,0"
                                    Visibility="{Binding IsExifToolMissing, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock TextWrapping="Wrap" FontWeight="Bold" Foreground="White" Margin="0,0,0,5">
                                        ‚ö†Ô∏è ExifTool is not installed. This feature requires ExifTool to read and write metadata.
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock TextWrapping="Wrap" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0">
                                            Download from: https://exiftool.org/
                                        </TextBlock>
                                        <Button Content="Open ExifTool Website" Command="{Binding OpenExifToolWebsiteCommand}" 
                                                Background="White" Padding="10,5" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </GroupBox>

                    <!-- Common Tags - Dynamic based on file type -->
                    <GroupBox Grid.Row="1" Margin="0,0,0,10">
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Common Tags" FontWeight="Bold"/>
                                <TextBlock Text="{Binding FileTypeDisplay}" Margin="10,0,0,0" Foreground="Gray" FontStyle="Italic"/>
                            </StackPanel>
                        </GroupBox.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Universal Tags (always visible) -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Owner:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Owner, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Title:" VerticalAlignment="Center" Margin="10,0,10,5"/>
                            <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Comment:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>

                            <!-- Video Tags -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Series:" VerticalAlignment="Center" Margin="0,0,10,5"
                                       Visibility="{Binding IsVideoFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Series, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"
                                     Visibility="{Binding IsVideoFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="Episode:" VerticalAlignment="Center" Margin="10,0,10,5"
                                       Visibility="{Binding IsVideoFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding Episode, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"
                                     Visibility="{Binding IsVideoFile, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Movie Name:" VerticalAlignment="Center" Margin="0,0,10,5"
                                       Visibility="{Binding IsVideoFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding MovieName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"
                                     Visibility="{Binding IsVideoFile, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <!-- Picture Tags -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Artist:" VerticalAlignment="Center" Margin="0,0,10,5"
                                       Visibility="{Binding IsPictureFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Artist, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"
                                     Visibility="{Binding IsPictureFile, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <TextBlock Grid.Row="2" Grid.Column="2" Text="Copyright:" VerticalAlignment="Center" Margin="10,0,10,5"
                                       Visibility="{Binding IsPictureFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding Copyright, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"
                                     Visibility="{Binding IsPictureFile, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <!-- Audio Tags -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Artist:" VerticalAlignment="Center" Margin="0,0,10,5"
                                       Visibility="{Binding IsAudioFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Artist, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"
                                     Visibility="{Binding IsAudioFile, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <TextBlock Grid.Row="2" Grid.Column="2" Text="Album:" VerticalAlignment="Center" Margin="10,0,10,5"
                                       Visibility="{Binding IsAudioFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding Album, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"
                                     Visibility="{Binding IsAudioFile, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <!-- Text Tags -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Version:" VerticalAlignment="Center" Margin="0,0,10,5"
                                       Visibility="{Binding IsTextFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Version, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"
                                     Visibility="{Binding IsTextFile, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <TextBlock Grid.Row="2" Grid.Column="2" Text="Author:" VerticalAlignment="Center" Margin="10,0,10,5"
                                       Visibility="{Binding IsTextFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"
                                     Visibility="{Binding IsTextFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>
                    </GroupBox>

                    <!-- GridSplitter -->
                    <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" 
                                  Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>

                    <!-- All Tags -->
                    <GroupBox Header="All Metadata Tags" Grid.Row="3" Margin="0,0,0,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                                <Button Content="Add Tag" Command="{Binding AddTagCommand}" Width="80" Margin="0,0,5,0"/>
                                <Button Content="Remove Selected" Command="{Binding RemoveTagCommand}" 
                                        CommandParameter="{Binding SelectedItem, ElementName=MetadataGrid}" Width="120"/>
                            </StackPanel>

                            <DataGrid Grid.Row="1" x:Name="MetadataGrid" ItemsSource="{Binding Metadata}" AutoGenerateColumns="False" 
                                      CanUserAddRows="False" SelectionMode="Single"
                                      CanUserResizeColumns="True" CanUserSortColumns="True"
                                      ColumnHeaderHeight="32"
                                      HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Tag Name" Binding="{Binding Key}" Width="200" CanUserResize="True" MinWidth="100"/>
                                    <DataGridTextColumn Header="Value" Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Width="*" CanUserResize="True" MinWidth="150"/>
                                    <DataGridCheckBoxColumn Header="Modified" Binding="{Binding IsModified, Mode=OneWay}" Width="80" IsReadOnly="True" CanUserResize="True" MinWidth="70"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>

                    <!-- Actions -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ProgressBar Grid.Column="1" IsIndeterminate="True" Height="20" 
                                     Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Button Grid.Column="2" Content="üíæ Save Changes" Command="{Binding SaveMetadataCommand}" Width="135" Height="32" 
                                Margin="0,0,5,0" Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>
                        <Button Grid.Column="3" Content="üßπ Clear All" Command="{Binding ClearAllCommand}" Width="100" Height="32" 
                                Background="#FFF44336" Foreground="White"/>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Folder Analysis Tab -->
            <TabItem Header="üìÅ Folder Analysis">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto" MinHeight="60"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*" MinHeight="100"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Folder Selection -->
                    <GroupBox Header="Folder" Grid.Row="0" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" Text="{Binding FolderPath}" IsReadOnly="True"/>
                            <Button Grid.Column="1" Content="Browse..." Command="{Binding BrowseFolderCommand}" Width="80" Margin="5,0,0,0"/>
                            <Button Grid.Column="2" Content="Scan Folder" Command="{Binding ScanFolderCommand}" Width="100" Margin="5,0,0,0" FontWeight="Bold" Background="LightBlue"/>
                        </Grid>
                    </GroupBox>

                    <!-- Options -->
                    <GroupBox Header="Options" Grid.Row="1" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <CheckBox Content="Include subfolders" IsChecked="{Binding IncludeSubfolders}" Margin="0,0,20,0"/>
                            <TextBlock Text="File filter:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox SelectedIndex="{Binding SelectedFileFilterIndex}" Width="180">
                                <ComboBoxItem Content="All Files"/>
                                <ComboBoxItem Content="Images (*.jpg, *.png, *.gif)"/>
                                <ComboBoxItem Content="Videos (*.mp4, *.mkv, *.avi)"/>
                                <ComboBoxItem Content="Audio (*.mp3, *.flac, *.wav)"/>
                                <ComboBoxItem Content="Documents (*.pdf, *.docx)"/>
                            </ComboBox>
                        </StackPanel>
                    </GroupBox>

                    <!-- GridSplitter -->
                    <GridSplitter Grid.Row="2" Height="5" HorizontalAlignment="Stretch" 
                                  Background="#CCCCCC" Cursor="SizeNS" ResizeDirection="Rows"/>

                    <!-- Files with Metadata -->
                    <GroupBox Header="Files and Metadata" Grid.Row="3" Margin="0,0,0,10">
                        <DataGrid x:Name="FolderFilesGrid" ItemsSource="{Binding FolderFiles}" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" SelectionMode="Single"
                                  CanUserResizeColumns="True" CanUserSortColumns="True"
                                  SelectedItem="{Binding SelectedFolderFile}"
                                  ColumnHeaderHeight="32"
                                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="200" CanUserResize="True" MinWidth="100"/>
                                <DataGridTextColumn Header="Extension" Binding="{Binding Extension}" Width="80" CanUserResize="True" MinWidth="50"/>
                                <DataGridTextColumn Header="Size" Binding="{Binding FileSizeFormatted}" Width="100" CanUserResize="True" MinWidth="70"/>
                                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="150" CanUserResize="True" MinWidth="100"/>
                                <DataGridTextColumn Header="Artist" Binding="{Binding Artist}" Width="150" CanUserResize="True" MinWidth="100"/>
                                <DataGridTextColumn Header="Album" Binding="{Binding Album}" Width="150" CanUserResize="True" MinWidth="100"/>
                                <DataGridTextColumn Header="Date Created" Binding="{Binding DateCreated, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="130" CanUserResize="True" MinWidth="100"/>
                                <DataGridTextColumn Header="Date Modified" Binding="{Binding DateModified, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="130" CanUserResize="True" MinWidth="100"/>
                                <DataGridTextColumn Header="Tags Count" Binding="{Binding TagCount}" Width="80" CanUserResize="True" MinWidth="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <!-- Actions -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{Binding FolderStatusMessage}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ProgressBar Grid.Column="1" IsIndeterminate="True" Height="20" 
                                     Visibility="{Binding IsFolderScanning, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Button Grid.Column="2" Content="üìä Export to CSV" Command="{Binding ExportToCsvCommand}" Width="135" Height="32" 
                                Margin="0,0,5,0" Background="#FF4CAF50" Foreground="White" FontWeight="Bold"/>
                        <Button Grid.Column="3" Content="üìÇ Open Selected" Command="{Binding OpenSelectedFileCommand}" Width="120" Height="32"
                                Background="#FF2196F3" Foreground="White"/>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- Templates Tab -->
            <TabItem Header="üìã Templates" DataContext="{Binding TemplateViewModel}">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Templates List -->
                    <Grid Grid.Column="0" Margin="0,0,10,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Template Actions -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="‚ûï New" Command="{Binding CreateTemplateCommand}" Width="75" Margin="0,0,5,0" Padding="6,2"/>
                            <Button Content="üì• Import" Command="{Binding ImportTemplateCommand}" Width="85" Margin="0,0,5,0" Padding="6,2"/>
                            <Button Content="üì§ Export" Command="{Binding ExportTemplateCommand}" Width="85" Padding="6,2"/>
                        </StackPanel>
                        
                        <!-- Templates List -->
                        <ListBox Grid.Row="1" ItemsSource="{Binding Templates}" SelectedItem="{Binding SelectedTemplate}"
                                 BorderThickness="1" BorderBrush="#CCC">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Favorite Star -->
                                        <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding IsFavorite, Converter={StaticResource FavoriteIconConverter}}"
                                                   VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Gold" FontSize="14"/>
                                        
                                        <!-- Template Name -->
                                        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Name}" FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"/>
                                        
                                        <!-- Built-in Badge -->
                                        <Border Grid.Column="2" Grid.Row="0" Background="LightBlue" CornerRadius="3" Padding="4,2"
                                                Visibility="{Binding IsBuiltIn, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="Built-in" FontSize="10" Foreground="#333"/>
                                        </Border>
                                        
                                        <!-- Category & Tag Count -->
                                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Orientation="Horizontal">
                                            <TextBlock Text="{Binding Category}" Foreground="Gray" FontSize="11"/>
                                            <TextBlock Text=" ‚Ä¢ " Foreground="Gray" FontSize="11"/>
                                            <TextBlock Text="{Binding Tags.Count, StringFormat='{}{0} tags'}" Foreground="Gray" FontSize="11"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                        <!-- Selected Template Actions -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="‚úèÔ∏è Edit" Command="{Binding EditTemplateCommand}" Width="75" Margin="0,0,5,0" Padding="6,2"/>
                            <Button Content="üìã Copy" Command="{Binding DuplicateTemplateCommand}" Width="80" Margin="0,0,5,0" Padding="6,2"/>
                            <Button Content="üóëÔ∏è Delete" Command="{Binding DeleteTemplateCommand}" Width="85" Padding="6,2" Background="#FFF44336" Foreground="White"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Template Details & Apply -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Template Details -->
                        <GroupBox Grid.Row="0" Header="Template Details" Margin="0,0,0,10">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedTemplate.Name}" FontWeight="SemiBold"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Category:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedTemplate.Category}" Margin="0,5,0,0"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Description:" VerticalAlignment="Top" Margin="0,5,0,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedTemplate.Description}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Template Tags Preview -->
                        <GroupBox Grid.Row="1" Header="Tags in Template" Margin="0,0,0,10" MaxHeight="150">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding SelectedTemplate.Tags}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Key}" FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Value}" TextTrimming="CharacterEllipsis" Foreground="Gray"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </GroupBox>
                        
                        <!-- Files to Apply To -->
                        <GroupBox Grid.Row="2" Header="Files to Apply Template" Margin="0,0,0,10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                                    <Button Content="‚ûï Add Files" Command="{Binding AddFilesCommand}" Width="95" Margin="0,0,5,0" Padding="6,2"/>
                                    <Button Content="üìÅ Add Folder" Command="{Binding AddFolderCommand}" Width="110" Margin="0,0,5,0" Padding="6,2"/>
                                    <Button Content="‚ùå Clear" Command="{Binding ClearFilesCommand}" Width="80" Padding="6,2"/>
                                </StackPanel>
                                
                                <ListBox Grid.Row="1" ItemsSource="{Binding SelectedFiles}" BorderThickness="1" BorderBrush="#CCC"/>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Apply Options -->
                        <GroupBox Grid.Row="3" Header="Apply Options" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <CheckBox Content="Create backup before modifying" IsChecked="{Binding ApplyOptions.CreateBackup}" Margin="0,0,0,5"/>
                                <CheckBox Content="Overwrite existing values" IsChecked="{Binding ApplyOptions.OverwriteExisting}" Margin="0,0,0,5"/>
                                <CheckBox Content="Skip files on error (continue with others)" IsChecked="{Binding ApplyOptions.SkipOnError}"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Apply Actions -->
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ProgressBar Grid.Column="0" Value="{Binding Progress}" Maximum="100" Height="20" Margin="0,0,10,0"
                                         Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Button Grid.Column="1" Content="üëÅÔ∏è Preview" Command="{Binding PreviewChangesCommand}" 
                                    Width="90" Height="32" Margin="0,0,5,0"/>
                            <Button Grid.Column="2" Content="üöÄ Apply Template" Command="{Binding ApplyTemplateCommand}" 
                                    Width="130" Height="32" Background="#FF4CAF50" Foreground="White" FontWeight="Bold" Margin="0,0,5,0"/>
                            <Button Grid.Column="3" Content="‚ùå Cancel" Command="{Binding CancelOperationCommand}" 
                                    Width="80" Height="32" Background="#FFF44336" Foreground="White"
                                    Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>
                        
                        <!-- Preview Panel -->
                        <GroupBox Grid.Row="5" Header="Preview Changes" Margin="0,10,0,0" MaxHeight="200"
                                  Visibility="{Binding ShowPreview, Converter={StaticResource BoolToVisibilityConverter}}">
                            <DataGrid ItemsSource="{Binding PreviewItems}" AutoGenerateColumns="False" 
                                      CanUserAddRows="False" IsReadOnly="True"
                                      CanUserResizeColumns="True" CanUserSortColumns="True"
                                      HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="File" Binding="{Binding FileName}" Width="150"/>
                                    <DataGridTextColumn Header="Tag" Binding="{Binding TagName}" Width="120"/>
                                    <DataGridTextColumn Header="Current" Binding="{Binding CurrentValue}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Gray"/>
                                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="New" Binding="{Binding NewValue}" Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Green"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Type" Binding="{Binding ChangeType}" Width="60"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>
            
            <!-- Batch Copy Tab -->
            <TabItem Header="üìù Batch Copy" DataContext="{Binding TemplateViewModel}">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Panel: Source File and Tags -->
                    <Grid Grid.Column="0" Margin="0,0,10,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Source File Selection -->
                        <GroupBox Grid.Row="0" Header="Source File" Margin="0,0,0,10">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding SourceFile}" IsReadOnly="True"
                                         ToolTip="{Binding SourceFile}"/>
                                <Button Grid.Row="0" Grid.Column="1" Content="Browse..." 
                                        Command="{Binding SelectSourceFileCommand}" Width="80" Margin="5,0,0,0"/>
                                
                                <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Margin="0,5,0,0" Foreground="Gray" FontSize="11"
                                           Text="Select a file to copy metadata from. Tags will be loaded automatically."/>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Tag Selection Actions -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                            <Button Content="‚úì Select All" Command="{Binding SelectAllTagsCommand}" Width="90" Margin="0,0,5,0"/>
                            <Button Content="‚úó Deselect All" Command="{Binding DeselectAllTagsCommand}" Width="100" Margin="0,0,5,0"/>
                            <Button Content="‚Üª Reload" Command="{Binding LoadSourceTagsCommand}" Width="70"/>
                        </StackPanel>
                        
                        <!-- Tags List with Checkboxes -->
                        <GroupBox Grid.Row="2" Header="Tags to Copy">
                            <DataGrid ItemsSource="{Binding SourceTags}" AutoGenerateColumns="False" 
                                      CanUserAddRows="False" CanUserDeleteRows="False"
                                      CanUserResizeColumns="True" CanUserSortColumns="True"
                                      HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn Header="‚úì" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" 
                                                            Width="40" CanUserResize="False"/>
                                    <DataGridTextColumn Header="Tag Name" Binding="{Binding TagName}" Width="120" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*" IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                <Setter Property="ToolTip" Value="{Binding Value}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </Grid>
                    
                    <!-- Right Panel: Target Files and Actions -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Target Files -->
                        <GroupBox Grid.Row="0" Header="Target Files">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                                    <Button Content="‚ûï Add Files" Command="{Binding AddFilesCommand}" Width="95" Margin="0,0,5,0" Padding="6,2"/>
                                    <Button Content="üìÅ Add Folder" Command="{Binding AddFolderCommand}" Width="110" Margin="0,0,5,0" Padding="6,2"/>
                                    <Button Content="‚ùå Clear" Command="{Binding ClearFilesCommand}" Width="80" Padding="6,2"/>
                                </StackPanel>
                                
                                <ListBox Grid.Row="1" ItemsSource="{Binding SelectedFiles}" BorderThickness="1" BorderBrush="#CCC">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextTrimming="CharacterEllipsis" ToolTip="{Binding}"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </GroupBox>
                        
                        <!-- Copy Options -->
                        <GroupBox Grid.Row="1" Header="Options" Margin="0,10,0,10">
                            <StackPanel Margin="5">
                                <CheckBox Content="Create backup before modifying" IsChecked="{Binding ApplyOptions.CreateBackup}" Margin="0,0,0,5"/>
                                <CheckBox Content="Skip files on error (continue with others)" IsChecked="{Binding ApplyOptions.SkipOnError}"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Copy Actions -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding StatusMessage}" Margin="0,0,10,0"/>
                                <ProgressBar Value="{Binding Progress}" Maximum="100" Width="150" Height="20"
                                             Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                            
                            <Button Grid.Column="1" Content="üìã Copy Selected Tags" Command="{Binding CopyMetadataCommand}" 
                                    Width="165" Height="32" Background="#FF4CAF50" Foreground="White" FontWeight="Bold" Margin="0,0,5,0"/>
                            <Button Grid.Column="2" Content="‚ùå Cancel" Command="{Binding CancelOperationCommand}" 
                                    Width="90" Height="32" Background="#FFF44336" Foreground="White"
                                    Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
