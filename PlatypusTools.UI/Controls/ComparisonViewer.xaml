<UserControl x:Class="PlatypusTools.UI.Controls.ComparisonViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
    
    <UserControl.Resources>
        <Style x:Key="ModeButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border" 
                                Background="{DynamicResource ControlBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                Padding="8,4"
                                Cursor="Hand">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Mode Selector -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
            <RadioButton x:Name="SliderMode" Content="Slider" Style="{StaticResource ModeButtonStyle}" 
                         IsChecked="True" GroupName="CompareMode"/>
            <RadioButton x:Name="SideBySideMode" Content="Side by Side" Style="{StaticResource ModeButtonStyle}"
                         GroupName="CompareMode" Margin="4,0,0,0"/>
            <RadioButton x:Name="OverlayMode" Content="Overlay" Style="{StaticResource ModeButtonStyle}"
                         GroupName="CompareMode" Margin="4,0,0,0"/>
        </StackPanel>
        
        <!-- Zoom Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
            <Button x:Name="ZoomOutBtn" Content="−" Width="28" Height="28" FontSize="16" FontWeight="Bold"
                    ToolTip="Zoom Out" Click="ZoomOut_Click"/>
            <TextBlock x:Name="ZoomLevelText" Text="{Binding ZoomLevel, ElementName=Root, StringFormat={}{0:P0}}" 
                       VerticalAlignment="Center" Margin="8,0" MinWidth="50" TextAlignment="Center"/>
            <Button x:Name="ZoomInBtn" Content="+" Width="28" Height="28" FontSize="16" FontWeight="Bold"
                    ToolTip="Zoom In" Click="ZoomIn_Click"/>
            <Button x:Name="ZoomResetBtn" Content="↺" Width="28" Height="28" FontSize="14" Margin="8,0,0,0"
                    ToolTip="Reset Zoom (100%)" Click="ZoomReset_Click"/>
            <Button x:Name="ZoomFitBtn" Content="⊡" Width="28" Height="28" FontSize="14" Margin="4,0,0,0"
                    ToolTip="Fit to View" Click="ZoomFit_Click"/>
            <CheckBox x:Name="SyncPanCheckBox" Content="Sync Pan" IsChecked="{Binding SyncPanEnabled, ElementName=Root, Mode=TwoWay}"
                      VerticalAlignment="Center" Margin="12,0,0,0" ToolTip="Synchronize pan position between images"/>
        </StackPanel>
        
        <!-- Comparison Area -->
        <Grid Grid.Row="2" ClipToBounds="True"
              MouseWheel="ComparisonArea_MouseWheel">
            
            <!-- Slider Mode -->
            <Grid x:Name="SliderContainer" 
                  Visibility="{Binding ElementName=SliderMode, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                
                <!-- Scrollable/Zoomable container -->
                <ScrollViewer x:Name="SliderScrollViewer" 
                              HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                              ScrollChanged="SyncScrollViewer_ScrollChanged">
                    <Grid>
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="SliderZoomTransform" ScaleX="1" ScaleY="1"/>
                        </Grid.RenderTransform>
                        
                        <!-- Right Image (After) - Full -->
                        <Image x:Name="RightImageSlider" 
                               Source="{Binding RightImage, ElementName=Root}"
                               Stretch="None"/>
                        
                        <!-- Left Image (Before) - Clipped -->
                        <Image x:Name="LeftImageSlider" 
                               Source="{Binding LeftImage, ElementName=Root}"
                               Stretch="None">
                            <Image.Clip>
                                <RectangleGeometry x:Name="LeftClip"/>
                            </Image.Clip>
                        </Image>
                    </Grid>
                </ScrollViewer>
                
                <!-- Slider Handle -->
                <Canvas>
                    <Thumb x:Name="SliderThumb" 
                           Canvas.Left="0"
                           Width="4" 
                           Background="{DynamicResource AccentBrush}"
                           Cursor="SizeWE"
                           DragDelta="SliderThumb_DragDelta">
                        <Thumb.Template>
                            <ControlTemplate TargetType="Thumb">
                                <Grid>
                                    <Rectangle Fill="{DynamicResource AccentBrush}" Width="4"/>
                                    <Ellipse Fill="{DynamicResource AccentBrush}" 
                                             Width="20" Height="20" 
                                             VerticalAlignment="Center"
                                             Margin="-8,0"/>
                                </Grid>
                            </ControlTemplate>
                        </Thumb.Template>
                    </Thumb>
                </Canvas>
                
                <!-- Labels -->
                <TextBlock Text="Before" Foreground="White" FontWeight="Bold"
                           Background="#80000000" Padding="8,4"
                           HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8"/>
                <TextBlock Text="After" Foreground="White" FontWeight="Bold"
                           Background="#80000000" Padding="8,4"
                           HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8"/>
            </Grid>
            
            <!-- Side by Side Mode -->
            <Grid x:Name="SideBySideContainer"
                  Visibility="{Binding ElementName=SideBySideMode, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left (Before) -->
                <Grid Grid.Column="0">
                    <ScrollViewer x:Name="LeftScrollViewer"
                                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                                  ScrollChanged="SyncScrollViewer_ScrollChanged">
                        <Image x:Name="LeftImageSideBySide" 
                               Source="{Binding LeftImage, ElementName=Root}" Stretch="None">
                            <Image.RenderTransform>
                                <ScaleTransform x:Name="LeftZoomTransform" ScaleX="1" ScaleY="1"/>
                            </Image.RenderTransform>
                        </Image>
                    </ScrollViewer>
                    <TextBlock Text="Before" Foreground="White" FontWeight="Bold"
                               Background="#80000000" Padding="8,4"
                               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8"/>
                </Grid>
                
                <!-- Divider -->
                <Rectangle Grid.Column="1" Fill="{DynamicResource BorderBrush}"/>
                
                <!-- Right (After) -->
                <Grid Grid.Column="2">
                    <ScrollViewer x:Name="RightScrollViewer"
                                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                                  ScrollChanged="SyncScrollViewer_ScrollChanged">
                        <Image x:Name="RightImageSideBySide"
                               Source="{Binding RightImage, ElementName=Root}" Stretch="None">
                            <Image.RenderTransform>
                                <ScaleTransform x:Name="RightZoomTransform" ScaleX="1" ScaleY="1"/>
                            </Image.RenderTransform>
                        </Image>
                    </ScrollViewer>
                    <TextBlock Text="After" Foreground="White" FontWeight="Bold"
                               Background="#80000000" Padding="8,4"
                               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8"/>
                </Grid>
            </Grid>
            
            <!-- Overlay Mode -->
            <Grid x:Name="OverlayContainer"
                  Visibility="{Binding ElementName=OverlayMode, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                
                <ScrollViewer x:Name="OverlayScrollViewer"
                              HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="OverlayZoomTransform" ScaleX="1" ScaleY="1"/>
                        </Grid.RenderTransform>
                        
                        <!-- Before Image -->
                        <Image x:Name="OverlayLeftImage"
                               Source="{Binding LeftImage, ElementName=Root}" 
                               Stretch="None"/>
                        
                        <!-- After Image with Opacity -->
                        <Image x:Name="OverlayRightImage"
                               Source="{Binding RightImage, ElementName=Root}" 
                               Stretch="None"
                               Opacity="{Binding OverlayOpacity, ElementName=Root}"/>
                    </Grid>
                </ScrollViewer>
                
                <!-- Current Label -->
                <TextBlock x:Name="OverlayLabel" 
                           Text="{Binding OverlayOpacity, ElementName=Root, StringFormat=After: {0:P0}}" 
                           Foreground="White" FontWeight="Bold"
                           Background="#80000000" Padding="8,4"
                           HorizontalAlignment="Center" VerticalAlignment="Top" Margin="8"/>
                
                <!-- Opacity Slider -->
                <Slider x:Name="OpacitySlider"
                        Minimum="0" Maximum="1" 
                        Value="{Binding OverlayOpacity, ElementName=Root, Mode=TwoWay}"
                        HorizontalAlignment="Center" VerticalAlignment="Bottom"
                        Width="200" Margin="0,0,0,20"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
