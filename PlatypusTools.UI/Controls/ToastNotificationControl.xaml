<UserControl x:Class="PlatypusTools.UI.Controls.ToastNotificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             VerticalAlignment="Bottom"
             HorizontalAlignment="Right"
             Margin="20">
    
    <ItemsControl ItemsSource="{Binding Notifications}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Vertical" VerticalAlignment="Bottom"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Border x:Name="ToastBorder" 
                        Background="{Binding BackgroundColor}" 
                        CornerRadius="6" 
                        Margin="0,0,0,8" 
                        MinWidth="300" 
                        MaxWidth="400"
                        Padding="12"
                        Effect="{DynamicResource DropShadowMedium}">
                    <Border.RenderTransform>
                        <TranslateTransform x:Name="SlideTransform" X="400"/>
                    </Border.RenderTransform>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="SlideTransform"
                                                     Storyboard.TargetProperty="X"
                                                     From="400" To="0"
                                                     Duration="0:0:0.3">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <TextBlock Grid.Column="0" 
                                   Text="{Binding Icon}" 
                                   FontSize="20" 
                                   Foreground="White" 
                                   VerticalAlignment="Top"
                                   Margin="0,0,12,0"/>
                        
                        <!-- Content -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding Title}" 
                                       FontWeight="SemiBold" 
                                       Foreground="White" 
                                       FontSize="14"/>
                            <TextBlock Text="{Binding Message}" 
                                       Foreground="#EEFFFFFF" 
                                       TextWrapping="Wrap" 
                                       Margin="0,4,0,0"/>
                            
                            <!-- Action Button -->
                            <Button Content="{Binding ActionText}"
                                    Visibility="{Binding ActionText, Converter={StaticResource NullToVisibilityConverter}}"
                                    Margin="0,8,0,0"
                                    Padding="12,6"
                                    Background="#33FFFFFF"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    Cursor="Hand"
                                    Click="ActionButton_Click"/>
                        </StackPanel>
                        
                        <!-- Close Button -->
                        <Button Grid.Column="2" 
                                Content="âœ•" 
                                VerticalAlignment="Top"
                                Background="Transparent"
                                Foreground="#CCFFFFFF"
                                BorderBrush="Transparent"
                                FontSize="14"
                                Cursor="Hand"
                                Padding="4"
                                Click="CloseButton_Click"/>
                    </Grid>
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
