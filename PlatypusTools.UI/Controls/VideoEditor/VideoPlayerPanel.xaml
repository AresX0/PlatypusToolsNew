<UserControl x:Class="PlatypusTools.UI.Controls.VideoEditor.VideoPlayerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PlatypusTools.UI.Controls.VideoEditor"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Background="#1E1E1E">
    
    <UserControl.Resources>
        <SolidColorBrush x:Key="PlayerBg" Color="#000000"/>
        <SolidColorBrush x:Key="ControlsBg" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="ButtonColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ButtonHover" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4488FF"/>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextColorDim" Color="#AAAAAA"/>
        
        <Style x:Key="TransportButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ButtonColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444444"/>
                                <Setter Property="Foreground" Value="{StaticResource ButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Video display area -->
        <Border Grid.Row="0" Background="{StaticResource PlayerBg}" 
                CornerRadius="4" Margin="4">
            <Grid>
                <!-- MediaElement for video playback -->
                <MediaElement x:Name="VideoPlayer"
                              LoadedBehavior="Manual"
                              UnloadedBehavior="Stop"
                              ScrubbingEnabled="True"
                              MediaOpened="VideoPlayer_MediaOpened"
                              MediaEnded="VideoPlayer_MediaEnded"
                              MediaFailed="VideoPlayer_MediaFailed"/>
                
                <!-- Overlay for when no video loaded -->
                <Border x:Name="NoVideoOverlay" Background="#1A1A1A">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“¹" FontSize="48" 
                                   Foreground="#444444" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="No media loaded" 
                                   Foreground="#666666" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="Drag and drop a video file or select from playlist" 
                                   Foreground="#555555" 
                                   FontSize="11" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Timecode overlay -->
                <Border Background="#88000000" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top"
                        CornerRadius="0,0,4,0"
                        Padding="6,2">
                    <TextBlock x:Name="TimecodeDisplay" 
                               Text="00:00:00.00" 
                               Foreground="White" 
                               FontFamily="Consolas" 
                               FontSize="12"/>
                </Border>
            </Grid>
        </Border>
        
        <!-- Scrub bar -->
        <local:ScrubBar x:Name="PlayerScrubBar" 
                        Grid.Row="1" 
                        Height="32" 
                        Margin="4,0"
                        Seeked="PlayerScrubBar_Seeked"/>
        
        <!-- Transport controls (like Shotcut) -->
        <Border Grid.Row="2" Background="{StaticResource ControlsBg}" 
                Padding="8,4" Margin="4,4,4,4" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left side: Position display -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="PositionText" 
                               Text="00:00:00.00" 
                               Foreground="{StaticResource ButtonColor}"
                               FontFamily="Consolas" 
                               FontSize="12"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="/" 
                               Foreground="#666666" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="DurationText" 
                               Text="00:00:00.00" 
                               Foreground="#888888"
                               FontFamily="Consolas" 
                               FontSize="12"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </StackPanel>
                
                <!-- Center: Transport buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <!-- Skip to start -->
                    <Button Style="{StaticResource TransportButton}" 
                            ToolTip="Skip to Start (Home)"
                            Click="SkipToStart_Click">
                        <TextBlock Text="â®" FontSize="14" Foreground="White"/>
                    </Button>
                    
                    <!-- Previous frame -->
                    <Button Style="{StaticResource TransportButton}" 
                            ToolTip="Previous Frame (â†)"
                            Click="PreviousFrame_Click">
                        <TextBlock Text="âª" FontSize="14" Foreground="White"/>
                    </Button>
                    
                    <!-- Rewind -->
                    <Button Style="{StaticResource TransportButton}" 
                            ToolTip="Rewind (J)"
                            Click="Rewind_Click">
                        <TextBlock Text="â—€â—€" FontSize="12" Foreground="White"/>
                    </Button>
                    
                    <!-- Play/Pause -->
                    <Button x:Name="PlayPauseButton" 
                            Style="{StaticResource TransportButton}" 
                            Width="44" Height="44"
                            ToolTip="Play/Pause (Space)"
                            Click="PlayPause_Click">
                        <TextBlock x:Name="PlayPauseIcon" Text="â–¶" FontSize="20" Foreground="White"/>
                    </Button>
                    
                    <!-- Fast Forward -->
                    <Button Style="{StaticResource TransportButton}" 
                            ToolTip="Fast Forward (L)"
                            Click="FastForward_Click">
                        <TextBlock Text="â–¶â–¶" FontSize="12" Foreground="White"/>
                    </Button>
                    
                    <!-- Next frame -->
                    <Button Style="{StaticResource TransportButton}" 
                            ToolTip="Next Frame (â†’)"
                            Click="NextFrame_Click">
                        <TextBlock Text="â©" FontSize="14" Foreground="White"/>
                    </Button>
                    
                    <!-- Skip to end -->
                    <Button Style="{StaticResource TransportButton}" 
                            ToolTip="Skip to End (End)"
                            Click="SkipToEnd_Click">
                        <TextBlock Text="â­" FontSize="14" Foreground="White"/>
                    </Button>
                    
                    <Separator Width="1" Background="#444444" Margin="8,4"/>
                    
                    <!-- Set In Point -->
                    <Button Style="{StaticResource TransportButton}" 
                            ToolTip="Set In Point (I)"
                            Click="SetInPoint_Click">
                        <TextBlock Text="[" FontSize="16" FontWeight="Bold" 
                                   Foreground="#44FF44"/>
                    </Button>
                    
                    <!-- Set Out Point -->
                    <Button Style="{StaticResource TransportButton}" 
                            ToolTip="Set Out Point (O)"
                            Click="SetOutPoint_Click">
                        <TextBlock Text="]" FontSize="16" FontWeight="Bold"
                                   Foreground="#FF4444"/>
                    </Button>
                    
                    <Separator Width="1" Background="#444444" Margin="8,4"/>
                    
                    <!-- Loop -->
                    <ToggleButton x:Name="LoopButton" 
                                  Width="36" Height="36"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  ToolTip="Loop (Ctrl+L)">
                        <TextBlock Text="ðŸ”" FontSize="14" Foreground="{StaticResource ButtonColor}"/>
                    </ToggleButton>
                </StackPanel>
                
                <!-- Right side: Volume -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="MuteButton" 
                            Style="{StaticResource TransportButton}"
                            Width="28" Height="28"
                            Click="Mute_Click">
                        <TextBlock x:Name="VolumeIcon" Text="ðŸ”Š" FontSize="14" Foreground="White"/>
                    </Button>
                    <Slider x:Name="VolumeSlider" 
                            Width="80" 
                            Minimum="0" Maximum="1" Value="1"
                            VerticalAlignment="Center"
                            ValueChanged="VolumeSlider_ValueChanged"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
