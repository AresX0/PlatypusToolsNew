<UserControl x:Class="PlatypusTools.UI.Controls.StatusBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:PlatypusTools.UI.ViewModels"
             xmlns:svc="clr-namespace:PlatypusTools.UI.Services"
             Height="28"
             MinHeight="28">

    <UserControl.DataContext>
        <x:Static Member="vm:StatusBarViewModel.Instance"/>
    </UserControl.DataContext>

    <Border BorderThickness="0,1,0,0"
            BorderBrush="{DynamicResource ControlBorderBrush}"
            Background="{DynamicResource ControlBackgroundBrush}">
        <Grid Margin="8,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Status Message (always visible) -->
            <TextBlock Grid.Column="0"
                       Text="{Binding StatusMessage, FallbackValue='Ready'}"
                       VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       Foreground="{DynamicResource WindowForegroundBrush}"/>

            <!-- Items Count (X of Y) -->
            <TextBlock Grid.Column="1"
                       Text="{Binding ItemsDisplay}"
                       VerticalAlignment="Center"
                       Margin="16,0,0,0"
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       Visibility="{Binding IsOperationRunning, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Progress Bar -->
            <ProgressBar Grid.Column="2"
                         Width="200"
                         Height="16"
                         Margin="16,0,0,0"
                         Value="{Binding Progress}"
                         IsIndeterminate="{Binding IsIndeterminate}"
                         Visibility="{Binding IsOperationRunning, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Elapsed Time -->
            <TextBlock Grid.Column="3"
                       Text="{Binding ElapsedTime}"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"
                       FontFamily="Consolas"
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       Visibility="{Binding IsOperationRunning, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Cancel Button -->
            <Button Grid.Column="4"
                    Content="âœ•"
                    Width="24"
                    Height="20"
                    Margin="8,0,0,0"
                    ToolTip="Cancel Operation"
                    Command="{Binding CancelCommand}"
                    Visibility="{Binding IsOperationRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsCancellable}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Notification Bell (IDEA-008) -->
            <Grid Grid.Column="5" Margin="16,0,0,0" VerticalAlignment="Center" MouseLeftButtonDown="NotificationBell_Click" Cursor="Hand"
                  ToolTip="Notification Center â€” Click to view recent notifications">
                <TextBlock Text="ðŸ””" FontSize="14"/>
                <Border x:Name="NotificationBadge" Background="#DC3545" CornerRadius="6" 
                        Width="14" Height="14" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Margin="0,-4,-6,0" Visibility="Collapsed">
                    <TextBlock x:Name="NotificationBadgeText" Text="0" FontSize="8" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>

            <!-- Performance Monitor (IDEA-012) -->
            <TextBlock Grid.Column="6"
                       Text="{Binding DisplayText, Source={x:Static svc:PerformanceMonitorService.Instance}}"
                       VerticalAlignment="Center"
                       Margin="16,0,0,0"
                       FontFamily="Consolas"
                       FontSize="11"
                       Opacity="0.7"
                       Foreground="{DynamicResource WindowForegroundBrush}"
                       ToolTip="Performance Monitor â€” Toggle in Settings or click to enable/disable"
                       MouseLeftButtonDown="PerformanceMonitor_Click"/>
        </Grid>
    </Border>
</UserControl>
