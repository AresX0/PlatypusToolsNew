<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:PlatypusTools.UI.Converters">
    
    <!-- Converters -->
    <converters:TimeToPixelConverter x:Key="TimeToPixelConverter"/>
    <converters:SimpleDurationToWidthConverter x:Key="DurationToWidthConverter"/>
    <converters:PlayPauseConverter x:Key="PlayPauseConverter"/>
    <converters:TimeSpanFormatConverter x:Key="TimeSpanFormatConverter"/>
    <converters:BoolToHeightConverter x:Key="BoolToHeightConverter"/>
    <converters:InverseNullToVisibilityConverter x:Key="InverseNullToVisibilityConverter"/>
    <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
    <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
    
    <!-- Track-specific converters (Shotcut-style) -->
    <converters:TrackTypeToColorConverter x:Key="TrackTypeToColorConverter"/>
    <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
    <converters:BoolToMuteTooltipConverter x:Key="BoolToMuteTooltipConverter"/>
    <converters:BoolToLockTooltipConverter x:Key="BoolToLockTooltipConverter"/>
    <converters:BoolToVisibilityTooltipConverter x:Key="BoolToVisibilityTooltipConverter"/>
    <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    
    <!-- Modern Bright Colors -->
    <Color x:Key="AccentColor">#0EA5E9</Color>
    <Color x:Key="AccentLightColor">#38BDF8</Color>
    <Color x:Key="AccentDarkColor">#0284C7</Color>
    <Color x:Key="SuccessColor">#22C55E</Color>
    <Color x:Key="WarningColor">#F59E0B</Color>
    <Color x:Key="DangerColor">#EF4444</Color>
    <Color x:Key="PrimaryBackgroundColor">#3B3F47</Color>
    <Color x:Key="SecondaryBackgroundColor">#4B5058</Color>
    <Color x:Key="TertiaryBackgroundColor">#5B616A</Color>
    <Color x:Key="SurfaceColor">#575D66</Color>
    <Color x:Key="BorderColor">#6B7280</Color>
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#D1D5DB</Color>
    <Color x:Key="BeatMarkerColor">#F472B6</Color>
    <Color x:Key="PlayheadColor">#F97316</Color>
    
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="{StaticResource TertiaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    
    <!-- Toolbar Button Style - Now with visible background -->
    <Style x:Key="ToolbarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#5B616A"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#6B7280"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.2"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#6B7580"/>
                            <Setter Property="BorderBrush" Value="#0EA5E9"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#7B8590"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Accent Button Style - Vibrant blue -->
    <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
        <Setter Property="Background" Value="#0EA5E9"/>
        <Setter Property="BorderBrush" Value="#38BDF8"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#38BDF8"/>
                <Setter Property="BorderBrush" Value="#7DD3FC"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#0284C7"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Primary Button Style - Bold accent -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
        <Setter Property="Background" Value="#0EA5E9"/>
        <Setter Property="BorderBrush" Value="#38BDF8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#38BDF8"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#0284C7"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Small Button Style -->
    <Style x:Key="SmallButtonStyle" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Background" Value="#5B616A"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#6B7580"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Transport Button Style - Larger for play/pause/stop -->
    <Style x:Key="TransportButtonStyle" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
        <Setter Property="MinWidth" Value="36"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="Background" Value="#5B616A"/>
        <Setter Property="BorderBrush" Value="#7B8590"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#0EA5E9"/>
                <Setter Property="BorderBrush" Value="#38BDF8"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Toggle Transport Button Style - For loop, ripple toggle buttons -->
    <Style x:Key="ToggleTransportButtonStyle" TargetType="ToggleButton">
        <Setter Property="MinWidth" Value="36"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="Background" Value="#5B616A"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#7B8590"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#6B7280"/>
            </Trigger>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Background" Value="#0EA5E9"/>
                <Setter Property="BorderBrush" Value="#38BDF8"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Vertical Separator -->
    <Style x:Key="VerticalSeparatorStyle" TargetType="Separator">
        <Setter Property="Width" Value="1"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Background" Value="#7B8590"/>
        <Setter Property="Margin" Value="8,0"/>
    </Style>
    
    <!-- Modern TextBox Style -->
    <Style x:Key="DarkTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="#4B5058"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#6B7280"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="CaretBrush" Value="White"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="#0EA5E9"/>
                <Setter Property="Background" Value="#575D66"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Modern Slider Style -->
    <Style x:Key="DarkSliderStyle" TargetType="Slider">
        <Setter Property="Background" Value="#4B5058"/>
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Height" Value="24"/>
    </Style>
    
    <!-- Modern ComboBox Style -->
    <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="#4B5058"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#6B7280"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
    </Style>
    
    <!-- Track Header Style -->
    <Style x:Key="TrackHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="#4B5058"/>
        <Setter Property="BorderBrush" Value="#6B7280"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Padding" Value="10,0"/>
    </Style>
    
    <!-- Timeline Clip Style -->
    <Style x:Key="TimelineClipStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="BorderBrush" Value="#7B8590"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Cursor" Value="SizeAll"/>
        <Setter Property="Margin" Value="0,5"/>
    </Style>
    
    <!-- ScrollViewer Style for Timeline -->
    <Style x:Key="TimelineScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <!-- Playhead Style - Bright orange -->
    <Style x:Key="PlayheadStyle" TargetType="Rectangle">
        <Setter Property="Width" Value="3"/>
        <Setter Property="Fill" Value="#F97316"/>
    </Style>
    
    <!-- Beat Marker Style - Pink for visibility -->
    <Style x:Key="BeatMarkerStyle" TargetType="Rectangle">
        <Setter Property="Width" Value="2"/>
        <Setter Property="Fill" Value="#F472B6"/>
        <Setter Property="Opacity" Value="0.8"/>
    </Style>
    
    <!-- Progress Bar Style -->
    <Style x:Key="ExportProgressStyle" TargetType="ProgressBar">
        <Setter Property="Height" Value="14"/>
        <Setter Property="Background" Value="#4B5058"/>
        <Setter Property="Foreground" Value="#22C55E"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <!-- Tab Control Style for Panels -->
    <Style x:Key="PanelTabControlStyle" TargetType="TabControl">
        <Setter Property="Background" Value="#4B5058"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <Style x:Key="PanelTabItemStyle" TargetType="TabItem">
        <Setter Property="Background" Value="#5B616A"/>
        <Setter Property="Foreground" Value="#D1D5DB"/>
        <Setter Property="Padding" Value="14,8"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#4B5058"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- CheckBox Style -->
    <Style x:Key="DarkCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    
    <!-- ToggleButton Style for Track Controls -->
    <Style x:Key="TrackToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="Width" Value="28"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Background" Value="#5B616A"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#6B7280"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Margin" Value="0,0,6,0"/>
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Background" Value="#0EA5E9"/>
                <Setter Property="BorderBrush" Value="#38BDF8"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#0EA5E9"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Filter Category Tab Style (Shotcut-inspired) -->
    <Style x:Key="FilterCategoryTabStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="#4B5058"/>
        <Setter Property="Foreground" Value="#9CA3AF"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#5B616A"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#0EA5E9"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
