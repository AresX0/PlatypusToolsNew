    <!-- ======================== Default Control Overrides ======================== -->
    
    <!-- Standard Button Override - Varied colors based on LCARS palette -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource LcarsGoldBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource LcarsBlackBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource LcarsFont}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="MinHeight" Value="28"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="14"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          TextBlock.Foreground="{TemplateBinding Foreground}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource LcarsIceBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource LcarsClassicBlueBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource LcarsClassicGrayBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource LcarsGrayBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <!-- Color variation based on button content keywords -->
        <Style.Triggers>
            <!-- Transform/Rotate buttons - Butterscotch -->
            <Trigger Property="Content" Value="↻ Rotate Left">
                <Setter Property="Background" Value="{StaticResource LcarsButterscotchBrush}"/>
            </Trigger>
            <Trigger Property="Content" Value="↺ Rotate Right">
                <Setter Property="Background" Value="{StaticResource LcarsButterscotchBrush}"/>
            </Trigger>
            <!-- Flip buttons - Peach -->
            <Trigger Property="Content" Value="↔ Flip H">
                <Setter Property="Background" Value="{StaticResource LcarsClassicPeachBrush}"/>
            </Trigger>
            <Trigger Property="Content" Value="↕ Flip V">
                <Setter Property="Background" Value="{StaticResource LcarsClassicPeachBrush}"/>
            </Trigger>
            <!-- Effects - Lilac/Purple -->
            <Trigger Property="Content" Value="◐ Grayscale">
                <Setter Property="Background" Value="{StaticResource LcarsLilacBrush}"/>
            </Trigger>
            <Trigger Property="Content" Value="◑ Invert">
                <Setter Property="Background" Value="{StaticResource LcarsAfricanVioletBrush}"/>
            </Trigger>
            <Trigger Property="Content" Value="☀ Brightness">
                <Setter Property="Background" Value="{StaticResource LcarsSunflowerBrush}"/>
            </Trigger>
            <Trigger Property="Content" Value="◐ Contrast">
                <Setter Property="Background" Value="{StaticResource LcarsVioletCremeBrush}"/>
            </Trigger>
            <!-- Blur/Sharpen - Ice Blue -->
            <Trigger Property="Content" Value="◌ Blur">
