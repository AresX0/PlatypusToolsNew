                            <Setter TargetName="Border" Property="Background" Value="{StaticResource LcarsGrayBrush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource LcarsGoldBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource LcarsBlackBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- GridViewColumnHeader for ListView GridView -->
    <Style TargetType="GridViewColumnHeader">
        <Setter Property="Background" Value="{StaticResource LcarsGoldBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource LcarsBlackBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource LcarsFont}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
        <Setter Property="BorderBrush" Value="{StaticResource LcarsBlackBrush}"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GridViewColumnHeader">
                    <Grid>
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="HeaderContent"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <Thumb x:Name="PART_HeaderGripper" 
                               HorizontalAlignment="Right"
                               Margin="0,0,-6,0"
                               Width="12"
                               Style="{x:Null}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource LcarsGoldLightBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource LcarsTanBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="DataGridCell">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="4,2"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource LcarsGoldBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource LcarsBlackBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- TreeView -->
    <Style TargetType="TreeView">
        <Setter Property="Background" Value="{StaticResource LcarsBlackLightBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource LcarsWhiteBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource LcarsTanBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource LcarsFont}"/>
    </Style>

    <Style TargetType="TreeViewItem">
        <Setter Property="Foreground" Value="{StaticResource LcarsWhiteBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource LcarsGoldBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource LcarsBlackBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- StatusBar -->
    <Style TargetType="StatusBar">
        <Setter Property="Background" Value="{StaticResource LcarsGrayBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource LcarsWhiteBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource LcarsFont}"/>
    </Style>

    <!-- ======================== LCARS Special Elements ======================== -->
    
    <!-- LCARS Header Bar Style -->
    <Style x:Key="LcarsHeaderBarStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource LcarsGoldBrush}"/>
        <Setter Property="CornerRadius" Value="0,0,40,0"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Padding" Value="20,0,60,0"/>
    </Style>
    
    <!-- LCARS Sidebar Button Stack (left sidebar with rounded caps) -->
    <Style x:Key="LcarsSidebarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource LcarsPeachBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource LcarsBlackBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource LcarsFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="20,0,0,20"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource LcarsSalmonBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource LcarsCoralBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- LCARS Elbow Corner Style (the iconic curved corner pieces) -->
    <Style x:Key="LcarsElbowStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource LcarsGoldBrush}"/>
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="80"/>
        <Setter Property="CornerRadius" Value="0,0,0,40"/>
    </Style>
    
    <!-- LCARS Status Indicator -->
    <Style x:Key="LcarsStatusIndicatorStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Fill" Value="{StaticResource LcarsGreenBrush}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsActive}" Value="False">
                <Setter Property="Fill" Value="{StaticResource LcarsGrayBrush}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <!-- LCARS Divider -->
    <Style x:Key="LcarsDividerStyle" TargetType="Rectangle">
        <Setter Property="Fill" Value="{StaticResource LcarsTanBrush}"/>
        <Setter Property="Height" Value="4"/>
        <Setter Property="Margin" Value="0,8"/>
        <Setter Property="RadiusX" Value="2"/>
        <Setter Property="RadiusY" Value="2"/>
    </Style>

</ResourceDictionary>
