<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Import Light.xaml as base for control styles and templates -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Light.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <!--
    ============================================================
    AERO GLASS THEME
    ============================================================
    This theme provides glass/blur/acrylic effects reminiscent 
    of Windows Vista/7 Aero with modern accessibility.
    
    Requires: Windows 10 1809+ or Windows 11 for full effects.
    Falls back gracefully on unsupported systems.
    ============================================================
    -->
    
    <!-- Glass Effect Colors (blue-tinted) -->
    <Color x:Key="GlassTintColorLight">#A0C0D8F0</Color>
    <Color x:Key="GlassTintColorDark">#A0102040</Color>
    <Color x:Key="GlassAccentColor">#FF0078D4</Color>
    <Color x:Key="GlassHighlightColor">#30D0E8FF</Color>
    <Color x:Key="GlassBorderColor">#50A0C4E0</Color>
    <Color x:Key="GlassShadowColor">#40000020</Color>
    
    <!-- Frosted Glass Brushes -->
    <SolidColorBrush x:Key="GlassTintBrush" Color="{StaticResource GlassTintColorLight}" />
    <SolidColorBrush x:Key="GlassAccentBrush" Color="{StaticResource GlassAccentColor}" />
    <SolidColorBrush x:Key="GlassBorderBrush" Color="{StaticResource GlassBorderColor}" />
    
    <!-- Glass Highlight Gradient (top shine effect, blue-tinted) -->
    <LinearGradientBrush x:Key="GlassHighlightBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#40D0E8FF" Offset="0"/>
        <GradientStop Color="#20B0D0F0" Offset="0.4"/>
        <GradientStop Color="#00FFFFFF" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Glass Surface Gradient (depth effect, blue-tinted) -->
    <LinearGradientBrush x:Key="GlassSurfaceBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#30C0D8F0" Offset="0"/>
        <GradientStop Color="#10A0C0E0" Offset="0.5"/>
        <GradientStop Color="#20001030" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Semi-transparent backgrounds for layered glass (blue-tinted) -->
    <SolidColorBrush x:Key="GlassCardBackgroundLight" Color="#A0D8E8F8" />
    <SolidColorBrush x:Key="GlassCardBackgroundDark" Color="#A0102040" />
    <SolidColorBrush x:Key="GlassSidebarBackground" Color="#80C8DCF0" />
    <SolidColorBrush x:Key="GlassHeaderBackground" Color="#60B8D0E8" />
    
    <!-- Text Colors for Glass (ensure contrast) -->
    <SolidColorBrush x:Key="GlassTextPrimaryLight" Color="#FF000000" />
    <SolidColorBrush x:Key="GlassTextPrimaryDark" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="GlassTextSecondaryLight" Color="#FF404040" />
    <SolidColorBrush x:Key="GlassTextSecondaryDark" Color="#FFB0B0B0" />
    
    <!-- ============================================================
         GLASS OVERLAY BRUSHES
         ============================================================
         These override the standard theme brushes with semi-transparent 
         versions to allow the glass effect to show through.
         ============================================================ -->
    
    <!-- Transparent window background for glass effect to show through (blue-tinted) -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#30B0D0F0" />
    <SolidColorBrush x:Key="WindowForegroundBrush" Color="#FF0A1020" />
    
    <!-- Semi-transparent control backgrounds (blue-tinted) -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#40C0D8F0" />
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="#FF0A1020" />
    
    <!-- Sidebar and panel backgrounds (blue-tinted) -->
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#60B8D0E8" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#80C8DCF0" />
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#50B0C8E0" />
    <SolidColorBrush x:Key="HeaderBrush" Color="#50B0C8E0" />
    <SolidColorBrush x:Key="HeaderForegroundBrush" Color="#FF0A1020" />

    <!-- Menu colors for glass (blue-tinted) -->
    <SolidColorBrush x:Key="MenuForegroundBrush" Color="#FF0A1020" />
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="#60B8D0E8" />
    
    <!-- Standard theme resource keys (blue-tinted) -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#30B0D0F0" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="#40C0D8F0" />
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#50C8E0F8" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="#FF0A1020" />
    <SolidColorBrush x:Key="ForegroundDimBrush" Color="#FF405060" />
    <SolidColorBrush x:Key="CardBackground" Color="#80C8DCF0" />
    <SolidColorBrush x:Key="BorderBrush" Color="#50A0C4E0" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="#FF0078D4" />
    <SolidColorBrush x:Key="AccentBrush" Color="#FF0078D4" />
    <SolidColorBrush x:Key="TextPrimary" Color="#FF0A1020" />
    <SolidColorBrush x:Key="TextSecondary" Color="#FF304060" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FF0A1020" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#FF304060" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#FF304060" />
    
    <!-- Warning/Info box brushes for Glass -->
    <SolidColorBrush x:Key="WarningBackgroundBrush" Color="#E0FFF4E5" />
    <SolidColorBrush x:Key="WarningBorderBrush" Color="#FFFF9800" />
    <SolidColorBrush x:Key="WarningForegroundBrush" Color="#FF663C00" />
    <SolidColorBrush x:Key="InfoBackgroundBrush" Color="#E0E3F2FD" />
    <SolidColorBrush x:Key="InfoBorderBrush" Color="#FF2196F3" />
    <SolidColorBrush x:Key="InfoForegroundBrush" Color="#FF0D47A1" />
    <SolidColorBrush x:Key="SuccessBackgroundBrush" Color="#E0E8F5E9" />
    <SolidColorBrush x:Key="SuccessBorderBrush" Color="#FF4CAF50" />
    <SolidColorBrush x:Key="SuccessForegroundBrush" Color="#FF1B5E20" />
    <SolidColorBrush x:Key="ErrorBackgroundBrush" Color="#E0FFEBEE" />
    <SolidColorBrush x:Key="ErrorBorderBrush" Color="#FFF44336" />
    <SolidColorBrush x:Key="ErrorForegroundBrush" Color="#FFB71C1C" />
    
    <!-- Title Bar Brushes (semi-transparent, blue-tinted) -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#40B0C8E0" />
    <SolidColorBrush x:Key="TitleBarForegroundBrush" Color="#FF0A1020" />
    <SolidColorBrush x:Key="TitleBarButtonHoverBrush" Color="#30002040" />
    <SolidColorBrush x:Key="TitleBarCloseHoverBrush" Color="#FFE81123" />

    <!-- Text Glow Effect for readability on glass -->
    <DropShadowEffect x:Key="GlassTextGlow" 
                      Color="White" 
                      BlurRadius="4" 
                      ShadowDepth="0" 
                      Opacity="0.5"/>
    
    <DropShadowEffect x:Key="GlassTextGlowDark" 
                      Color="Black" 
                      BlurRadius="4" 
                      ShadowDepth="0" 
                      Opacity="0.5"/>
    
    <!-- Glass Panel Styles -->
    <Style x:Key="GlassPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource GlassTintBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{StaticResource GlassShadowColor}" 
                                  BlurRadius="10" 
                                  ShadowDepth="2" 
                                  Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="GlassCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource GlassCardBackgroundLight}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="4"/>
    </Style>
    
    <!-- Glass Button Style -->
    <Style x:Key="GlassButtonStyle" TargetType="Button">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#70FFFFFF" Offset="0"/>
                    <GradientStop Color="#30FFFFFF" Offset="0.5"/>
                    <GradientStop Color="#10FFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="{StaticResource GlassTextPrimaryLight}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                        <Grid>
                            <!-- Highlight overlay -->
                            <Border x:Name="highlight"
                                    CornerRadius="5"
                                    Opacity="0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                                        <GradientStop Color="#00FFFFFF" Offset="0.5"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="highlight" Property="Opacity" Value="1"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GlassAccentBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#30FFFFFF" Offset="0"/>
                                        <GradientStop Color="#50000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Glass TextBox Style -->
    <Style x:Key="GlassTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="#80FFFFFF"/>
        <Setter Property="Foreground" Value="{StaticResource GlassTextPrimaryLight}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ScrollViewer x:Name="PART_ContentHost" 
                                      Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GlassAccentBrush}"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Glass Header Style -->
    <Style x:Key="GlassHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource GlassHeaderBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="16,12"/>
    </Style>
    
    <!-- Glass Sidebar Style -->
    <Style x:Key="GlassSidebarStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource GlassSidebarBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
        <Setter Property="Width" Value="250"/>
    </Style>
    
    <!-- Glass TabControl Style -->
    <Style x:Key="GlassTabControlStyle" TargetType="TabControl">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <!-- Glass TabItem Style -->
    <Style x:Key="GlassTabItemStyle" TargetType="TabItem">
        <Setter Property="Background" Value="#50FFFFFF"/>
        <Setter Property="Foreground" Value="{StaticResource GlassTextPrimaryLight}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1,1,1,0"
                            CornerRadius="6,6,0,0"
                            Padding="{TemplateBinding Padding}"
                            Margin="2,0,0,0">
                        <ContentPresenter x:Name="content"
                                          ContentSource="Header"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#90FFFFFF"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GlassAccentBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource GlassAccentBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#70FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Glass CommandBar Style -->
    <Style x:Key="GlassCommandBarStyle" TargetType="ToolBar">
        <Setter Property="Background" Value="{StaticResource GlassHeaderBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>
    
    <!-- Glass ListView Style -->
    <Style x:Key="GlassListViewStyle" TargetType="ListView">
        <Setter Property="Background" Value="#40FFFFFF"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <Style x:Key="GlassListViewItemStyle" TargetType="ListViewItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Margin" Value="2"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#40FFFFFF"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#600078D4"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- GroupBox -->
    <Style TargetType="GroupBox">
        <Setter Property="Background" Value="#90FFFFFF" />
        <Setter Property="BorderBrush" Value="#60FFFFFF" />
        <Setter Property="Foreground" Value="#FF000000" />
    </Style>

    <!-- Expander -->
    <Style TargetType="Expander">
        <Setter Property="Background" Value="#80FFFFFF" />
        <Setter Property="Foreground" Value="#FF000000" />
        <Setter Property="BorderBrush" Value="#60FFFFFF" />
    </Style>

    <!-- Glass ScrollBar Style -->
    <Style x:Key="GlassScrollBarThumbStyle" TargetType="Thumb">
        <Setter Property="Background" Value="#60FFFFFF"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="4"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#80FFFFFF"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Noise Texture Overlay (for authentic glass look) -->
    <DrawingBrush x:Key="GlassNoiseBrush" 
                  TileMode="Tile" 
                  Viewport="0,0,64,64" 
                  ViewportUnits="Absolute"
                  Opacity="0.03">
        <DrawingBrush.Drawing>
            <GeometryDrawing>
                <GeometryDrawing.Geometry>
                    <GeometryGroup>
                        <!-- Simulated noise pattern -->
                        <EllipseGeometry Center="5,5" RadiusX="1" RadiusY="1"/>
                        <EllipseGeometry Center="20,15" RadiusX="1" RadiusY="1"/>
                        <EllipseGeometry Center="35,8" RadiusX="1" RadiusY="1"/>
                        <EllipseGeometry Center="50,25" RadiusX="1" RadiusY="1"/>
                        <EllipseGeometry Center="12,40" RadiusX="1" RadiusY="1"/>
                        <EllipseGeometry Center="45,50" RadiusX="1" RadiusY="1"/>
                        <EllipseGeometry Center="28,55" RadiusX="1" RadiusY="1"/>
                        <EllipseGeometry Center="58,35" RadiusX="1" RadiusY="1"/>
                    </GeometryGroup>
                </GeometryDrawing.Geometry>
                <GeometryDrawing.Brush>
                    <SolidColorBrush Color="#40000000"/>
                </GeometryDrawing.Brush>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>
    
    <!-- ============================================================
         IMPLICIT STYLE OVERRIDES FOR GLASS TRANSPARENCY
         ============================================================
         These override Light.xaml's implicit styles so controls get
         semi-transparent blue-tinted backgrounds, allowing DWM blur.
         ============================================================ -->
    
    <!-- Window & Panel backgrounds -->
    <Style TargetType="TabControl">
        <Setter Property="Background" Value="#30B0D0F0" />
        <Setter Property="BorderBrush" Value="#50A0C4E0" />
    </Style>
    
    <Style TargetType="TabItem">
        <Setter Property="Background" Value="#40C0D8F0" />
        <Setter Property="Foreground" Value="#FF0A1020" />
        <Setter Property="BorderBrush" Value="#50A0C4E0" />
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#80D0E4F8" />
                <Setter Property="Foreground" Value="#FF0078D4" />
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#60C8DCF0" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="#25B0D0F0" />
        <Setter Property="RowBackground" Value="#18B0D0F0" />
        <Setter Property="AlternatingRowBackground" Value="#28C0DCF8" />
        <Setter Property="BorderBrush" Value="#50A0C4E0" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="HorizontalGridLinesBrush" Value="#25A0C4E0" />
        <Setter Property="Foreground" Value="#FF0A1020" />
    </Style>
    
    <Style TargetType="DataGridCell">
        <Setter Property="Foreground" Value="#FF0A1020" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#600078D4" />
                <Setter Property="Foreground" Value="White" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="#40C0D8F0" />
        <Setter Property="Foreground" Value="#FF0A1020" />
        <Setter Property="BorderBrush" Value="#35A0C4E0" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>
    
    <Style TargetType="ListBox">
        <Setter Property="Background" Value="#25B0D0F0" />
        <Setter Property="BorderBrush" Value="#50A0C4E0" />
        <Setter Property="Foreground" Value="#FF0A1020" />
    </Style>
    
    <Style TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#FF0A1020" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#35C0DCF8" />
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#600078D4" />
                <Setter Property="Foreground" Value="White" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style TargetType="ListView">
        <Setter Property="Background" Value="#25B0D0F0" />
        <Setter Property="BorderBrush" Value="#50A0C4E0" />
        <Setter Property="Foreground" Value="#FF0A1020" />
    </Style>
    
    <Style TargetType="ListViewItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#FF0A1020" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#35C0DCF8" />
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#600078D4" />
                <Setter Property="Foreground" Value="White" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#70D8E8F8" />
        <Setter Property="Foreground" Value="#FF0A1020" />
        <Setter Property="BorderBrush" Value="#50A0C4E0" />
        <Setter Property="CaretBrush" Value="#FF0A1020" />
        <Setter Property="Padding" Value="4,3" />
    </Style>
    
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="#60C8DCF0" />
        <Setter Property="Foreground" Value="#FF0A1020" />
        <Setter Property="BorderBrush" Value="#50A0C4E0" />
    </Style>
    
    <Style TargetType="TreeView">
        <Setter Property="Background" Value="#25B0D0F0" />
        <Setter Property="BorderBrush" Value="#50A0C4E0" />
        <Setter Property="Foreground" Value="#FF0A1020" />
    </Style>
    
    <Style TargetType="TreeViewItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#FF0A1020" />
    </Style>
    
    <Style TargetType="Menu">
        <Setter Property="Background" Value="#60B8D0E8" />
        <Setter Property="Foreground" Value="#FF0A1020" />
    </Style>
    
    <Style TargetType="MenuItem">
        <Setter Property="Foreground" Value="#FF0A1020" />
    </Style>
    
    <Style TargetType="ToolBar">
        <Setter Property="Background" Value="#40B0C8E0" />
    </Style>
    
    <Style TargetType="StatusBar">
        <Setter Property="Background" Value="#40B0C8E0" />
        <Setter Property="Foreground" Value="#FF0A1020" />
    </Style>
    
    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
</ResourceDictionary>
