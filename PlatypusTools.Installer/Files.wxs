<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Fragment>
    <!-- Directory structure -->
    <StandardDirectory Id="ProgramFiles64Folder">
      <Directory Id="INSTALLFOLDER" Name="PlatypusTools">
        <Directory Id="ToolsFolder" Name="Tools">
          <Directory Id="FFmpegFolder" Name="ffmpeg" />
          <Directory Id="ExifToolFolder" Name="exiftool" />
        </Directory>
        <Directory Id="DataFolder" Name="Data" />
        <Directory Id="LogsFolder" Name="Logs" />
        <Directory Id="AppFontsFolder" Name="Fonts" />
      </Directory>
    </StandardDirectory>

    <StandardDirectory Id="ProgramMenuFolder">
      <Directory Id="ApplicationProgramsFolder" Name="PlatypusTools" />
    </StandardDirectory>
  </Fragment>

  <Fragment>
    <!-- Shortcuts Component -->
    <Component Id="ApplicationShortcut" Directory="ApplicationProgramsFolder" Guid="D9E0F1A2-B3C4-4D5E-9A8B-1C2D3E4F5A6B">
      <Shortcut Id="ApplicationStartMenuShortcut"
                Name="PlatypusTools"
                Description="Comprehensive System Utilities Suite"
                Target="[INSTALLFOLDER]PlatypusTools.UI.exe"
                WorkingDirectory="INSTALLFOLDER"
                Icon="PlatypusIcon" />
      <RemoveFolder Id="CleanUpShortCut" Directory="ApplicationProgramsFolder" On="uninstall" />
      <RegistryValue Root="HKCU" 
                     Key="Software\PlatypusTools" 
                     Name="installed" 
                     Type="integer" 
                     Value="1" 
                     KeyPath="yes" />
    </Component>

    <!-- Registry Entries -->
    <Component Id="RegistryEntries" Directory="INSTALLFOLDER" Guid="E0F1A2B3-C4D5-4E5F-9B8C-2D3E4F5A6B7C">
      <RegistryValue Root="HKLM" 
                     Key="Software\PlatypusTools" 
                     Name="InstallPath" 
                     Type="string" 
                     Value="[INSTALLFOLDER]" 
                     KeyPath="yes" />
      <RegistryValue Root="HKLM" 
                     Key="Software\PlatypusTools" 
                     Name="Version" 
                     Type="string" 
                     Value="3.3.0.5" />
    </Component>
  </Fragment>

  <Fragment>
    <!-- External tools and dependencies -->
    <ComponentGroup Id="SupportFiles">
      <!-- FFmpeg tools - bundled executables -->
      <Component Id="FFmpegExe" Directory="FFmpegFolder" Guid="F2A3B4C5-D6E7-4F5A-9B8C-2D3E4F5A6B7C">
        <File Id="ffmpeg.exe" Source="..\Tools\ffmpeg\ffmpeg.exe" KeyPath="yes" />
      </Component>

      <Component Id="FFprobeExe" Directory="FFmpegFolder" Guid="A3B4C5D6-E7F8-4A5B-9C8D-3E4F5A6B7C8D">
        <File Id="ffprobe.exe" Source="..\Tools\ffmpeg\ffprobe.exe" KeyPath="yes" />
      </Component>

      <Component Id="FFplayExe" Directory="FFmpegFolder" Guid="B4C5D6E7-F8A9-4B5C-9D8E-4F5A6B7C8D9E">
        <File Id="ffplay.exe" Source="..\Tools\ffmpeg\ffplay.exe" KeyPath="yes" />
      </Component>

      <Component Id="FFmpegLicense" Directory="FFmpegFolder" Guid="D5E6F7A8-B9C0-4D5E-9A8B-6B7C8D9E0F1A">
        <File Id="FFmpegLICENSE.txt" Source="..\Tools\ffmpeg\LICENSE.txt" KeyPath="yes" />
      </Component>

      <!-- ExifTool - bundled executable -->
      <Component Id="ExifToolExe" Directory="ExifToolFolder" Guid="C5D6E7F8-A9B0-4C5D-9E8F-5A6B7C8D9E0F">
        <File Id="exiftool.exe" Source="..\Tools\exiftool\exiftool.exe" KeyPath="yes" />
      </Component>

      <Component Id="ExifToolReadme" Directory="ExifToolFolder" Guid="E6F7A8B9-C0D1-4E5F-9A8B-7C8D9E0F1A2B">
        <File Id="ExifToolREADME.txt" Source="..\Tools\exiftool\README.txt" KeyPath="yes" />
      </Component>

      <!-- Theme Fonts - bundled for user installation -->
      <Component Id="FontKlingon" Directory="AppFontsFolder" Guid="A1B2C3D4-E5F6-4A5B-9C8D-0E1F2A3B4C5D">
        <File Id="KlingonFont.ttf" Source="..\PlatypusTools.UI\Assets\KlingonFont.ttf" KeyPath="yes" />
      </Component>

      <Component Id="FontMonofonto" Directory="AppFontsFolder" Guid="B2C3D4E5-F6A7-4B5C-9D8E-1F2A3B4C5D6E">
        <File Id="monofonto.otf" Source="..\PlatypusTools.UI\Assets\monofonto.otf" KeyPath="yes" />
      </Component>

      <Component Id="FontOkuda" Directory="AppFontsFolder" Guid="C3D4E5F6-A7B8-4C5D-9E8F-2A3B4C5D6E7F">
        <File Id="Okuda.otf" Source="..\PlatypusTools.UI\Assets\Okuda.otf" KeyPath="yes" />
      </Component>

      <Component Id="FontOkudaBold" Directory="AppFontsFolder" Guid="D4E5F6A7-B8C9-4D5E-9F0A-3B4C5D6E7F8A">
        <File Id="OkudaBold.otf" Source="..\PlatypusTools.UI\Assets\Okuda Bold.otf" KeyPath="yes" />
      </Component>

      <Component Id="FontOverseer" Directory="AppFontsFolder" Guid="E5F6A7B8-C9D0-4E5F-9A0B-4C5D6E7F8A9B">
        <File Id="Overseer.otf" Source="..\PlatypusTools.UI\Assets\Overseer.otf" KeyPath="yes" />
      </Component>

      <Component Id="FontOverseerBold" Directory="AppFontsFolder" Guid="F6A7B8C9-D0E1-4F5A-9B0C-5D6E7F8A9B0C">
        <File Id="OverseerBold.otf" Source="..\PlatypusTools.UI\Assets\Overseer Bold.otf" KeyPath="yes" />
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>

