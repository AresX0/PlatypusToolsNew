<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Fragment>
    <!-- Directory structure -->
    <StandardDirectory Id="ProgramFiles64Folder">
      <Directory Id="INSTALLFOLDER" Name="PlatypusTools">
        <Directory Id="ToolsFolder" Name="Tools" />
        <Directory Id="DataFolder" Name="Data" />
        <Directory Id="LogsFolder" Name="Logs" />
      </Directory>
    </StandardDirectory>

    <StandardDirectory Id="ProgramMenuFolder">
      <Directory Id="ApplicationProgramsFolder" Name="PlatypusTools" />
    </StandardDirectory>
  </Fragment>

  <Fragment>
    <!-- Shortcuts Component -->
    <Component Id="ApplicationShortcut" Directory="ApplicationProgramsFolder" Guid="D9E0F1A2-B3C4-4D5E-9A8B-1C2D3E4F5A6B">
      <Shortcut Id="ApplicationStartMenuShortcut"
                Name="PlatypusTools"
                Description="Comprehensive System Utilities Suite"
                Target="[INSTALLFOLDER]PlatypusTools.UI.exe"
                WorkingDirectory="INSTALLFOLDER"
                Icon="PlatypusIcon" />
      <RemoveFolder Id="CleanUpShortCut" Directory="ApplicationProgramsFolder" On="uninstall" />
      <RegistryValue Root="HKCU" 
                     Key="Software\PlatypusTools" 
                     Name="installed" 
                     Type="integer" 
                     Value="1" 
                     KeyPath="yes" />
    </Component>

    <!-- Registry Entries -->
    <Component Id="RegistryEntries" Directory="INSTALLFOLDER" Guid="E0F1A2B3-C4D5-4E5F-9B8C-2D3E4F5A6B7C">
      <RegistryValue Root="HKLM" 
                     Key="Software\PlatypusTools" 
                     Name="InstallPath" 
                     Type="string" 
                     Value="[INSTALLFOLDER]" 
                     KeyPath="yes" />
      <RegistryValue Root="HKLM" 
                     Key="Software\PlatypusTools" 
                     Name="Version" 
                     Type="string" 
                     Value="2.0.0.0" />
    </Component>
  </Fragment>

  <Fragment>
    <!-- Main application files -->
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <!-- Main executable -->
      <Component Id="MainExecutable" Guid="D4E5F6A7-B8C9-4D5E-9F8A-4B5C6D7E8F9A">
        <File Id="PlatypusToolsExe" 
              Source="$(var.PlatypusTools.UI.TargetDir)PlatypusTools.UI.exe" 
              KeyPath="yes" />
        <File Id="PlatypusToolsDll" 
              Source="$(var.PlatypusTools.UI.TargetDir)PlatypusTools.UI.dll" />
      </Component>

      <!-- Application DLLs and dependencies -->
      <Component Id="CoreDLL" Guid="E5F6A7B8-C9D0-4E5F-9A8B-5C6D7E8F9A0B">
        <File Source="$(var.PlatypusTools.UI.TargetDir)PlatypusTools.Core.dll" KeyPath="yes" />
      </Component>

      <Component Id="HtmlAgilityPack" Guid="F6A7B8C9-D0E1-4F5A-9B8C-6D7E8F9A0B1C">
        <File Source="$(var.PlatypusTools.UI.TargetDir)HtmlAgilityPack.dll" KeyPath="yes" />
      </Component>

      <Component Id="SystemManagement" Guid="A1B2C3D4-E5F6-7A8B-9C0D-1E2F3A4B5C6D">
        <File Source="$(var.PlatypusTools.UI.TargetDir)System.Management.dll" KeyPath="yes" />
      </Component>

      <!-- WebView2 Runtime -->
      <Component Id="WebView2Loader" Guid="B8C9D0E1-F2A3-4B5C-9D8E-8F9A0B1C2D3E">
        <File Source="$(var.PlatypusTools.UI.TargetDir)Microsoft.Web.WebView2.Core.dll" KeyPath="yes" />
        <File Source="$(var.PlatypusTools.UI.TargetDir)Microsoft.Web.WebView2.Wpf.dll" />
      </Component>

      <!-- Configuration files -->
      <Component Id="AppSettings" Guid="C9D0E1F2-A3B4-4C5D-9E8F-9A0B1C2D3E4F">
        <File Source="$(var.PlatypusTools.UI.TargetDir)PlatypusTools.UI.deps.json" KeyPath="yes" />
        <File Source="$(var.PlatypusTools.UI.TargetDir)PlatypusTools.UI.runtimeconfig.json" />
      </Component>

      <!-- Assets -->
      <Component Id="HelpFile" Guid="D0E1F2A3-B4C5-4D5E-9F8A-0B1C2D3E4F5A">
        <File Source="$(var.PlatypusTools.UI.TargetDir)Assets\PlatypusTools_Help.html" KeyPath="yes" />
      </Component>

      <Component Id="AppIcon" Guid="E1F2A3B4-C5D6-4E5F-9A8B-1C2D3E4F5A6B">
        <File Source="C:\Projects\Platypustools\JosephThePlatypus.ico" KeyPath="yes" />
      </Component>
    </ComponentGroup>

    <!-- External tools and dependencies -->
    <ComponentGroup Id="SupportFiles" Directory="ToolsFolder">
      <!-- FFmpeg tools -->
      <Component Id="FFmpeg" Guid="F2A3B4C5-D6E7-4F5A-9B8C-2D3E4F5A6B7C">
        <File Id="FFmpegExe" Source="C:\Projects\Platypustools\LocalArchive\ffmpeg.exe" KeyPath="yes" />
      </Component>

      <Component Id="FFprobe" Guid="A3B4C5D6-E7F8-4A5B-9C8D-3E4F5A6B7C8D">
        <File Id="FFprobeExe" Source="C:\Projects\Platypustools\LocalArchive\ffprobe.exe" KeyPath="yes" />
      </Component>

      <Component Id="FFplay" Guid="B4C5D6E7-F8A9-4B5C-9D8E-4F5A6B7C8D9E">
        <File Id="FFplayExe" Source="C:\Projects\Platypustools\LocalArchive\ffplay.exe" KeyPath="yes" />
      </Component>

      <!-- ExifTool -->
      <Component Id="ExifTool" Guid="C5D6E7F8-A9B0-4C5D-9E8F-5A6B7C8D9E0F">
        <File Id="ExifToolExe" Source="C:\Projects\Platypustools\LocalArchive\exiftool.exe" KeyPath="yes" />
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>
