<Window x:Class="PlatypusTools.UI.Views.RegionSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowState="Maximized"
        Cursor="Cross"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseMove="Window_MouseMove"
        MouseLeftButtonUp="Window_MouseLeftButtonUp"
        KeyDown="Window_KeyDown">
    
    <Grid>
        <!-- Semi-transparent overlay -->
        <Rectangle x:Name="Overlay" Fill="#80000000"/>
        
        <!-- Selection rectangle -->
        <Rectangle x:Name="SelectionRectangle" 
                   Stroke="#00AAFF" StrokeThickness="2" 
                   Fill="#2000AAFF"
                   Visibility="Collapsed"/>
        
        <!-- Instructions -->
        <Border Background="#DD000000" CornerRadius="8" Padding="20" 
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
            <StackPanel>
                <TextBlock Text="Click and drag to select a region" 
                           Foreground="White" FontSize="16" FontWeight="SemiBold" TextAlignment="Center"/>
                <TextBlock Text="Press ESC to cancel" 
                           Foreground="#AAAAAA" FontSize="12" TextAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Size indicator -->
        <Border x:Name="SizeIndicator" Background="#DD000000" CornerRadius="4" Padding="8,4"
                HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed">
            <TextBlock x:Name="SizeText" Foreground="White" FontSize="12"/>
        </Border>
    </Grid>
</Window>
