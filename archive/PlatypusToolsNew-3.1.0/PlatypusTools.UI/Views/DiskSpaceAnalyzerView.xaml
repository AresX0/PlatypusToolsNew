<UserControl x:Class="PlatypusTools.UI.Views.DiskSpaceAnalyzerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Root Path Selection -->
        <GroupBox Header="Disk Space Analysis" Grid.Row="0" Margin="0,0,0,8">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock VerticalAlignment="Center" Width="100">Root Path:</TextBlock>
                    <TextBox x:Name="RootPathTextBox" Width="500" Text="{Binding RootPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="0,0,8,0" />
                    <Button Content="Browse..." Click="OnBrowseClick" Width="90" Margin="0,0,8,0" />
                    <Button Content="Analyze" Click="OnAnalyzeClick" Width="90" FontWeight="Bold" Margin="0,0,8,0" />
                    <Button Content="Export" Command="{Binding ExportCommand}" Width="90" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
                    <TextBlock VerticalAlignment="Center" Width="100">Total Size:</TextBlock>
                    <TextBlock x:Name="TotalSizeDisplayText" Text="{Binding TotalSizeDisplay}" FontWeight="Bold" FontSize="14" Foreground="DarkBlue" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="2">
                    <TextBlock VerticalAlignment="Center" Width="100">Visibility:</TextBlock>
                    <CheckBox Content="Show Hidden Files" IsChecked="{Binding ShowHiddenFiles}" Margin="0,0,16,0" VerticalAlignment="Center"
                              ToolTip="Show files and folders with Hidden attribute"/>
                    <CheckBox Content="Show System Files" IsChecked="{Binding ShowSystemFiles}" VerticalAlignment="Center"
                              ToolTip="Show files and folders with System attribute"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Directory Tree -->
        <GroupBox Header="Directory Hierarchy" Grid.Row="1" Margin="0,0,0,8">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <TreeView x:Name="DirectoryTreeView" ItemsSource="{Binding DirectoryTree}">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="16" Height="16" Margin="0,0,4,0">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="{Binding IsFile, Converter={StaticResource FileFolderIconConverter}}" />
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <TextBlock Text="{Binding Name}" FontWeight="{Binding IsFile, Converter={StaticResource FileFontWeightConverter}}" Margin="0,0,8,0" />
                                <TextBlock Text="{Binding SizeDisplay}" Foreground="DarkGreen" Margin="0,0,8,0" />
                                <TextBlock Text="{Binding FileCount, StringFormat='({0} files)'}" Foreground="Gray" Visibility="{Binding IsFile, Converter={StaticResource FileCountVisibilityConverter}}" />
                                <TextBlock Text="[Hidden]" Foreground="DarkOrange" Margin="4,0,0,0" Visibility="{Binding IsHidden, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <TextBlock Text="[System]" Foreground="Red" Margin="4,0,0,0" Visibility="{Binding IsSystem, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </ScrollViewer>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Analyzing..." Margin="0,0,8,0"
                               Visibility="{Binding IsAnalyzing, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed, TargetNullValue=Collapsed}" />
                    <ProgressBar Width="100" Height="16" IsIndeterminate="True"
                                 Visibility="{Binding IsAnalyzing, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed, TargetNullValue=Collapsed}" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
