<UserControl x:Class="PlatypusTools.UI.Controls.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="800">
    <Border Background="{DynamicResource StatusBarBackground}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="0,1,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Status Message -->
            <TextBlock x:Name="StatusMessage" 
                       Grid.Column="0" 
                       Text="Ready" 
                       VerticalAlignment="Center" 
                       Margin="10,0"
                       Foreground="{DynamicResource ForegroundBrush}"
                       TextTrimming="CharacterEllipsis"/>
            
            <!-- Progress Bar (hidden by default) -->
            <ProgressBar x:Name="ProgressBar" 
                         Grid.Column="1" 
                         Width="150" 
                         Height="16" 
                         Margin="5,0"
                         Visibility="Collapsed"
                         Minimum="0" Maximum="100"/>
            
            <!-- File Count -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0">
                <TextBlock Text="Files: " 
                           Foreground="{DynamicResource ForegroundDimBrush}" 
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="FileCount" 
                           Text="0" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>
            </StackPanel>
            
            <!-- Selected Count -->
            <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0">
                <TextBlock Text="Selected: " 
                           Foreground="{DynamicResource ForegroundDimBrush}" 
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="SelectedCount" 
                           Text="0" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>
            </StackPanel>
            
            <!-- Total Size -->
            <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="10,0">
                <TextBlock Text="Size: " 
                           Foreground="{DynamicResource ForegroundDimBrush}" 
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="TotalSize" 
                           Text="0 B" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>
            </StackPanel>
            
            <!-- Memory Usage -->
            <StackPanel Grid.Column="5" Orientation="Horizontal" Margin="10,0,15,0">
                <TextBlock Text="Memory: " 
                           Foreground="{DynamicResource ForegroundDimBrush}" 
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="MemoryUsage" 
                           Text="0 MB" 
                           Foreground="{DynamicResource ForegroundBrush}" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
