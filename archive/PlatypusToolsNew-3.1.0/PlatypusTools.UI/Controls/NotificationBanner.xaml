<UserControl x:Class="PlatypusTools.UI.Controls.NotificationBanner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="48" d:DesignWidth="400"
             Visibility="Collapsed">
    <Border x:Name="BannerBorder" 
            CornerRadius="4" 
            Padding="12,8"
            Margin="0,0,0,8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Icon -->
            <TextBlock x:Name="IconText" Grid.Column="0" 
                       FontSize="16" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>
            
            <!-- Message -->
            <TextBlock x:Name="MessageText" Grid.Column="1" 
                       Text="Notification message"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       Foreground="White"/>
            
            <!-- Action Button -->
            <Button x:Name="ActionButton" Grid.Column="2" 
                    Content="Action"
                    Visibility="Collapsed"
                    Background="Transparent"
                    Foreground="White"
                    BorderBrush="White"
                    BorderThickness="1"
                    Padding="10,4"
                    Margin="10,0"
                    Cursor="Hand"
                    Click="Action_Click"/>
            
            <!-- Close Button -->
            <Button x:Name="CloseButton" Grid.Column="3" 
                    Content="âœ•"
                    Background="Transparent"
                    Foreground="White"
                    BorderThickness="0"
                    Width="24" Height="24"
                    Cursor="Hand"
                    Click="Close_Click"/>
        </Grid>
    </Border>
</UserControl>
