<Window x:Class="PlatypusTools.UI.Views.RecentWorkspacesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recent Workspaces" Height="300" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox x:Name="List" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Width="90" Margin="4" Click="Open_Click">Open</Button>
            <Button Width="90" Margin="4" Click="Remove_Click">Remove</Button>
            <Button Width="90" Margin="4" Click="Close_Click">Close</Button>
        </StackPanel>
    </Grid>
</Window>